@import "../../../shared/styles/guild-theme.wxss";

.guild-page--logs .guild-content {
  gap: 28rpx;
}

.logs-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.logs-header__actions {
  display: flex;
  gap: 16rpx;
}

.logs-list {
  padding: 0;
}

.log-item {
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid rgba(130, 154, 255, 0.16);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.log-item:last-child {
  border-bottom: none;
}

.log-item__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16rpx;
}

.log-item__type {
  font-size: 28rpx;
  font-weight: 600;
  color: #f4f6ff;
}

.log-item__time {
  font-size: 24rpx;
  color: rgba(188, 212, 255, 0.7);
}

.log-item__actor,
.log-item__payload {
  font-size: 24rpx;
  color: rgba(199, 209, 255, 0.78);
  line-height: 1.6;
}

.load-more {
  padding: 24rpx 32rpx 40rpx;
  text-align: center;
}
