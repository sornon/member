@import "../../../shared/styles/guild-theme.wxss";

.guild-page--members .guild-content {
  gap: 28rpx;
}

.guild-summary {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.guild-summary__meta {
  display: flex;
  gap: 24rpx;
  font-size: 24rpx;
  color: rgba(199, 209, 255, 0.72);
}

.guild-summary__role {
  font-size: 26rpx;
  color: rgba(215, 223, 255, 0.92);
}

.members-list {
  padding: 0;
}

.member-item {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid rgba(130, 154, 255, 0.16);
}

.member-item:last-child {
  border-bottom: none;
}

.member-identity {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex: 1.35;
  min-width: 0;
}

.member-portrait {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
}

.member-avatar-wrapper {
  position: relative;
  width: 104rpx;
  height: 104rpx;
  flex-shrink: 0;
}

.member-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.08);
  display: block;
}

.member-avatar-frame {
  position: absolute;
  top: -8%;
  left: -13%;
  width: 130%;
  height: 130%;
  pointer-events: none;
}

.member-identity__info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 6rpx;
  min-width: 0;
}

.member-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #f8f9ff;
  letter-spacing: 1rpx;
  max-width: 420rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.member-title {
  min-height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}

.member-title__image {
  height: 46rpx;
  max-width: 280rpx;
  display: block;
}

.member-meta {
  font-size: 24rpx;
  color: rgba(180, 196, 255, 0.8);
}

.member-stats {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  min-width: 200rpx;
  flex: 0 0 auto;
}

.member-item .btn--small {
  margin-left: auto;
}

.load-more {
  padding: 24rpx 32rpx 40rpx;
  text-align: center;
}
