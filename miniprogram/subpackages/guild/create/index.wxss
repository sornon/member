@import "../../../shared/styles/guild-theme.wxss";

.create-form {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.form-item {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.label {
  font-size: 26rpx;
  color: rgba(199, 209, 255, 0.78);
}

.input,
.textarea {
  background: rgba(10, 18, 46, 0.6);
  border: 1rpx solid rgba(118, 142, 255, 0.3);
  border-radius: 20rpx;
  padding: 24rpx 28rpx;
  font-size: 28rpx;
  color: #f8f9ff;
}

.input::placeholder,
.textarea::placeholder {
  color: rgba(153, 174, 255, 0.6);
}

.textarea {
  min-height: 180rpx;
  line-height: 1.6;
}

.form-hint {
  font-size: 24rpx;
  color: rgba(199, 209, 255, 0.78);
  line-height: 1.6;
}
