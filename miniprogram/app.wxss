page {
  background: #050921;
  color: #e7ecff;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', sans-serif;
  box-sizing: border-box;
}

.container {
  padding: 32rpx;
  padding-bottom: calc(32rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  color: #e7ecff;
}

.card {
  background: rgba(14, 22, 54, 0.92);
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid rgba(119, 138, 230, 0.24);
  box-shadow: 0 18rpx 36rpx rgba(4, 8, 28, 0.55);
  color: #f1f4ff;
  backdrop-filter: blur(12rpx);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #f6f8ff;
  letter-spacing: 2rpx;
}

.primary-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 32rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #566aff, #8a4bff);
  color: #ffffff;
  font-size: 28rpx;
  box-shadow: 0 12rpx 24rpx rgba(30, 24, 84, 0.45);
}

.badge {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  background: rgba(95, 123, 255, 0.24);
  color: #c9d5ff;
  border: 1rpx solid rgba(149, 173, 255, 0.35);
}

.flex {
  display: flex;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  background: rgba(89, 108, 228, 0.24);
  color: #eff1ff;
  margin-right: 16rpx;
  border: 1rpx solid rgba(132, 154, 255, 0.35);
}

.empty-state {
  text-align: center;
  padding: 80rpx 0;
  color: rgba(199, 209, 255, 0.7);
}
