page {
  background: #f5f5f5;
  color: #0f244a;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', sans-serif;
  box-sizing: border-box;
}

.container {
  padding: 32rpx;
  padding-bottom: calc(32rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.card {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 24rpx rgba(15, 36, 74, 0.06);
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #0f244a;
}

.primary-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx 32rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #5b8cff, #8645ff);
  color: #ffffff;
  font-size: 28rpx;
}

.badge {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  background: rgba(91, 140, 255, 0.12);
  color: #5b8cff;
}

.flex {
  display: flex;
}

.flex-between {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.tag {
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  background: #f0f3ff;
  color: #5b5cf1;
  margin-right: 16rpx;
}

.empty-state {
  text-align: center;
  padding: 80rpx 0;
  color: #888;
}
