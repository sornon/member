.pvp-page {
  display: flex;
  flex-direction: column;
  row-gap: 24rpx;
  color: #e7ecff;
}

.pvp-page > .card {
  margin-bottom: 0;
}

.pvp-debug-link {
  background: rgba(66, 184, 131, 0.12);
  border: 1rpx solid rgba(66, 184, 131, 0.35);
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  word-break: break-all;
}

.pvp-debug-link__label {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 12rpx;
}

.pvp-debug-link__value {
  font-size: 26rpx;
  line-height: 1.4;
}

.pvp-state,
.pvp-empty {
  text-align: center;
  color: rgba(231, 236, 255, 0.85);
  font-size: 26rpx;
}

.pvp-header {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.tier-badge {
  border: 2rpx solid rgba(255, 255, 255, 0.45);
  border-radius: 20rpx;
  padding: 16rpx 24rpx;
  display: inline-flex;
  flex-direction: column;
  align-items: flex-start;
  background: rgba(255, 255, 255, 0.08);
}

.tier-badge__name {
  font-size: 32rpx;
  font-weight: 600;
}

.tier-badge__score {
  margin-top: 8rpx;
  font-size: 28rpx;
  opacity: 0.85;
}

.pvp-stats {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 12rpx;
  margin-top: 24rpx;
}

.stat-item {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 16rpx;
  text-align: center;
}

.stat-item__label {
  display: block;
  font-size: 24rpx;
  opacity: 0.7;
}

.stat-item__value {
  margin-top: 8rpx;
  font-size: 32rpx;
  font-weight: 600;
}

.pvp-actions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.pvp-button {
  background: linear-gradient(135deg, #5b8bff 0%, #7d53ff 100%);
  color: #fff;
  border: none;
  border-radius: 28rpx;
  padding: 20rpx 0;
  font-size: 30rpx;
  font-weight: 600;
}

.pvp-button[disabled] {
  opacity: 0.6;
}

.pvp-banner {
  background: linear-gradient(135deg, rgba(255, 215, 0, 0.15), rgba(255, 215, 0, 0.05));
  border: 1rpx solid rgba(255, 215, 0, 0.35);
  border-radius: 20rpx;
  padding: 24rpx;
}

.pvp-banner--challenge {
  background: rgba(255, 99, 71, 0.18);
  border-color: rgba(255, 99, 71, 0.5);
}

.pvp-banner__text {
  font-size: 28rpx;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.pvp-banner__actions {
  display: flex;
  gap: 16rpx;
}

.pvp-banner__btn {
  background: rgba(255, 255, 255, 0.2);
  color: #fff;
  border: none;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
}

.pvp-banner__btn--ghost {
  background: transparent;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
}

.pvp-leaderboard,
.pvp-section,
.pvp-history {
  display: flex;
  flex-direction: column;
}

.pvp-invite-card,
.pvp-battle-card {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.pvp-invite-card__title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.pvp-invite-card__meta {
  font-size: 24rpx;
  opacity: 0.8;
  margin-bottom: 8rpx;
}

.pvp-invite-card__tips {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.pvp-battle-card__header {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.pvp-battle-card__row {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

.pvp-battle-card__label {
  opacity: 0.7;
}

.pvp-section__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.pvp-section__title {
  font-size: 32rpx;
  font-weight: 600;
}

.pvp-section__link {
  font-size: 24rpx;
  color: #8bbcff;
}

.pvp-section__link:active {
  opacity: 0.7;
}

.match-card {
  background: rgba(255, 255, 255, 0.04);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 12rpx;
}

.match-card__row {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
}

.match-card__opponent {
  font-weight: 500;
}

.match-card__result {
  color: #ffce6b;
}

.match-card__meta {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.history-card__title {
  font-size: 28rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.history-card__row {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  margin-bottom: 6rpx;
}

.history-card__label {
  opacity: 0.7;
}

.history-card__value {
  font-weight: 500;
}

.pvp-history .history-card {
  background: rgba(255, 255, 255, 0.04);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.pvp-history .history-card:last-child {
  margin-bottom: 0;
}

.mini-board-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.04);
  border-radius: 16rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 12rpx;
}

.mini-board-rank {
  width: 52rpx;
  text-align: center;
  font-size: 30rpx;
  color: #ffd369;
  font-weight: 600;
}

.mini-board-name {
  flex: 1;
  margin-left: 16rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.mini-board-score {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}
