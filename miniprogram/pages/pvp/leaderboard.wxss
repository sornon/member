
.pvp-board {
  display: flex;
  flex-direction: column;
  row-gap: 24rpx;
  color: #e7ecff;
}

.pvp-board > .card {
  margin-bottom: 0;
}

.board-state {
  text-align: center;
  color: rgba(231, 236, 255, 0.85);
  font-size: 26rpx;
}

.board-card {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.board-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.board-season {
  font-size: 32rpx;
  font-weight: 600;
}

.board-updated {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.board-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.06);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.board-rank {
  width: 60rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  color: #ffd369;
}

.board-avatar {
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  margin: 0 20rpx;
  background: rgba(255, 255, 255, 0.1);
}

.board-avatar--placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.9);
}

.board-info {
  flex: 1;
}

.board-name {
  font-size: 30rpx;
  font-weight: 600;
}

.board-meta {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 6rpx;
}

.board-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-left: 12rpx;
}

.board-action {
  background: linear-gradient(135deg, #5b8bff 0%, #7d53ff 100%);
  color: #fff;
  border: none;
  border-radius: 24rpx;
  padding: 0 24rpx;
}

.board-action--ghost {
  background: transparent;
  border: 2rpx solid rgba(255, 255, 255, 0.4);
}
