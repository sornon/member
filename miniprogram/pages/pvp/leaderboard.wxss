
.pvp-board {
  display: flex;
  flex-direction: column;
  row-gap: 24rpx;
  color: #e7ecff;
}

.pvp-board > .card {
  margin-bottom: 0;
}

.board-state {
  text-align: center;
  color: rgba(231, 236, 255, 0.85);
  font-size: 26rpx;
}

.board-card {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.board-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.board-season {
  font-size: 32rpx;
  font-weight: 600;
}

.board-updated {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
}

.board-self {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx;
  border-radius: 24rpx;
  background: linear-gradient(135deg, rgba(91, 139, 255, 0.25), rgba(125, 83, 255, 0.18));
  border: 2rpx solid rgba(123, 159, 255, 0.35);
  box-shadow: 0 20rpx 32rpx rgba(3, 9, 32, 0.45);
}

.board-self__label {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.85);
}

.board-self__value {
  font-size: 34rpx;
  font-weight: 600;
  color: #ffd369;
}

.board-self--unranked {
  background: rgba(255, 255, 255, 0.06);
  border: 2rpx dashed rgba(255, 255, 255, 0.25);
  box-shadow: none;
}

.board-self--unranked .board-self__value {
  color: rgba(255, 255, 255, 0.8);
}

.board-item {
  display: flex;
  align-items: center;
  background: rgba(255, 255, 255, 0.06);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.board-rank {
  width: 60rpx;
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
  color: #ffd369;
}

.board-tier {
  margin-left: 12rpx;
  margin-right: 24rpx;
  padding: 6rpx 22rpx;
  border-radius: 999rpx;
  background: rgba(255, 255, 255, 0.12);
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.92);
  line-height: 1.5;
  text-align: center;
  flex-shrink: 0;
  white-space: nowrap;
}

.board-avatar-wrapper {
  position: relative;
  width: 88rpx;
  height: 88rpx;
  margin: 0 20rpx 0 0;
  flex-shrink: 0;
}

.board-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
  overflow: hidden;
  display: block;
}

.board-avatar--placeholder {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: rgba(255, 255, 255, 0.9);
}

.board-avatar-frame {
  position: absolute;
  top: -15%;
  left: -15%;
  width: 130%;
  height: 130%;
  pointer-events: none;
}

.board-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  min-width: 0;
}

.board-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.board-title {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
  margin-top: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.board-actions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  margin-left: 12rpx;
  justify-content: center;
  align-items: stretch;
}

.board-action {
  background: linear-gradient(135deg, #5b8bff 0%, #7d53ff 100%);
  color: #fff;
  border: none;
  border-radius: 24rpx;
  padding: 0 24rpx;
}

