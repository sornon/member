.archive-page {
  position: relative;
  min-height: 100vh;
  background-color: #050921;
  color: #f5f7ff;
  overflow: hidden;
}

.background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}

.background-layer {
  opacity: 0;
  transition: opacity 0.6s ease;
}

.background-layer--visible {
  opacity: 1;
}

.background--fallback {
  z-index: 1;
  opacity: 1;
}

.background-fallback__image {
  width: 100%;
  height: 100%;
}

.background--video {
  z-index: 2;
}

.background-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.background--overlay {
  background: linear-gradient(180deg, rgba(5, 9, 33, 0.85), rgba(5, 9, 33, 0.95));
  z-index: 3;
  opacity: 1;
}

.mist-layer {
  position: absolute;
  width: 120%;
  height: 120%;
  top: -10%;
  left: -10%;
  background: radial-gradient(circle at center, rgba(86, 110, 210, 0.18), transparent 65%);
  filter: blur(40rpx);
  z-index: 4;
}

.mist-layer--one {
  animation: mistDrift 16s infinite linear;
}

.mist-layer--two {
  animation: mistDrift 24s infinite linear reverse;
}

@keyframes mistDrift {
  0% {
    transform: translate3d(-5%, 0, 0) scale(1.1);
  }
  50% {
    transform: translate3d(5%, -2%, 0) scale(1.05);
  }
  100% {
    transform: translate3d(-5%, 0, 0) scale(1.1);
  }
}

.archive-content {
  position: relative;
  z-index: 10;
  padding: 32rpx 32rpx 48rpx;
  box-sizing: border-box;
}

.archive-state {
  margin-top: 200rpx;
  text-align: center;
  font-size: 30rpx;
  color: rgba(245, 247, 255, 0.8);
}

.archive-state--error {
  color: #ff9aa5;
}

.archive-scroll {
  height: calc(100vh - 160rpx);
  box-sizing: border-box;
}

.archive-hero {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: stretch;
  gap: 32rpx;
  margin-bottom: 48rpx;
}

.archive-profile-card {
  flex: 1;
  background: rgba(15, 22, 54, 0.72);
  border: 1px solid rgba(122, 146, 255, 0.25);
  border-radius: 28rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(12, 18, 48, 0.35);
  display: flex;
  flex-direction: row;
  align-items: stretch;
  gap: 28rpx;
}

.profile-avatar-wrapper {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  flex-shrink: 0;
}

.profile-avatar {
  width: 100%;
  height: 100%;
  border-radius: 36rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.18);
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.35);
}

.profile-avatar-frame {
  position: absolute;
  top: -16rpx;
  left: -16rpx;
  width: calc(100% + 32rpx);
  height: calc(100% + 32rpx);
  pointer-events: none;
}

.profile-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.profile-name {
  font-size: 40rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #ffffff;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.profile-meta {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 20rpx;
}

.profile-meta__title-image {
  height: 48rpx;
}

.profile-meta__tier {
  border: 2rpx solid rgba(122, 146, 255, 0.6);
  border-radius: 20rpx;
  padding: 8rpx 20rpx;
  display: flex;
  flex-direction: column;
  line-height: 1.3;
  background: rgba(86, 110, 210, 0.12);
  color: #f5f7ff;
}

.profile-meta__tier-name {
  font-size: 26rpx;
  font-weight: 500;
}

.profile-meta__tier-points {
  font-size: 22rpx;
  opacity: 0.8;
}

.profile-record {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: rgba(245, 247, 255, 0.75);
}

.profile-other {
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 12rpx;
  flex-shrink: 0;
  min-width: 200rpx;
  font-size: 26rpx;
  color: rgba(245, 247, 255, 0.85);
}

.profile-meta__text {
  white-space: nowrap;
}

.archive-figure {
  width: 320rpx;
  display: flex;
  align-items: flex-start;
  justify-content: flex-end;
}

.archive-figure__image {
  width: 100%;
  filter: drop-shadow(0 16rpx 32rpx rgba(0, 0, 0, 0.35));
}

.archive-panel {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
}

.panel-card {
  background: rgba(15, 22, 54, 0.75);
  border: 1px solid rgba(122, 146, 255, 0.2);
  border-radius: 28rpx;
  padding: 28rpx 32rpx;
  box-shadow: 0 12rpx 32rpx rgba(12, 18, 48, 0.28);
}

.panel-header {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #ffffff;
}

.attribute-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 20rpx 24rpx;
}

.attribute-cell {
  background: rgba(86, 110, 210, 0.12);
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.attribute-label {
  font-size: 24rpx;
  color: rgba(245, 247, 255, 0.75);
}

.attribute-value {
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
}

.combat-grid {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 20rpx;
}

.combat-cell {
  background: rgba(86, 110, 210, 0.12);
  border-radius: 20rpx;
  padding: 20rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.combat-label {
  font-size: 24rpx;
  color: rgba(245, 247, 255, 0.7);
}

.combat-value {
  font-size: 30rpx;
  font-weight: 600;
  color: #ffffff;
}

@media (max-width: 750rpx) {
  .archive-hero {
    flex-direction: column;
  }

  .archive-figure {
    width: 100%;
    justify-content: center;
  }

  .combat-grid {
    grid-template-columns: repeat(2, minmax(0, 1fr));
  }
}
