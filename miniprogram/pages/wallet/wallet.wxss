.balance {
  font-size: 44rpx;
  font-weight: 700;
  color: #f7f9ff;
}

.meta {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: rgba(198, 208, 255, 0.78);
}

.wine-total {
  font-size: 28rpx;
  color: #f6f8ff;
  margin-bottom: 16rpx;
}

.wine-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.wine-item {
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  background: rgba(10, 20, 64, 0.6);
  border: 1rpx solid rgba(122, 144, 228, 0.32);
}

.wine-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #f8f9ff;
}

.wine-meta {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: rgba(200, 210, 255, 0.72);
}

.wine-empty {
  padding: 24rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: rgba(190, 200, 240, 0.75);
}

.scan {
  margin-top: 20rpx;
  background: rgba(86, 108, 255, 0.24);
  color: #dbe2ff;
  border-radius: 32rpx;
  border: 1rpx solid rgba(146, 164, 255, 0.4);
  padding: 12rpx 32rpx;
  font-size: 24rpx;
}

.disabled-tip {
  margin-top: 16rpx;
  font-size: 26rpx;
  color: rgba(198, 208, 255, 0.78);
  text-align: center;
}

.transaction {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(108, 128, 210, 0.24);
}

.transaction:last-child {
  border-bottom: none;
}

.txn-title {
  font-size: 28rpx;
  color: #f6f7ff;
}

.txn-date {
  font-size: 24rpx;
  color: rgba(186, 196, 255, 0.68);
  margin-top: 6rpx;
}

.txn-remark {
  font-size: 24rpx;
  color: rgba(208, 215, 255, 0.72);
  margin-top: 6rpx;
}

.txn-amount {
  font-size: 28rpx;
  font-weight: 600;
  color: #f6f9ff;
}

.txn-amount.income {
  color: #6ef7a1;
}

.txn-amount.expense {
  color: #ff8484;
}
