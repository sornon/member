.balance {
  font-size: 44rpx;
  font-weight: 700;
  color: #f7f9ff;
}

.meta {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: rgba(198, 208, 255, 0.78);
}

.wine-total {
  font-size: 28rpx;
  color: #f6f8ff;
  margin-bottom: 16rpx;
}

.wine-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.wine-item {
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  background: rgba(10, 20, 64, 0.6);
  border: 1rpx solid rgba(122, 144, 228, 0.32);
}

.wine-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #f8f9ff;
}

.wine-meta {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: rgba(200, 210, 255, 0.72);
}

.wine-empty {
  padding: 24rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: rgba(190, 200, 240, 0.75);
}

.scan {
  margin-top: 20rpx;
  background: rgba(86, 108, 255, 0.24);
  color: #dbe2ff;
  border-radius: 32rpx;
  border: 1rpx solid rgba(146, 164, 255, 0.4);
  padding: 12rpx 32rpx;
  font-size: 24rpx;
}

.presets {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.preset {
  padding: 16rpx 32rpx;
  border-radius: 999rpx;
  background: rgba(20, 32, 86, 0.82);
  color: #d8e0ff;
  font-size: 26rpx;
  border: 1rpx solid rgba(119, 138, 230, 0.32);
}

.preset.active {
  background: linear-gradient(135deg, #566aff, #8a4bff);
  color: #ffffff;
  box-shadow: 0 12rpx 24rpx rgba(30, 24, 84, 0.45);
}

.input-box {
  margin-bottom: 24rpx;
  background: rgba(14, 22, 54, 0.88);
  border-radius: 16rpx;
  padding: 16rpx 24rpx;
  border: 1rpx solid rgba(108, 128, 210, 0.32);
}

.input-box input {
  width: 100%;
  font-size: 32rpx;
  color: #f1f5ff;
}

.transaction {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(108, 128, 210, 0.24);
}

.transaction:last-child {
  border-bottom: none;
}

.txn-title {
  font-size: 28rpx;
  color: #f6f7ff;
}

.txn-date {
  font-size: 24rpx;
  color: rgba(186, 196, 255, 0.68);
  margin-top: 6rpx;
}

.txn-remark {
  font-size: 24rpx;
  color: rgba(208, 215, 255, 0.72);
  margin-top: 6rpx;
}

.txn-amount {
  font-size: 28rpx;
  font-weight: 600;
  color: #f6f9ff;
}

.txn-amount.income {
  color: #6ef7a1;
}

.txn-amount.expense {
  color: #ff8484;
}

.recharge-disabled {
  padding: 36rpx 24rpx;
  border-radius: 20rpx;
  background: rgba(12, 20, 54, 0.72);
  border: 1rpx dashed rgba(149, 168, 255, 0.38);
  color: rgba(210, 220, 255, 0.86);
  font-size: 26rpx;
  text-align: center;
  line-height: 1.6;
}
