.avatar-preview {
  text-align: center;
  margin-bottom: 32rpx;
}

.avatar-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 0 auto 16rpx;
  background: linear-gradient(135deg, rgba(86, 104, 255, 0.35), rgba(168, 80, 255, 0.38));
  display: flex;
  align-items: center;
  justify-content: center;
  color: #f7f8ff;
  font-weight: 600;
  border: 1rpx solid rgba(154, 176, 255, 0.45);
}

.avatar-desc {
  font-size: 24rpx;
  color: rgba(204, 214, 255, 0.75);
}

.category-tabs {
  display: flex;
  overflow-x: auto;
  margin-bottom: 24rpx;
}

.tab {
  padding: 16rpx 24rpx;
  background: rgba(20, 32, 86, 0.82);
  border-radius: 999rpx;
  margin-right: 16rpx;
  font-size: 26rpx;
  color: rgba(209, 218, 255, 0.78);
  white-space: nowrap;
  border: 1rpx solid rgba(119, 138, 230, 0.32);
}

.tab.active {
  background: linear-gradient(135deg, #566aff, #8a4bff);
  color: #ffffff;
  box-shadow: 0 12rpx 24rpx rgba(30, 24, 84, 0.45);
}

.assets {
  margin-bottom: 24rpx;
}

.asset-card {
  border: 1rpx solid rgba(119, 138, 230, 0.28);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  background: rgba(14, 22, 54, 0.92);
  box-shadow: 0 14rpx 28rpx rgba(4, 8, 28, 0.45);
  color: #f1f4ff;
}

.asset-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #f7f9ff;
}

.asset-desc {
  font-size: 24rpx;
  color: rgba(205, 215, 255, 0.78);
  margin-top: 8rpx;
  line-height: 1.6;
}

.asset-meta {
  font-size: 22rpx;
  color: rgba(190, 200, 255, 0.68);
  margin-top: 8rpx;
}

.asset-action {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #6ef7a1;
  font-weight: 600;
}
