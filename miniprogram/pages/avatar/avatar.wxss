.avatar-preview {
  text-align: center;
  margin-bottom: 32rpx;
}

.avatar-circle {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  margin: 0 auto 16rpx;
  background: linear-gradient(135deg, #fee2ff, #c3dafe);
  display: flex;
  align-items: center;
  justify-content: center;
  color: #4c1d95;
  font-weight: 600;
}

.avatar-desc {
  font-size: 24rpx;
  color: #6d758c;
}

.category-tabs {
  display: flex;
  overflow-x: auto;
  margin-bottom: 24rpx;
}

.tab {
  padding: 16rpx 24rpx;
  background: #f1f5f9;
  border-radius: 999rpx;
  margin-right: 16rpx;
  font-size: 26rpx;
  color: #334155;
  white-space: nowrap;
}

.tab.active {
  background: linear-gradient(135deg, #5b8cff, #8645ff);
  color: #ffffff;
}

.assets {
  margin-bottom: 24rpx;
}

.asset-card {
  border: 1rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  background: #ffffff;
}

.asset-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #0f244a;
}

.asset-desc {
  font-size: 24rpx;
  color: #6d758c;
  margin-top: 8rpx;
}

.asset-meta {
  font-size: 22rpx;
  color: #94a3b8;
  margin-top: 8rpx;
}

.asset-action {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #16a34a;
}
