.right-item {
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(108, 128, 210, 0.28);
}

.right-item:last-child {
  border-bottom: none;
}

.right-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.right-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #f6f8ff;
}

.status {
  font-size: 24rpx;
  padding: 8rpx 16rpx;
  border-radius: 16rpx;
  background: rgba(20, 32, 86, 0.85);
  color: #d7deff;
  border: 1rpx solid rgba(128, 148, 236, 0.45);
}

.status.active {
  background: rgba(86, 108, 255, 0.28);
  color: #cfd6ff;
  border-color: rgba(151, 170, 255, 0.5);
}

.status.used {
  background: rgba(255, 199, 111, 0.18);
  color: #ffdca1;
  border-color: rgba(255, 205, 128, 0.35);
}

.status.expired {
  background: rgba(217, 82, 90, 0.18);
  color: #ffb0ba;
  border-color: rgba(235, 110, 120, 0.4);
}

.right-desc {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: rgba(205, 215, 255, 0.75);
  line-height: 1.6;
}

.right-footer {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: rgba(191, 203, 255, 0.7);
}
