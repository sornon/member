page {
  background: #f4f6fb;
  min-height: 100%;
}

.page {
  padding-top: 120rpx;
  min-height: 100%;
}

.loading {
  padding: 200rpx 0;
  text-align: center;
  color: #6d748d;
  font-size: 28rpx;
}

.scroll-container {
  height: calc(100vh - 120rpx);
  padding: 0 32rpx 48rpx;
  box-sizing: border-box;
}

.section-card {
  background: #ffffff;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 18rpx 36rpx rgba(43, 55, 95, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1b1f36;
}

.section-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  border-radius: 999rpx;
  padding: 0 28rpx;
}

.level-line {
  display: flex;
  justify-content: space-between;
  color: #59617c;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.progress-bar {
  position: relative;
  background: #e8ecf6;
  border-radius: 999rpx;
  height: 16rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.progress-fill {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  background: linear-gradient(90deg, #6a5dff, #9f7bff);
  border-radius: 999rpx;
}

.attr-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 24rpx;
}

.attr-item {
  background: #f7f8ff;
  border-radius: 20rpx;
  padding: 24rpx;
}

.attr-label {
  font-size: 26rpx;
  color: #6b7391;
}

.attr-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #3942d5;
  margin: 12rpx 0;
}

.attr-detail {
  font-size: 22rpx;
  color: #8c94b0;
}

.attr-extra {
  margin-top: 28rpx;
  display: flex;
  justify-content: space-between;
  color: #5a6285;
  font-size: 24rpx;
}

.slot-list {
  display: flex;
  gap: 24rpx;
  flex-wrap: wrap;
}

.slot {
  flex: 1 1 220rpx;
  min-width: 220rpx;
  background: #f8f9fd;
  border-radius: 24rpx;
  padding: 24rpx;
}

.slot-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #38405f;
  margin-bottom: 16rpx;
}

.slot-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.slot-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2653;
  padding-bottom: 8rpx;
  border-bottom: 4rpx solid #7c89ff;
}

.slot-meta {
  font-size: 22rpx;
  color: #7880a4;
}

.slot-stats text {
  display: block;
  font-size: 22rpx;
  color: #656d90;
}

.slot-empty {
  font-size: 24rpx;
  color: #a0a6bf;
}

.inventory-title {
  margin: 32rpx 0 16rpx;
  font-size: 26rpx;
  color: #5a6285;
  font-weight: 600;
}

.equipment-item {
  border: 1rpx solid #e3e7f4;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.equipment-head {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 600;
}

.equipment-desc {
  margin: 12rpx 0;
  color: #606887;
  font-size: 24rpx;
}

.equipment-stats text {
  display: inline-block;
  margin-right: 12rpx;
  margin-bottom: 4rpx;
  font-size: 22rpx;
  color: #4f5782;
}

.equipment-actions {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.equipment-refine {
  font-size: 22rpx;
  color: #7a81a0;
}

.skill-slots {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.skill-slot {
  flex: 1 1 240rpx;
  background: #f6f7fe;
  border-radius: 24rpx;
  padding: 24rpx;
}

.slot-index {
  font-size: 24rpx;
  color: #70789a;
  margin-bottom: 12rpx;
}

.skill-detail {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.skill-name {
  font-size: 28rpx;
  font-weight: 700;
}

.skill-effects text {
  display: block;
  font-size: 22rpx;
  color: #616992;
}

.skill-item {
  border: 1rpx solid #e0e5f5;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.skill-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.skill-desc {
  color: #5f678a;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.skill-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #7a81a0;
}

.enemy-card {
  border: 1rpx solid #e3e6f4;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, rgba(111, 125, 255, 0.08), rgba(152, 199, 255, 0.08));
}

.enemy-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.enemy-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #232a5c;
}

.enemy-difficulty {
  font-size: 24rpx;
  color: #6b73a5;
}

.enemy-desc {
  font-size: 24rpx;
  color: #5d6488;
  margin: 8rpx 0 12rpx;
}

.enemy-meta,
.enemy-reward {
  font-size: 22rpx;
  color: #6b7396;
  margin-bottom: 8rpx;
}

.enemy-action {
  margin-top: 8rpx;
}

.battle-summary {
  font-size: 30rpx;
  font-weight: 700;
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
  margin-bottom: 12rpx;
}

.battle-win {
  background: rgba(76, 175, 80, 0.12);
  color: #2d7a37;
}

.battle-draw {
  background: rgba(255, 193, 7, 0.12);
  color: #b27b00;
}

.battle-lose {
  background: rgba(244, 67, 54, 0.12);
  color: #a12020;
}

.battle-reward {
  font-size: 24rpx;
  color: #5a6285;
  margin-bottom: 12rpx;
}

.battle-log text {
  display: block;
  font-size: 22rpx;
  color: #6b7398;
  margin-bottom: 6rpx;
}

.history-item {
  padding: 16rpx 0;
  border-bottom: 1rpx dashed #e4e7f3;
}

.history-item:last-child {
  border-bottom: none;
}

.history-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #3b4265;
}

.history-desc {
  font-size: 22rpx;
  color: #70779a;
  margin-top: 6rpx;
}

.history-header {
  margin-top: 20rpx;
}
