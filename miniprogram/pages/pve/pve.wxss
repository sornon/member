page {
  background: #f4f6fb;
  min-height: 100%;
}

.page {
  padding-top: 120rpx;
  min-height: 100%;
  display: flex;
  flex-direction: column;
}

.loading {
  padding: 200rpx 0;
  text-align: center;
  color: #6d748d;
  font-size: 28rpx;
}

.scroll-container {
  height: calc(100vh - 200rpx);
  padding: 0 32rpx 48rpx;
  box-sizing: border-box;
}

.section-card {
  background: #ffffff;
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 18rpx 36rpx rgba(43, 55, 95, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #1b1f36;
}

.enemy-card {
  border: 1rpx solid #e3e6f4;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, rgba(111, 125, 255, 0.08), rgba(152, 199, 255, 0.08));
}

.enemy-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.enemy-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #232a5c;
}

.enemy-difficulty {
  font-size: 24rpx;
  color: #6b73a5;
}

.enemy-desc {
  font-size: 24rpx;
  color: #5d6488;
  margin: 8rpx 0 12rpx;
}

.enemy-meta,
.enemy-reward {
  font-size: 22rpx;
  color: #6b7396;
  margin-bottom: 8rpx;
}

.enemy-action {
  margin-top: 8rpx;
}

.battle-summary {
  font-size: 30rpx;
  font-weight: 700;
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
  margin-bottom: 12rpx;
}

.battle-win {
  background: rgba(76, 175, 80, 0.12);
  color: #2d7a37;
}

.battle-draw {
  background: rgba(255, 193, 7, 0.12);
  color: #b27b00;
}

.battle-lose {
  background: rgba(244, 67, 54, 0.12);
  color: #a12020;
}

.battle-reward {
  font-size: 24rpx;
  color: #5a6285;
  margin-bottom: 12rpx;
}

.battle-log text {
  display: block;
  font-size: 22rpx;
  color: #6b7398;
  margin-bottom: 6rpx;
}

.history-item {
  padding: 16rpx 0;
  border-bottom: 1rpx dashed #e4e7f3;
}

.history-item:last-child {
  border-bottom: none;
}

.history-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #3b4265;
}

.history-desc {
  font-size: 22rpx;
  color: #70779a;
  margin-top: 6rpx;
}

.empty-card {
  background: transparent;
  text-align: center;
  margin: 16rpx 0 32rpx;
}

.empty-tip {
  text-align: center;
  color: #8c94b0;
  font-size: 24rpx;
  padding: 12rpx 0;
}
