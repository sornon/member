page {
  background: #050921;
  min-height: 100%;
}

.page {
  padding: 32rpx;
  padding-bottom: calc(48rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  color: #e7ecff;
}

.loading {
  padding: 200rpx 0;
  text-align: center;
  color: rgba(189, 201, 255, 0.75);
  font-size: 28rpx;
}

.scroll-container {
  flex: 1;
  padding-bottom: calc(32rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.section-card {
  background: rgba(14, 22, 54, 0.92);
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 18rpx 36rpx rgba(4, 8, 28, 0.55);
  border: 1rpx solid rgba(119, 138, 230, 0.28);
  color: #f1f4ff;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #f7f8ff;
}

.enemy-card {
  border: 1rpx solid rgba(119, 138, 230, 0.28);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, rgba(86, 104, 255, 0.2), rgba(126, 192, 255, 0.14));
  color: #f1f4ff;
}

.enemy-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8rpx;
}

.enemy-name {
  font-size: 30rpx;
  font-weight: 700;
  color: #f8faff;
}

.enemy-difficulty {
  font-size: 24rpx;
  color: rgba(195, 207, 255, 0.82);
}

.enemy-desc {
  font-size: 24rpx;
  color: rgba(207, 217, 255, 0.78);
  margin: 8rpx 0 12rpx;
  line-height: 1.6;
}

.enemy-meta,
.enemy-reward {
  font-size: 22rpx;
  color: rgba(198, 208, 255, 0.72);
  margin-bottom: 8rpx;
}

.enemy-action {
  margin-top: 8rpx;
}

.battle-summary {
  font-size: 30rpx;
  font-weight: 700;
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
  margin-bottom: 12rpx;
}

.battle-win {
  background: rgba(52, 199, 89, 0.24);
  color: #c6ffd9;
}

.battle-draw {
  background: rgba(255, 193, 7, 0.22);
  color: #ffe9ae;
}

.battle-lose {
  background: rgba(244, 67, 54, 0.22);
  color: #ffc0c0;
}

.battle-reward {
  font-size: 24rpx;
  color: rgba(210, 220, 255, 0.75);
  margin-bottom: 12rpx;
}

.battle-log text {
  display: block;
  font-size: 22rpx;
  color: rgba(194, 205, 255, 0.72);
  margin-bottom: 6rpx;
}

.history-item {
  padding: 16rpx 0;
  border-bottom: 1rpx dashed rgba(119, 138, 230, 0.28);
}

.history-item:last-child {
  border-bottom: none;
}

.history-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #f4f6ff;
}

.history-desc {
  font-size: 22rpx;
  color: rgba(198, 208, 255, 0.68);
  margin-top: 6rpx;
}

.empty-card {
  background: transparent;
  text-align: center;
  margin: 16rpx 0 32rpx;
  color: rgba(203, 213, 255, 0.72);
}

.empty-tip {
  text-align: center;
  color: rgba(203, 213, 255, 0.68);
  font-size: 24rpx;
  padding: 12rpx 0;
}
