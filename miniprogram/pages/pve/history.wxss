page {
  background: #050921;
  min-height: 100%;
}

.page {
  padding: 32rpx;
  padding-bottom: calc(48rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  color: #e7ecff;
}

.state-card {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  color: rgba(203, 213, 255, 0.75);
  font-size: 28rpx;
}

.scroll-container {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 28rpx;
  padding-bottom: calc(32rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.card {
  background: rgba(14, 22, 54, 0.92);
  border-radius: 28rpx;
  padding: 32rpx;
  box-shadow: 0 18rpx 36rpx rgba(4, 8, 28, 0.55);
  border: 1rpx solid rgba(119, 138, 230, 0.28);
  color: #f1f4ff;
}

.summary-card {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.summary-result {
  font-size: 36rpx;
  font-weight: 700;
}

.summary-meta {
  font-size: 24rpx;
  color: rgba(207, 217, 255, 0.78);
}

.admin-section {
  margin-top: 8rpx;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  background: rgba(5, 12, 34, 0.78);
  border: 1rpx solid rgba(119, 138, 230, 0.18);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.admin-section-title {
  font-size: 22rpx;
  color: rgba(207, 217, 255, 0.72);
  letter-spacing: 1rpx;
}

.admin-section-subtitle {
  font-size: 22rpx;
  color: rgba(207, 217, 255, 0.68);
}

.admin-meta-list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx 24rpx;
}

.admin-meta-item {
  font-size: 22rpx;
  color: rgba(198, 208, 255, 0.72);
}

.admin-stat-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 14rpx 24rpx;
}

.admin-stat-item {
  display: flex;
  justify-content: space-between;
  gap: 12rpx;
  font-size: 22rpx;
  color: rgba(214, 221, 255, 0.82);
}

.admin-stat-special {
  color: rgba(255, 220, 150, 0.88);
}

.admin-stat-label {
  color: rgba(177, 194, 255, 0.82);
}

.admin-stat-special .admin-stat-label {
  color: rgba(255, 236, 188, 0.88);
}

.admin-stat-value {
  flex-shrink: 0;
}

.admin-skill-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.admin-skill-item {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  padding: 12rpx 16rpx;
  border-radius: 12rpx;
  background: rgba(10, 18, 42, 0.6);
  border: 1rpx solid rgba(119, 138, 230, 0.16);
}

.admin-skill-name {
  font-size: 24rpx;
  font-weight: 600;
  color: rgba(235, 240, 255, 0.92);
}

.admin-skill-meta {
  font-size: 20rpx;
  color: rgba(189, 202, 255, 0.7);
}

.admin-skill-desc {
  font-size: 20rpx;
  color: rgba(198, 208, 255, 0.76);
  line-height: 1.5;
}

.admin-skill-highlights {
  display: flex;
  flex-wrap: wrap;
  gap: 6rpx;
}

.admin-skill-highlight {
  font-size: 20rpx;
  color: rgba(255, 238, 193, 0.82);
  background: rgba(64, 56, 32, 0.45);
  border-radius: 8rpx;
  padding: 4rpx 10rpx;
}

.summary-reward {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: rgba(255, 238, 193, 0.9);
}

.watch-button {
  margin-top: 20rpx;
  padding: 18rpx 0;
  border-radius: 999rpx;
  border: none;
  background: linear-gradient(90deg, #7af4ff, #5880ff);
  color: #040714;
  font-size: 26rpx;
  font-weight: 600;
  box-shadow: 0 14rpx 36rpx rgba(32, 56, 128, 0.45);
}

.log-card {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.log-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #f7f8ff;
}

.log-item {
  font-size: 24rpx;
  line-height: 1.6;
  color: rgba(198, 208, 255, 0.82);
  padding: 8rpx 0;
  border-bottom: 1rpx dashed rgba(119, 138, 230, 0.24);
}

.log-item:last-child {
  border-bottom: none;
}

.log-empty {
  font-size: 24rpx;
  color: rgba(198, 208, 255, 0.68);
  text-align: center;
  padding: 40rpx 0;
}
