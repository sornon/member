.logs-page {
  min-height: 100vh;
  background: linear-gradient(180deg, #111827 0%, #020617 100%);
  color: #e2e8f0;
}

.logs-scroll {
  height: 100vh;
  padding: 32rpx 32rpx 64rpx;
  box-sizing: border-box;
}

.state {
  text-align: center;
  padding: 160rpx 40rpx;
  font-size: 30rpx;
  color: #cbd5f5;
}

.state--error {
  color: #fca5a5;
}

.logs-header {
  background: rgba(15, 23, 42, 0.7);
  border-radius: 28rpx;
  padding: 28rpx;
  margin-bottom: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 24rpx 36rpx rgba(2, 6, 23, 0.45);
}

.logs-header__title {
  font-size: 32rpx;
  font-weight: 600;
  color: #f8fafc;
}

.btn {
  border: none;
  border-radius: 999rpx;
  background: rgba(59, 130, 246, 0.2);
  color: #cbd5f5;
  padding: 0 32rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 24rpx;
}

.btn--ghost {
  background: rgba(59, 130, 246, 0.15);
}

.logs-list {
  background: rgba(15, 23, 42, 0.6);
  border-radius: 28rpx;
  padding: 12rpx 0;
  box-shadow: 0 28rpx 40rpx rgba(2, 6, 23, 0.4);
}

.log-item {
  padding: 24rpx 32rpx;
  border-bottom: 1px solid rgba(148, 163, 184, 0.12);
}

.log-item:last-child {
  border-bottom: none;
}

.log-item__header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.log-item__type {
  font-size: 28rpx;
  font-weight: 600;
  color: #f1f5f9;
}

.log-item__time {
  font-size: 22rpx;
  color: #94a3b8;
}

.log-item__actor {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #cbd5f5;
}

.log-item__payload {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #a5b4fc;
  word-break: break-all;
  line-height: 1.6;
}

.empty {
  text-align: center;
  padding: 48rpx 24rpx;
  font-size: 26rpx;
  color: #94a3b8;
}

.load-more {
  padding: 24rpx 32rpx 40rpx;
  text-align: center;
}
