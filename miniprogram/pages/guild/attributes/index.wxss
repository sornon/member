page {
  background: #050921;
  min-height: 100%;
  color: #e7ecff;
}

.guild-page {
  min-height: 100vh;
  padding: 24rpx 32rpx 48rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  color: inherit;
}

.guild-scroll {
  flex: 1;
  min-height: 0;
  box-sizing: border-box;
}

.guild-content {
  display: flex;
  flex-direction: column;
  gap: 28rpx;
  padding-bottom: calc(48rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
}

.state {
  margin-top: 160rpx;
  text-align: center;
  padding: 0 48rpx;
  font-size: 30rpx;
  color: rgba(231, 236, 255, 0.82);
  letter-spacing: 2rpx;
}

.state--error {
  color: #ff9cab;
}

.card {
  background: rgba(14, 22, 54, 0.92);
  border-radius: 24rpx;
  border: 1rpx solid rgba(119, 138, 230, 0.24);
  box-shadow: 0 18rpx 36rpx rgba(4, 8, 28, 0.55);
  padding: 24rpx;
  box-sizing: border-box;
}

.summary-card {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.summary-header {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.summary-title {
  font-size: 34rpx;
  font-weight: 700;
  color: #f8f9ff;
}

.summary-role {
  font-size: 26rpx;
  color: rgba(210, 220, 255, 0.78);
}

.summary-metrics {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 16rpx;
}

.metric {
  background: rgba(20, 30, 76, 0.75);
  border: 1rpx solid rgba(118, 142, 255, 0.28);
  border-radius: 18rpx;
  padding: 18rpx 16rpx;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  box-shadow: inset 0 0 12rpx rgba(10, 18, 56, 0.45);
}

.metric__label {
  font-size: 22rpx;
  color: rgba(200, 212, 255, 0.82);
}

.metric__value {
  font-size: 28rpx;
  font-weight: 700;
  color: #f8f9ff;
}

.progress-row {
  font-size: 24rpx;
  color: rgba(207, 216, 255, 0.82);
}

.attribute-card {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.attribute-header {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.attribute-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #f5f7ff;
}

.attribute-sub {
  font-size: 24rpx;
  color: rgba(211, 221, 255, 0.82);
}

.attribute-meta {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: rgba(193, 204, 255, 0.8);
}

.attribute-progress {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.attribute-progress__bar {
  width: 100%;
  height: 14rpx;
  border-radius: 999rpx;
  background: rgba(64, 78, 136, 0.6);
  overflow: hidden;
}

.attribute-progress__fill {
  height: 100%;
  background: linear-gradient(135deg, #6c8cff, #8a4bff);
  border-radius: 999rpx;
}

.attribute-progress__text {
  font-size: 22rpx;
  color: rgba(210, 220, 255, 0.82);
}

.attribute-actions {
  display: grid;
  grid-template-columns: 1.1fr 1fr 1fr;
  gap: 12rpx;
  align-items: center;
}

.attribute-cost {
  font-size: 22rpx;
  color: rgba(207, 216, 255, 0.78);
  text-align: center;
}

.btn {
  border: none;
  border-radius: 999rpx;
  padding: 0 24rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  color: #f4f6ff;
  background: rgba(86, 106, 255, 0.12);
}

.btn::after {
  display: none;
}

.btn--primary {
  background: linear-gradient(135deg, #566aff, #8a4bff);
  color: #ffffff;
  font-weight: 600;
  box-shadow: 0 12rpx 24rpx rgba(41, 53, 120, 0.45);
}

.btn--ghost {
  background: rgba(86, 106, 255, 0.18);
  color: #d7dcff;
  border: 1rpx solid rgba(132, 154, 255, 0.35);
}

.empty {
  text-align: center;
  padding: 48rpx 24rpx;
  font-size: 26rpx;
  color: rgba(210, 220, 255, 0.75);
}
