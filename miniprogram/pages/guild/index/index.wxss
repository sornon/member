.guild-page {
  padding: 32rpx;
  color: #f8fafc;
  background: linear-gradient(180deg, #0f172a 0%, #1e293b 100%);
  min-height: 100vh;
}
.loading,
.error,
.empty-text {
  text-align: center;
  color: #cbd5f5;
  margin-top: 48rpx;
}
.current-guild {
  background: rgba(30, 41, 59, 0.6);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 48rpx;
  box-shadow: 0 16rpx 32rpx rgba(15, 23, 42, 0.4);
}
.guild-header {
  display: flex;
  flex-direction: row;
  align-items: center;
}
.guild-icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  margin-right: 24rpx;
}
.guild-info {
  flex: 1;
}
.guild-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #e0f2fe;
}
.guild-manifesto {
  display: block;
  margin-top: 8rpx;
  font-size: 26rpx;
  color: #bae6fd;
}
.guild-meta {
  display: block;
  margin-top: 8rpx;
  color: #94a3b8;
  font-size: 24rpx;
}
.guild-actions {
  display: flex;
  flex-direction: row;
  margin-top: 24rpx;
  gap: 24rpx;
}
.guild-actions .primary {
  flex: 1;
  background: linear-gradient(90deg, #38bdf8 0%, #0ea5e9 100%);
  color: #0f172a;
  border-radius: 999rpx;
}
.guild-actions .secondary {
  flex: 1;
  background: rgba(148, 163, 184, 0.2);
  color: #f8fafc;
  border-radius: 999rpx;
}
.leaderboard {
  background: rgba(15, 23, 42, 0.6);
  border-radius: 24rpx;
  padding: 24rpx;
  box-shadow: 0 20rpx 30rpx rgba(15, 23, 42, 0.3);
}
.section-title {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 24rpx;
  color: #f8fafc;
}
.leaderboard-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 16rpx 0;
  border-bottom: 1px solid rgba(148, 163, 184, 0.2);
}
.leaderboard-item:last-child {
  border-bottom: none;
}
.leaderboard-rank {
  width: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #38bdf8;
}
.leaderboard-body {
  flex: 1;
}
.leaderboard-name {
  display: block;
  color: #f1f5f9;
  font-size: 28rpx;
}
.leaderboard-meta {
  display: block;
  color: #94a3b8;
  font-size: 24rpx;
  margin-top: 4rpx;
}
button.join {
  font-size: 24rpx;
  padding: 0 24rpx;
  height: 64rpx;
  line-height: 64rpx;
  border-radius: 999rpx;
  background: rgba(59, 130, 246, 0.2);
  color: #e0f2fe;
}
