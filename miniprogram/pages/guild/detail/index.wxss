.detail-page {
  padding: 48rpx;
  min-height: 100vh;
  background: radial-gradient(circle at top, #1e293b 0%, #0f172a 100%);
  color: #e2e8f0;
}
.loading,
.error {
  text-align: center;
  margin-top: 60rpx;
}
.card {
  background: rgba(15, 23, 42, 0.7);
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 24rpx 40rpx rgba(15, 23, 42, 0.4);
}
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.icon {
  width: 140rpx;
  height: 140rpx;
  border-radius: 32rpx;
  margin-right: 24rpx;
}
.name {
  font-size: 38rpx;
  font-weight: 600;
  color: #bfdbfe;
}
.meta {
  display: block;
  margin-top: 8rpx;
  color: #94a3b8;
}
.manifesto {
  font-size: 26rpx;
  line-height: 1.6;
  color: #cbd5f5;
}
.join {
  margin-top: 48rpx;
  background: linear-gradient(90deg, #60a5fa 0%, #2563eb 100%);
  color: #f8fafc;
  border-radius: 999rpx;
}
