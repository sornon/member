@import "../../../shared/styles/guild-theme.wxss";

.guild-page--detail .guild-content {
  gap: 32rpx;
}

a.btn {
  text-decoration: none;
}

.detail-card {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.card-header {
  display: flex;
  gap: 24rpx;
  align-items: center;
}

.icon {
  width: 120rpx;
  height: 120rpx;
  border-radius: 28rpx;
  background: rgba(18, 28, 68, 0.8);
  border: 1rpx solid rgba(132, 154, 255, 0.35);
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
}

.icon__image {
  width: 100%;
  height: 100%;
}

.icon__placeholder {
  font-size: 48rpx;
}

.info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.name {
  font-size: 34rpx;
  font-weight: 600;
  color: #f8f9ff;
}

.meta {
  font-size: 26rpx;
  color: rgba(199, 209, 255, 0.78);
}

.manifesto {
  font-size: 26rpx;
  line-height: 1.7;
  color: rgba(215, 223, 255, 0.85);
  white-space: pre-wrap;
}
