@import "../../../shared/styles/guild-theme.wxss";

.guild-page--members .guild-content {
  gap: 28rpx;
}

.guild-summary {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.guild-summary__meta {
  display: flex;
  gap: 24rpx;
  font-size: 24rpx;
  color: rgba(199, 209, 255, 0.72);
}

.guild-summary__role {
  font-size: 26rpx;
  color: rgba(215, 223, 255, 0.92);
}

.members-list {
  padding: 0;
}

.member-item {
  display: flex;
  align-items: center;
  gap: 24rpx;
  padding: 24rpx 32rpx;
  border-bottom: 1rpx solid rgba(130, 154, 255, 0.16);
}

.member-item:last-child {
  border-bottom: none;
}

.member-avatar {
  position: relative;
  width: 104rpx;
  height: 104rpx;
}

.member-avatar__image {
  width: 100%;
  height: 100%;
  border-radius: 24rpx;
  border: 1rpx solid rgba(138, 162, 255, 0.35);
}

.member-avatar__frame {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.member-body {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.member-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #f8f9ff;
  letter-spacing: 1rpx;
}

.member-meta {
  font-size: 24rpx;
  color: rgba(180, 196, 255, 0.8);
}

.load-more {
  padding: 24rpx 32rpx 40rpx;
  text-align: center;
}
