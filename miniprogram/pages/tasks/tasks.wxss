.task-card {
  border: 1rpx solid rgba(119, 138, 230, 0.3);
  border-radius: 18rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  background: rgba(15, 22, 54, 0.92);
  box-shadow: 0 14rpx 28rpx rgba(4, 8, 28, 0.45);
  color: #e9edff;
}

.task-info {
  margin-bottom: 16rpx;
}

.task-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #f7f9ff;
}

.task-desc {
  font-size: 24rpx;
  color: rgba(207, 216, 255, 0.82);
  margin-top: 12rpx;
  line-height: 1.6;
}

.task-meta {
  font-size: 22rpx;
  color: rgba(185, 196, 255, 0.7);
  margin-top: 8rpx;
}

.task-action {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.reward {
  font-size: 26rpx;
  color: #7dd9ff;
  font-weight: 600;
}
