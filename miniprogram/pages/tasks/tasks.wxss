.task-card {
  border: 1rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  background: #ffffff;
}

.task-info {
  margin-bottom: 16rpx;
}

.task-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #0f244a;
}

.task-desc {
  font-size: 24rpx;
  color: #6d758c;
  margin-top: 12rpx;
}

.task-meta {
  font-size: 22rpx;
  color: #94a3b8;
  margin-top: 8rpx;
}

.task-action {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.reward {
  font-size: 26rpx;
  color: #2563eb;
}
