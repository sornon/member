.breakthrough-page {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
  background: #01030f;
  color: #fefefe;
}

.breakthrough-video {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.figure-layer {
  position: absolute;
  top: 48%;
  left: 50%;
  transform: translate(-50%, -42%);
  opacity: 0;
  transition: opacity 0.6s ease-out, transform 0.6s ease-out;
  pointer-events: none;
}

.figure-layer--visible {
  opacity: 1;
  transform: translate(-50%, -46%);
}

.figure-layer::after {
  content: '';
  position: absolute;
  top: -6%;
  left: -8%;
  right: -8%;
  bottom: -4%;
  background: rgba(255, 255, 255, 0.65);
  opacity: 0;
  border-radius: 24rpx;
  filter: blur(18rpx);
  pointer-events: none;
  mix-blend-mode: screen;
}

.figure-layer--flashing::after {
  opacity: 0.35;
  animation: figure-flash 0.12s linear infinite;
}

.figure-image {
  width: 560rpx;
  max-width: 82vw;
  filter: drop-shadow(0 24rpx 48rpx rgba(0, 0, 0, 0.6));
  transform-origin: center;
}

.figure-layer--vibrating .figure-image {
  animation: figure-shake 0.08s linear infinite;
}

.success-message {
  position: absolute;
  top: 12%;
  left: 50%;
  transform: translateX(-50%);
  padding: 22rpx 48rpx;
  border-radius: 999rpx;
  background: rgba(18, 8, 42, 0.72);
  box-shadow: 0 18rpx 54rpx rgba(255, 238, 160, 0.45);
  color: #fff7d9;
  font-size: 34rpx;
  letter-spacing: 6rpx;
  opacity: 0;
  transition: opacity 0.4s ease-in;
  pointer-events: none;
}

.success-message--visible {
  opacity: 1;
}

@keyframes figure-shake {
  0% {
    transform: translate3d(-10rpx, 0, 0) scale(1.02);
  }
  25% {
    transform: translate3d(12rpx, -4rpx, 0) scale(1.015);
  }
  50% {
    transform: translate3d(-8rpx, 3rpx, 0) scale(1.03);
  }
  75% {
    transform: translate3d(10rpx, -2rpx, 0) scale(1.02);
  }
  100% {
    transform: translate3d(-10rpx, 1rpx, 0) scale(1.03);
  }
}

@keyframes figure-flash {
  0% {
    opacity: 0.1;
  }
  50% {
    opacity: 0.6;
  }
  100% {
    opacity: 0.1;
  }
}
