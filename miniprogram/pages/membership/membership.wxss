.member-card {
  background: linear-gradient(135deg, #3023ae, #53a0fd);
  color: #ffffff;
}

.current-level {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.progress-bar {
  background: rgba(255, 255, 255, 0.3);
  border-radius: 16rpx;
  height: 16rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background: #ffe57f;
  border-radius: 16rpx;
}

.progress-text {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
}

.level-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eceff9;
}

.level-item:last-child {
  border-bottom: none;
}

.level-rank {
  min-width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  margin-right: 24rpx;
}

.level-info {
  flex: 1;
}

.level-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #0f244a;
}

.level-desc {
  font-size: 24rpx;
  color: #6d758c;
  margin-top: 12rpx;
}

.level-rewards {
  margin-top: 12rpx;
  font-size: 24rpx;
  color: #4d5ef6;
}

.reward-label {
  font-weight: 500;
}

.reward-text {
  margin-right: 16rpx;
}
