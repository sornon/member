.member-card {
  background: linear-gradient(135deg, rgba(86, 104, 255, 0.4), rgba(164, 83, 255, 0.38));
  border: 1rpx solid rgba(154, 176, 255, 0.5);
  color: #ffffff;
}

.current-level {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
  color: #fffbf5;
}

.current-summary {
  font-size: 24rpx;
  color: rgba(241, 245, 255, 0.9);
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.current-stats {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx 24rpx;
  font-size: 24rpx;
  color: rgba(229, 235, 255, 0.92);
  margin-bottom: 20rpx;
}

.stat {
  background: rgba(13, 20, 52, 0.55);
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  border: 1rpx solid rgba(142, 161, 255, 0.45);
}

.progress-bar {
  background: rgba(255, 255, 255, 0.25);
  border-radius: 16rpx;
  height: 16rpx;
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  background: linear-gradient(90deg, #ffe57f, #ffd257);
  border-radius: 16rpx;
}

.progress-text {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: rgba(246, 249, 255, 0.92);
}

.milestone-hint {
  margin-top: 24rpx;
  background: rgba(255, 229, 127, 0.18);
  border-radius: 16rpx;
  padding: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
  color: #fff7d6;
}

.milestone-tag {
  padding: 4rpx 12rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #2b2000;
  background: rgba(255, 255, 255, 0.85);
}

.milestone-text {
  font-size: 24rpx;
  color: #fff4c9;
  line-height: 1.5;
}

.realm-card {
  margin-top: 24rpx;
}

.realm-grid {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.realm-item {
  padding: 24rpx;
  border-radius: 20rpx;
  border: 1rpx solid rgba(112, 134, 230, 0.28);
  background: rgba(11, 18, 45, 0.88);
  color: #e9ecff;
}

.realm-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.realm-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #f6f9ff;
}

.realm-range {
  font-size: 24rpx;
  color: rgba(198, 208, 255, 0.8);
}

.realm-desc {
  font-size: 24rpx;
  color: rgba(205, 215, 255, 0.72);
  line-height: 1.6;
}

.realm-milestone {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #a5b7ff;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
}

.milestone-threshold {
  color: rgba(187, 199, 255, 0.78);
  font-size: 22rpx;
}

.level-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(108, 128, 210, 0.28);
}

.level-item:last-child {
  border-bottom: none;
}

.level-item--milestone {
  background: rgba(62, 74, 150, 0.45);
  border-radius: 20rpx;
  padding: 24rpx;
  margin: 12rpx 0;
  border-bottom: none;
}

.level-rank {
  min-width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  margin-right: 24rpx;
  background: linear-gradient(160deg, rgba(101, 115, 255, 0.75), rgba(146, 88, 255, 0.68));
  border: 1rpx solid rgba(164, 184, 255, 0.5);
}

.rank-realm {
  font-size: 26rpx;
  font-weight: 600;
}

.rank-stage {
  font-size: 22rpx;
  margin-top: 4rpx;
}

.level-info {
  flex: 1;
  color: rgba(223, 230, 255, 0.92);
}

.level-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #f7f8ff;
}

.level-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx 24rpx;
  font-size: 24rpx;
  color: rgba(204, 214, 255, 0.78);
  margin-top: 12rpx;
}

.level-toolbar {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 16rpx;
}

.toggle-past {
  font-size: 24rpx;
  color: #8ea0ff;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(142, 160, 255, 0.6);
  background: rgba(14, 22, 58, 0.6);
}

.toggle-past:active {
  opacity: 0.7;
}

.level-actions-row {
  margin-top: 20rpx;
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.claim-button {
  background: linear-gradient(90deg, #6f7bff, #9b6fff);
  color: #ffffff;
  border: none;
  border-radius: 999rpx;
  padding: 0 32rpx;
}

.claim-button::after {
  border: none;
}

.claim-button.claim-button--disabled {
  background: rgba(110, 122, 180, 0.4);
  color: rgba(230, 236, 255, 0.6);
}

.level-desc {
  font-size: 24rpx;
  color: rgba(207, 216, 255, 0.75);
  margin-top: 12rpx;
  line-height: 1.6;
}

.level-virtual,
.level-milestone,
.level-bonus {
  margin-top: 16rpx;
  font-size: 24rpx;
  line-height: 1.6;
  color: rgba(209, 219, 255, 0.85);
}

.level-virtual {
  color: rgba(196, 208, 255, 0.85);
}

.level-milestone {
  color: #ffb87a;
}

.level-bonus {
  color: #7de7c6;
}

.reward-label {
  font-weight: 600;
  margin-right: 8rpx;
  color: #f9fbff;
}

.reward-list {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx 16rpx;
  margin-top: 8rpx;
}

.reward-text {
  display: inline-block;
}

.reward-type {
  margin-left: 8rpx;
  color: rgba(255, 219, 166, 0.88);
  font-size: 22rpx;
}
