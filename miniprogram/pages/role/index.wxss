page {
  background: #050921;
  min-height: 100%;
}

.page {
  padding: 0 32rpx;
  padding-bottom: calc(48rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  color: #e5ecff;
}

.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 0;
  margin-bottom: 24rpx;
  height: 96rpx;
  box-sizing: border-box;
}

.tab-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  font-size: 28rpx;
  color: rgba(167, 186, 255, 0.72);
  position: relative;
  padding: 20rpx 0;
  transition: color 0.2s ease;
  line-height: 1;
}

.tab-item::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 12rpx;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  border-radius: 999rpx;
  background: transparent;
  transition: background 0.2s ease;
}

.tab-item--active {
  color: #f5f7ff;
  font-weight: 600;
}

.tab-item--active::after {
  background: linear-gradient(90deg, #566aff, #8a4bff);
}

.tab-item--hover {
  color: rgba(212, 222, 255, 0.9);
}

.loading {
  padding: 200rpx 0;
  text-align: center;
  color: rgba(189, 201, 255, 0.75);
  font-size: 28rpx;
}

.scroll-container {
  flex: 1;
  padding-bottom: calc(32rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.section-card {
  background: rgba(15, 25, 60, 0.92);
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 18rpx 36rpx rgba(4, 8, 28, 0.55);
  border: 1rpx solid rgba(90, 118, 255, 0.24);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #f3f6ff;
}

.section-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn,
.pill-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  padding: 16rpx 28rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(108, 136, 255, 0.32);
  background: rgba(60, 88, 190, 0.18);
  color: #e6edff;
  font-size: 24rpx;
  font-weight: 600;
  min-width: 140rpx;
  box-sizing: border-box;
  margin: 0;
  transition: background 0.2s ease, box-shadow 0.2s ease, color 0.2s ease,
    border-color 0.2s ease;
}

.action-btn::after,
.pill-btn::after {
  display: none;
}

.action-btn--hover,
.pill-btn--hover {
  background: rgba(84, 112, 220, 0.28);
  border-color: rgba(138, 162, 255, 0.48);
  color: #f3f6ff;
}

.action-btn--primary,
.pill-btn--primary {
  background: linear-gradient(120deg, rgba(102, 132, 255, 0.95), rgba(140, 91, 255, 0.95));
  border-color: rgba(140, 159, 255, 0.72);
  color: #f7f9ff;
  box-shadow: 0 12rpx 28rpx rgba(88, 110, 230, 0.32);
}

.action-btn--primary-hover,
.pill-btn--primary-hover {
  background: linear-gradient(120deg, rgba(116, 145, 255, 0.98), rgba(150, 100, 255, 0.98));
  border-color: rgba(158, 176, 255, 0.82);
  box-shadow: 0 16rpx 32rpx rgba(96, 120, 240, 0.38);
}

.action-btn--ghost,
.pill-btn--ghost {
  background: rgba(54, 80, 172, 0.2);
  border-color: rgba(115, 142, 255, 0.34);
  color: #dae3ff;
}

button.action-btn[disabled],
button.pill-btn[disabled] {
  opacity: 0.58;
  background: rgba(48, 70, 152, 0.22);
  border-color: rgba(104, 130, 238, 0.24);
  color: rgba(205, 214, 255, 0.68);
  box-shadow: none;
}

.level-line {
  display: flex;
  justify-content: space-between;
  color: rgba(194, 206, 255, 0.75);
  font-size: 24rpx;
  margin-bottom: 0;
  align-items: flex-start;
  gap: 24rpx;
}

.level-stack {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.level-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #f5f7ff;
  display: flex;
  align-items: baseline;
  flex-wrap: wrap;
  gap: 6rpx;
}

.level-realm {
  font-size: 24rpx;
  color: rgba(196, 206, 255, 0.8);
}

.level-next {
  font-size: 22rpx;
  color: rgba(207, 218, 255, 0.78);
}

.attr-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 24rpx;
  margin-top: 0;
}

.attr-item {
  background: rgba(21, 33, 80, 0.86);
  border-radius: 20rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(93, 119, 214, 0.32);
  color: #f1f4ff;
}

.attr-label {
  font-size: 26rpx;
  color: rgba(195, 206, 255, 0.78);
}

.attr-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #d6deff;
  margin: 12rpx 0;
}

.attr-detail {
  font-size: 22rpx;
  color: rgba(204, 214, 255, 0.78);
}

.attr-extra {
  margin-top: 28rpx;
  display: flex;
  justify-content: space-between;
  color: rgba(168, 184, 241, 0.82);
  font-size: 24rpx;
}

.attr-respec {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
  flex-wrap: wrap;
}

.attr-respec__info {
  font-size: 24rpx;
  color: rgba(189, 203, 255, 0.82);
  flex: 1;
}

.attr-respec__button {
  min-width: 150rpx;
}

.subsection-title {
  margin-top: 32rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: rgba(186, 200, 255, 0.82);
}

.combat-grid {
  margin-top: 16rpx;
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 24rpx;
}

.combat-item {
  background: rgba(18, 28, 70, 0.86);
  border-radius: 20rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(86, 112, 210, 0.32);
  color: #eff3ff;
}

.combat-label {
  font-size: 26rpx;
  color: rgba(195, 206, 255, 0.76);
}

.combat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #d6deff;
  margin: 10rpx 0;
}

.combat-detail {
  font-size: 22rpx;
  color: rgba(204, 214, 255, 0.75);
}


.slot-grid {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 16rpx;
}

.slot-card {
  position: relative;
  background: rgba(22, 36, 86, 0.9);
  border-radius: 20rpx;
  padding: 18rpx 16rpx 24rpx;
  border: 1rpx solid rgba(93, 119, 214, 0.36);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  min-height: 196rpx;
  box-sizing: border-box;
}

.slot-card--empty .slot-card__icon {
  color: rgba(167, 186, 255, 0.68);
  border-color: rgba(94, 120, 210, 0.4);
}

.slot-card__header {
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 22rpx;
  color: rgba(190, 204, 255, 0.86);
  font-weight: 600;
}

.slot-card__slot {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.slot-card__icon {
  width: 128rpx;
  height: 128rpx;
  border: 4rpx solid rgba(113, 140, 255, 0.6);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(12, 20, 52, 0.9);
  color: #f5f8ff;
  padding: 0 10rpx;
  box-sizing: border-box;
}

.slot-card__icon-name {
  max-width: 100%;
  font-size: 18rpx;
  font-weight: 600;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  line-height: 1.2;
}

.inventory-title {
  margin: 32rpx 0 16rpx;
  font-size: 26rpx;
  color: rgba(186, 200, 255, 0.8);
  font-weight: 600;
}

.inventory-empty {
  margin-bottom: 12rpx;
}

.inventory-grid {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 16rpx;
}

.inventory-card {
  position: relative;
  background: rgba(18, 30, 74, 0.9);
  border-radius: 20rpx;
  border: 1rpx solid rgba(84, 110, 208, 0.34);
  box-sizing: border-box;
}

.inventory-card::before {
  content: '';
  display: block;
  padding-top: 100%;
}

.inventory-card__frame {
  position: absolute;
  inset: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.inventory-card__badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  padding: 4rpx 10rpx;
  font-size: 20rpx;
  border-radius: 999rpx;
  background: rgba(70, 90, 190, 0.4);
  color: rgba(214, 224, 255, 0.88);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  z-index: 2;
}

.inventory-card__icon {
  width: 100%;
  height: 100%;
  border: 4rpx solid rgba(120, 146, 255, 0.62);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(8, 14, 40, 0.9);
  color: #f5f8ff;
  padding: 0 10rpx;
  box-sizing: border-box;
  position: relative;
}

.inventory-card__icon-name {
  max-width: 100%;
  font-size: 18rpx;
  font-weight: 600;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
  line-height: 1.2;
}

.inventory-card__status {
  position: absolute;
  right: 12rpx;
  bottom: 12rpx;
  padding: 4rpx 10rpx;
  font-size: 18rpx;
  border-radius: 999rpx;
  background: rgba(10, 22, 56, 0.72);
  color: rgba(236, 246, 255, 0.9);
  display: inline-flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
  font-weight: 600;
}

.inventory-card--equipped {
  border-color: rgba(132, 178, 255, 0.62);
  box-shadow: 0 12rpx 28rpx rgba(72, 112, 220, 0.24);
}

.inventory-card--equipped .inventory-card__icon {
  box-shadow: 0 0 0 4rpx rgba(120, 176, 255, 0.32);
}

.storage-section {
  position: relative;
}

.storage-tabs {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.storage-tab {
  padding: 14rpx 24rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(86, 112, 220, 0.32);
  background: rgba(20, 34, 84, 0.62);
  color: rgba(198, 210, 255, 0.82);
  font-size: 24rpx;
  display: inline-flex;
  align-items: center;
  gap: 10rpx;
  line-height: 1;
  transition: all 0.2s ease;
}

.storage-tab__label {
  font-weight: 600;
}

.storage-tab--active {
  border-color: rgba(130, 156, 255, 0.6);
  background: linear-gradient(120deg, rgba(94, 124, 248, 0.92), rgba(144, 94, 255, 0.92));
  color: #f8faff;
  box-shadow: 0 10rpx 22rpx rgba(86, 108, 228, 0.28);
}

.storage-summary {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  padding: 20rpx 24rpx;
  border-radius: 24rpx;
  background: rgba(24, 38, 88, 0.72);
  border: 1rpx solid rgba(94, 122, 230, 0.28);
  margin-bottom: 28rpx;
}

.storage-summary__line {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: rgba(205, 214, 255, 0.82);
  flex-wrap: wrap;
  gap: 8rpx 24rpx;
}

.storage-summary__progress {
  width: 100%;
}

.storage-summary__actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
}

.storage-summary__upgrade {
  min-width: auto;
  padding: 12rpx 24rpx;
  font-size: 22rpx;
}

.storage-summary__hint {
  font-size: 22rpx;
  color: rgba(186, 198, 255, 0.76);
}

.storage-grid {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 16rpx;
}

.storage-slot {
  position: relative;
  background: rgba(16, 28, 70, 0.85);
  border-radius: 20rpx;
  border: 1rpx solid rgba(86, 116, 210, 0.34);
  box-sizing: border-box;
  min-height: 0;
}

.storage-slot::before {
  content: '';
  display: block;
  padding-top: 100%;
}

.storage-slot__badge {
  position: absolute;
  top: 12rpx;
  left: 12rpx;
  padding: 4rpx 12rpx;
  font-size: 20rpx;
  border-radius: 999rpx;
  background: rgba(72, 94, 200, 0.42);
  color: rgba(214, 224, 255, 0.88);
  line-height: 1;
  z-index: 2;
}

.storage-slot__frame {
  position: absolute;
  inset: 12rpx;
  border-radius: 16rpx;
  border: 4rpx solid rgba(118, 146, 250, 0.58);
  background: rgba(10, 18, 48, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 12rpx;
  box-sizing: border-box;
  transition: box-shadow 0.2s ease, transform 0.2s ease, border-color 0.2s ease;
}

.storage-slot__frame--hover {
  border-color: rgba(150, 176, 255, 0.68);
  box-shadow: 0 10rpx 24rpx rgba(90, 118, 240, 0.32);
  transform: translateY(-2rpx);
}

.storage-slot__frame--empty {
  border: 2rpx dashed rgba(102, 128, 210, 0.32);
  background: rgba(12, 18, 40, 0.65);
}

.storage-slot__icon {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #f4f6ff;
}

.storage-slot__name {
  font-size: 20rpx;
  font-weight: 600;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 100%;
}

.storage-slot__placeholder {
  font-size: 22rpx;
  color: rgba(168, 186, 255, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.storage-slot--empty {
  border: 1rpx dashed rgba(94, 122, 210, 0.32);
  background: rgba(14, 22, 48, 0.6);
}

.storage-empty {
  margin-top: 24rpx;
}

.equipment-summary {
  margin-top: 28rpx;
  padding: 24rpx;
  border-radius: 24rpx;
  background: rgba(30, 46, 98, 0.78);
  border: 1rpx solid rgba(100, 130, 240, 0.28);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.summary-title {
  font-size: 26rpx;
  color: #f4f6ff;
  font-weight: 600;
}

.set-item {
  border-radius: 20rpx;
  padding: 18rpx 22rpx;
  background: rgba(18, 30, 74, 0.62);
  border: 1rpx solid rgba(96, 124, 228, 0.24);
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.set-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: rgba(217, 226, 255, 0.92);
  font-weight: 600;
}

.set-count {
  font-size: 22rpx;
  color: rgba(179, 196, 255, 0.82);
}

.set-effect {
  font-size: 22rpx;
  color: rgba(197, 210, 255, 0.82);
  line-height: 1.5;
}

.note-item {
  font-size: 22rpx;
  color: rgba(197, 210, 255, 0.82);
  line-height: 1.5;
  padding: 10rpx 12rpx;
  border-radius: 16rpx;
  background: rgba(20, 32, 76, 0.58);
  border: 1rpx solid rgba(92, 118, 225, 0.2);
}

.inventory-footer {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 24rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, rgba(79, 120, 255, 0.18), rgba(133, 94, 255, 0.18));
  color: #f1f4ff;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  border: 1rpx solid rgba(90, 118, 255, 0.24);
}

.inventory-footer--hover {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 28rpx rgba(76, 96, 190, 0.24);
}

.inventory-footer__info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.inventory-footer__icon {
  font-size: 36rpx;
}

.inventory-footer__amount {
  font-size: 30rpx;
  font-weight: 700;
}

.inventory-footer__label {
  font-size: 24rpx;
  color: rgba(197, 208, 255, 0.8);
}

.equipment-tooltip {
  position: fixed;
  inset: 0;
  z-index: 999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.equipment-tooltip__mask {
  position: absolute;
  inset: 0;
  background: rgba(5, 9, 28, 0.72);
}

.equipment-tooltip__card {
  position: relative;
  max-width: 640rpx;
  width: calc(100% - 120rpx);
  padding: 24rpx 36rpx 36rpx;
  border-radius: 28rpx;
  background: rgba(18, 30, 74, 0.92);
  border: 1rpx solid rgba(102, 130, 238, 0.46);
  box-shadow: 0 24rpx 48rpx rgba(6, 10, 32, 0.55);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  box-sizing: border-box;
}

.equipment-tooltip__header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
}

.equipment-tooltip__name {
  flex: 1;
  min-width: 0;
  font-size: 30rpx;
  font-weight: 700;
  color: #f5f8ff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.equipment-tooltip__quality {
  font-size: 24rpx;
  color: rgba(214, 224, 255, 0.88);
}

.equipment-tooltip__meta {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx 16rpx;
  font-size: 22rpx;
  color: rgba(198, 210, 255, 0.85);
}

.equipment-tooltip__stats,
.equipment-tooltip__notes {
  font-size: 22rpx;
  color: rgba(204, 216, 255, 0.9);
  line-height: 1.6;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.equipment-tooltip__equip {
  align-self: flex-start;
  margin-top: 4rpx;
}

.equipment-tooltip__equipped {
  font-size: 22rpx;
  color: rgba(195, 206, 255, 0.82);
}

.skill-slots {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.skill-slot {
  flex: 1 1 240rpx;
  background: rgba(23, 37, 90, 0.85);
  border-radius: 24rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(93, 119, 214, 0.32);
}

.slot-index {
  font-size: 24rpx;
  color: rgba(180, 195, 250, 0.74);
  margin-bottom: 12rpx;
}

.skill-detail {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.skill-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #f1f4ff;
}

.skill-effects text {
  display: block;
  font-size: 22rpx;
  color: rgba(177, 193, 247, 0.76);
}

.skill-item {
  border: 1rpx solid rgba(93, 119, 214, 0.3);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  background: rgba(18, 30, 72, 0.88);
  color: #f1f4ff;
}

.skill-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.skill-desc {
  color: rgba(188, 198, 246, 0.78);
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.skill-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: rgba(184, 197, 247, 0.74);
}

.skill-time {
  font-size: 22rpx;
}

.history-item {
  padding: 16rpx 0;
  border-bottom: 1rpx dashed rgba(93, 119, 214, 0.26);
}

.history-item:last-child {
  border-bottom: none;
}

.history-title {
  font-size: 24rpx;
  font-weight: 600;
  color: rgba(203, 214, 255, 0.88);
}

.history-desc {
  font-size: 22rpx;
  color: rgba(177, 193, 247, 0.76);
  margin-top: 6rpx;
}

.empty-card {
  background: transparent;
  text-align: center;
  margin: 16rpx 0 32rpx;
}

.empty-tip {
  text-align: center;
