page {
  background: #050921;
  min-height: 100%;
}

.page {
  padding: 32rpx;
  padding-bottom: calc(48rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  color: #e7ecff;
}

.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 0;
  margin-bottom: 24rpx;
  height: 96rpx;
  box-sizing: border-box;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: rgba(188, 198, 255, 0.68);
  position: relative;
  padding: 20rpx 0;
  transition: color 0.2s ease;
}

.tab-item::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 12rpx;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  border-radius: 999rpx;
  background: transparent;
  transition: background 0.2s ease;
}

.tab-item--active {
  color: #f7f9ff;
  font-weight: 600;
}

.tab-item--active::after {
  background: linear-gradient(90deg, #566aff, #8a4bff);
}

.tab-item--hover {
  color: rgba(214, 222, 255, 0.86);
}

.loading {
  padding: 200rpx 0;
  text-align: center;
  color: rgba(189, 201, 255, 0.75);
  font-size: 28rpx;
}

.scroll-container {
  flex: 1;
  padding-bottom: calc(32rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.section-card {
  background: rgba(14, 22, 54, 0.92);
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 18rpx 36rpx rgba(4, 8, 28, 0.55);
  border: 1rpx solid rgba(119, 138, 230, 0.28);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #f7f8ff;
}

.section-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  border-radius: 999rpx;
  padding: 0 28rpx;
}

.level-line {
  display: flex;
  justify-content: space-between;
  color: rgba(198, 208, 255, 0.7);
  font-size: 24rpx;
  margin-bottom: 12rpx;
  align-items: flex-start;
  gap: 24rpx;
}

.level-stack {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.level-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #f6f9ff;
  display: flex;
  align-items: baseline;
  flex-wrap: wrap;
  gap: 6rpx;
}

.level-count {
  font-size: 22rpx;
  color: rgba(184, 196, 255, 0.7);
}

.level-realm {
  font-size: 24rpx;
  color: rgba(198, 208, 255, 0.72);
}

.level-next {
  font-size: 22rpx;
  color: rgba(210, 220, 255, 0.72);
}

.progress-text {
  font-size: 24rpx;
  color: rgba(200, 210, 255, 0.72);
  text-align: right;
  line-height: 1.6;
}

.progress-text text {
  display: inline;
}

.progress-bar {
  position: relative;
  background: rgba(45, 58, 112, 0.8);
  border-radius: 999rpx;
  height: 16rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.progress-fill {
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  background: linear-gradient(90deg, #566aff, #8a4bff);
  border-radius: 999rpx;
}

.attr-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 24rpx;
}

.attr-item {
  background: rgba(20, 32, 86, 0.82);
  border-radius: 20rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(119, 138, 230, 0.28);
  color: #f2f4ff;
}

.attr-label {
  font-size: 26rpx;
  color: rgba(200, 208, 255, 0.75);
}

.attr-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #cdd6ff;
  margin: 12rpx 0;
}

.attr-detail {
  font-size: 22rpx;
  color: rgba(204, 214, 255, 0.72);
}

.attr-extra {
  margin-top: 28rpx;
  display: flex;
  justify-content: space-between;
  color: #5a6285;
  font-size: 24rpx;
}

.slot-list {
  display: flex;
  gap: 24rpx;
  flex-wrap: wrap;
}

.slot {
  flex: 1 1 220rpx;
  min-width: 220rpx;
  background: #f8f9fd;
  border-radius: 24rpx;
  padding: 24rpx;
}

.slot-label {
  font-size: 26rpx;
  font-weight: 600;
  color: #38405f;
  margin-bottom: 16rpx;
}

.slot-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.slot-name {
  font-size: 28rpx;
  font-weight: 600;
  color: #1f2653;
  padding-bottom: 8rpx;
  border-bottom: 4rpx solid #7c89ff;
}

.slot-meta {
  font-size: 22rpx;
  color: #7880a4;
}

.slot-stats text {
  display: block;
  font-size: 22rpx;
  color: #656d90;
}

.slot-empty {
  font-size: 24rpx;
  color: #a0a6bf;
}

.inventory-title {
  margin: 32rpx 0 16rpx;
  font-size: 26rpx;
  color: #5a6285;
  font-weight: 600;
}

.inventory-empty {
  margin-bottom: 12rpx;
}

.inventory-footer {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 24rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, rgba(93, 108, 255, 0.12), rgba(152, 199, 255, 0.12));
  color: #2f3760;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}

.inventory-footer--hover {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 28rpx rgba(76, 96, 190, 0.18);
}

.inventory-footer__info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.inventory-footer__icon {
  font-size: 36rpx;
}

.inventory-footer__amount {
  font-size: 30rpx;
  font-weight: 700;
}

.inventory-footer__label {
  font-size: 24rpx;
  color: #43508a;
}

.equipment-item {
  border: 1rpx solid #e3e7f4;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.equipment-head {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  font-weight: 600;
}

.equipment-desc {
  margin: 12rpx 0;
  color: #606887;
  font-size: 24rpx;
}

.equipment-stats text {
  display: inline-block;
  margin-right: 12rpx;
  margin-bottom: 4rpx;
  font-size: 22rpx;
  color: #4f5782;
}

.equipment-actions {
  margin-top: 16rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.equipment-refine {
  font-size: 22rpx;
  color: #7a81a0;
}

.skill-slots {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.skill-slot {
  flex: 1 1 240rpx;
  background: #f6f7fe;
  border-radius: 24rpx;
  padding: 24rpx;
}

.slot-index {
  font-size: 24rpx;
  color: #70789a;
  margin-bottom: 12rpx;
}

.skill-detail {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.skill-name {
  font-size: 28rpx;
  font-weight: 700;
}

.skill-effects text {
  display: block;
  font-size: 22rpx;
  color: #616992;
}

.skill-item {
  border: 1rpx solid #e0e5f5;
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
}

.skill-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.skill-desc {
  color: #5f678a;
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.skill-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: #7a81a0;
}

.skill-time {
  font-size: 22rpx;
}

.history-item {
  padding: 16rpx 0;
  border-bottom: 1rpx dashed #e4e7f3;
}

.history-item:last-child {
  border-bottom: none;
}

.history-title {
  font-size: 24rpx;
  font-weight: 600;
  color: #3b4265;
}

.history-desc {
  font-size: 22rpx;
  color: #70779a;
  margin-top: 6rpx;
}

.empty-card {
  background: transparent;
  text-align: center;
  margin: 16rpx 0 32rpx;
}

.empty-tip {
  text-align: center;
  color: #8c94b0;
  font-size: 24rpx;
  padding: 12rpx 0;
}
