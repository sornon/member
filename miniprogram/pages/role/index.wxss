page {
  background: #050921;
  min-height: 100%;
}

.page {
  padding: 0 32rpx;
  padding-bottom: calc(48rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  min-height: 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  color: #e5ecff;
}

.tab-bar {
  display: flex;
  justify-content: space-around;
  align-items: center;
  margin: 0;
  margin-bottom: 24rpx;
  height: 96rpx;
  box-sizing: border-box;
}

.tab-item {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: rgba(167, 186, 255, 0.72);
  position: relative;
  padding: 20rpx 0;
  transition: color 0.2s ease;
}

.tab-item::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 12rpx;
  transform: translateX(-50%);
  width: 48rpx;
  height: 6rpx;
  border-radius: 999rpx;
  background: transparent;
  transition: background 0.2s ease;
}

.tab-item--active {
  color: #f5f7ff;
  font-weight: 600;
}

.tab-item--active::after {
  background: linear-gradient(90deg, #566aff, #8a4bff);
}

.tab-item--hover {
  color: rgba(212, 222, 255, 0.9);
}

.loading {
  padding: 200rpx 0;
  text-align: center;
  color: rgba(189, 201, 255, 0.75);
  font-size: 28rpx;
}

.scroll-container {
  flex: 1;
  padding-bottom: calc(32rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.section-card {
  background: rgba(15, 25, 60, 0.92);
  border-radius: 28rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 18rpx 36rpx rgba(4, 8, 28, 0.55);
  border: 1rpx solid rgba(90, 118, 255, 0.24);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 700;
  color: #f3f6ff;
}

.section-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn,
.pill-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 56rpx;
  line-height: 56rpx;
  padding: 0 28rpx;
  border-radius: 999rpx;
  border: 1rpx solid rgba(108, 136, 255, 0.32);
  background: rgba(60, 88, 190, 0.18);
  color: #e6edff;
  font-size: 24rpx;
  font-weight: 600;
  min-width: 140rpx;
  box-sizing: border-box;
  margin: 0;
  transition: background 0.2s ease, box-shadow 0.2s ease, color 0.2s ease,
    border-color 0.2s ease;
}

.action-btn::after,
.pill-btn::after {
  display: none;
}

.action-btn--hover,
.pill-btn--hover {
  background: rgba(84, 112, 220, 0.28);
  border-color: rgba(138, 162, 255, 0.48);
  color: #f3f6ff;
}

.action-btn--primary,
.pill-btn--primary {
  background: linear-gradient(120deg, rgba(102, 132, 255, 0.95), rgba(140, 91, 255, 0.95));
  border-color: rgba(140, 159, 255, 0.72);
  color: #f7f9ff;
  box-shadow: 0 12rpx 28rpx rgba(88, 110, 230, 0.32);
}

.action-btn--primary-hover,
.pill-btn--primary-hover {
  background: linear-gradient(120deg, rgba(116, 145, 255, 0.98), rgba(150, 100, 255, 0.98));
  border-color: rgba(158, 176, 255, 0.82);
  box-shadow: 0 16rpx 32rpx rgba(96, 120, 240, 0.38);
}

.action-btn--ghost,
.pill-btn--ghost {
  background: rgba(54, 80, 172, 0.2);
  border-color: rgba(115, 142, 255, 0.34);
  color: #dae3ff;
}

button.action-btn[disabled],
button.pill-btn[disabled] {
  opacity: 0.58;
  background: rgba(48, 70, 152, 0.22);
  border-color: rgba(104, 130, 238, 0.24);
  color: rgba(205, 214, 255, 0.68);
  box-shadow: none;
}

.level-line {
  display: flex;
  justify-content: space-between;
  color: rgba(194, 206, 255, 0.75);
  font-size: 24rpx;
  margin-bottom: 0;
  align-items: flex-start;
  gap: 24rpx;
}

.level-stack {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.level-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #f5f7ff;
  display: flex;
  align-items: baseline;
  flex-wrap: wrap;
  gap: 6rpx;
}

.level-realm {
  font-size: 24rpx;
  color: rgba(196, 206, 255, 0.8);
}

.level-next {
  font-size: 22rpx;
  color: rgba(207, 218, 255, 0.78);
}

.attr-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 24rpx;
  margin-top: 0;
}

.attr-item {
  background: rgba(21, 33, 80, 0.86);
  border-radius: 20rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(93, 119, 214, 0.32);
  color: #f1f4ff;
}

.attr-label {
  font-size: 26rpx;
  color: rgba(195, 206, 255, 0.78);
}

.attr-value {
  font-size: 40rpx;
  font-weight: 700;
  color: #d6deff;
  margin: 12rpx 0;
}

.attr-detail {
  font-size: 22rpx;
  color: rgba(204, 214, 255, 0.78);
}

.attr-extra {
  margin-top: 28rpx;
  display: flex;
  justify-content: space-between;
  color: rgba(168, 184, 241, 0.82);
  font-size: 24rpx;
}

.attr-respec {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 20rpx;
  flex-wrap: wrap;
}

.attr-respec__info {
  font-size: 24rpx;
  color: rgba(189, 203, 255, 0.82);
  flex: 1;
}

.attr-respec__button {
  min-width: 150rpx;
}

.subsection-title {
  margin-top: 32rpx;
  font-size: 26rpx;
  font-weight: 600;
  color: rgba(186, 200, 255, 0.82);
}

.combat-grid {
  margin-top: 16rpx;
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 24rpx;
}

.combat-item {
  background: rgba(18, 28, 70, 0.86);
  border-radius: 20rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(86, 112, 210, 0.32);
  color: #eff3ff;
}

.combat-label {
  font-size: 26rpx;
  color: rgba(195, 206, 255, 0.76);
}

.combat-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #d6deff;
  margin: 10rpx 0;
}

.combat-detail {
  font-size: 22rpx;
  color: rgba(204, 214, 255, 0.75);
}


.slot-grid {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 16rpx;
}

.slot-card {
  position: relative;
  background: rgba(22, 36, 86, 0.9);
  border-radius: 20rpx;
  padding: 20rpx 16rpx 24rpx;
  border: 1rpx solid rgba(93, 119, 214, 0.36);
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 240rpx;
  box-sizing: border-box;
}

.slot-card--empty {
  opacity: 0.72;
}

.slot-card__header {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: rgba(190, 204, 255, 0.85);
  margin-bottom: 16rpx;
}

.slot-card__slot {
  font-weight: 600;
}

.slot-card__quality {
  font-weight: 600;
}

.slot-card__body {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  width: 100%;
}

.slot-card__icon {
  width: 112rpx;
  height: 112rpx;
  border: 4rpx solid rgba(113, 140, 255, 0.6);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(12, 20, 52, 0.88);
  color: #f5f8ff;
  font-size: 24rpx;
  text-align: center;
  padding: 8rpx;
  box-sizing: border-box;
}

.slot-card__icon-text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.slot-card__name {
  font-size: 24rpx;
  font-weight: 600;
  color: #f0f4ff;
  text-align: center;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.slot-card__meta {
  font-size: 22rpx;
  color: rgba(180, 195, 252, 0.8);
}

.slot-card__stats {
  width: 100%;
  font-size: 20rpx;
  color: rgba(172, 189, 250, 0.78);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-align: center;
  line-height: 1.4;
}

.slot-card__stats text {
  display: block;
}

.slot-card__notes {
  width: 100%;
  font-size: 20rpx;
  color: rgba(203, 216, 255, 0.86);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-align: center;
  line-height: 1.4;
}

.slot-card__notes text {
  display: block;
}

.slot-card__empty-label {
  margin-top: auto;
  font-size: 24rpx;
  color: rgba(149, 167, 228, 0.7);
}

.inventory-title {
  margin: 32rpx 0 16rpx;
  font-size: 26rpx;
  color: rgba(186, 200, 255, 0.8);
  font-weight: 600;
}

.inventory-empty {
  margin-bottom: 12rpx;
}

.inventory-grid {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 16rpx;
}

.inventory-card {
  position: relative;
  background: rgba(18, 30, 74, 0.9);
  border-radius: 20rpx;
  padding: 18rpx 14rpx 22rpx;
  border: 1rpx solid rgba(84, 110, 208, 0.34);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
  min-height: 260rpx;
  box-sizing: border-box;
}

.inventory-card__badge {
  position: absolute;
  top: 14rpx;
  left: 16rpx;
  padding: 4rpx 10rpx;
  font-size: 20rpx;
  border-radius: 999rpx;
  background: rgba(70, 90, 190, 0.4);
  color: rgba(214, 224, 255, 0.88);
}

.inventory-card__icon {
  width: 112rpx;
  height: 112rpx;
  border: 4rpx solid rgba(120, 146, 255, 0.62);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(8, 14, 40, 0.9);
  color: #f5f8ff;
  font-size: 24rpx;
  text-align: center;
  padding: 8rpx;
  box-sizing: border-box;
}

.inventory-card__icon text {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.inventory-card__name {
  font-size: 24rpx;
  font-weight: 600;
  text-align: center;
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.inventory-card__meta {
  font-size: 22rpx;
  color: rgba(182, 196, 250, 0.82);
}

.inventory-card__refine {
  font-size: 22rpx;
  color: rgba(168, 187, 247, 0.78);
}

.inventory-card__stats {
  width: 100%;
  font-size: 20rpx;
  color: rgba(170, 189, 250, 0.78);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-align: center;
  line-height: 1.4;
}

.inventory-card__stats text {
  display: block;
}

.inventory-card__equip {
  margin-top: auto;
  min-width: auto;
  padding: 0 18rpx;
}

.equipment-summary {
  margin-top: 28rpx;
  padding: 24rpx;
  border-radius: 24rpx;
  background: rgba(30, 46, 98, 0.78);
  border: 1rpx solid rgba(100, 130, 240, 0.28);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.summary-title {
  font-size: 26rpx;
  color: #f4f6ff;
  font-weight: 600;
}

.set-item {
  border-radius: 20rpx;
  padding: 18rpx 22rpx;
  background: rgba(18, 30, 74, 0.62);
  border: 1rpx solid rgba(96, 124, 228, 0.24);
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.set-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 24rpx;
  color: rgba(217, 226, 255, 0.92);
  font-weight: 600;
}

.set-count {
  font-size: 22rpx;
  color: rgba(179, 196, 255, 0.82);
}

.set-effect {
  font-size: 22rpx;
  color: rgba(197, 210, 255, 0.82);
  line-height: 1.5;
}

.note-item {
  font-size: 22rpx;
  color: rgba(197, 210, 255, 0.82);
  line-height: 1.5;
  padding: 10rpx 12rpx;
  border-radius: 16rpx;
  background: rgba(20, 32, 76, 0.58);
  border: 1rpx solid rgba(92, 118, 225, 0.2);
}

.inventory-footer {
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 18rpx 24rpx;
  border-radius: 20rpx;
  background: linear-gradient(135deg, rgba(79, 120, 255, 0.18), rgba(133, 94, 255, 0.18));
  color: #f1f4ff;
  transition: transform 0.2s ease, box-shadow 0.2s ease;
  border: 1rpx solid rgba(90, 118, 255, 0.24);
}

.inventory-footer--hover {
  transform: translateY(-2rpx);
  box-shadow: 0 12rpx 28rpx rgba(76, 96, 190, 0.24);
}

.inventory-footer__info {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.inventory-footer__icon {
  font-size: 36rpx;
}

.inventory-footer__amount {
  font-size: 30rpx;
  font-weight: 700;
}

.inventory-footer__label {
  font-size: 24rpx;
  color: rgba(197, 208, 255, 0.8);
}

.skill-slots {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.skill-slot {
  flex: 1 1 240rpx;
  background: rgba(23, 37, 90, 0.85);
  border-radius: 24rpx;
  padding: 24rpx;
  border: 1rpx solid rgba(93, 119, 214, 0.32);
}

.slot-index {
  font-size: 24rpx;
  color: rgba(180, 195, 250, 0.74);
  margin-bottom: 12rpx;
}

.skill-detail {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.skill-name {
  font-size: 28rpx;
  font-weight: 700;
  color: #f1f4ff;
}

.skill-effects text {
  display: block;
  font-size: 22rpx;
  color: rgba(177, 193, 247, 0.76);
}

.skill-item {
  border: 1rpx solid rgba(93, 119, 214, 0.3);
  border-radius: 24rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  background: rgba(18, 30, 72, 0.88);
  color: #f1f4ff;
}

.skill-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.skill-desc {
  color: rgba(188, 198, 246, 0.78);
  font-size: 24rpx;
  margin-bottom: 12rpx;
}

.skill-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 22rpx;
  color: rgba(184, 197, 247, 0.74);
}

.skill-time {
  font-size: 22rpx;
}

.history-item {
  padding: 16rpx 0;
  border-bottom: 1rpx dashed rgba(93, 119, 214, 0.26);
}

.history-item:last-child {
  border-bottom: none;
}

.history-title {
  font-size: 24rpx;
  font-weight: 600;
  color: rgba(203, 214, 255, 0.88);
}

.history-desc {
  font-size: 22rpx;
  color: rgba(177, 193, 247, 0.76);
  margin-top: 6rpx;
}

.empty-card {
  background: transparent;
  text-align: center;
  margin: 16rpx 0 32rpx;
}

.empty-tip {
  text-align: center;
  color: rgba(165, 182, 238, 0.75);
  font-size: 24rpx;
  padding: 12rpx 0;
}
