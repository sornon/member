  box-shadow: 0 0 0 8rpx rgba(156, 178, 255, 0.2);
}

.avatar-option__image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-frame-section {
  margin-top: 24rpx;
}

.avatar-frame-grid {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 18rpx;
  margin: 18rpx 0;
  justify-items: center;
}

.avatar-frame-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}

.avatar-frame-option__preview {
  position: relative;
