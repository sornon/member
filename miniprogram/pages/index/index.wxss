page {
  height: 100%;
  background: #050921;
}

.home-page {
  position: relative;
  min-height: 100vh;
  overflow: hidden;
  color: #fdfcff;
  font-family: 'PingFang SC', 'Helvetica Neue', sans-serif;
}

.background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.mist-layer {
  position: absolute;
  left: -20%;
  width: 140%;
  height: 60vh;
  background: radial-gradient(circle at center, rgba(255, 255, 255, 0.18), rgba(255, 255, 255, 0));
  z-index: 1;
  animation: drift 18s linear infinite;
  opacity: 0.4;
}

.mist-layer--one {
  top: 18%;
}

.mist-layer--two {
  top: 48%;
  animation-duration: 24s;
  animation-direction: reverse;
}

@keyframes drift {
  0% {
    transform: translateX(0);
  }
  50% {
    transform: translateX(8%);
  }
  100% {
    transform: translateX(0);
  }
}

.content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  gap: 48rpx;
  min-height: 100vh;
  min-height: calc(100vh - constant(safe-area-inset-top) - constant(safe-area-inset-bottom));
  min-height: calc(100vh - env(safe-area-inset-top) - env(safe-area-inset-bottom));
  padding: 48rpx 44rpx 40rpx;
  padding-bottom: calc(40rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.profile-card {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-radius: 32rpx;
}

.profile-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 32rpx;
}

.profile-info {
  margin-left: 24rpx;
  max-width: 360rpx;
}

.profile-name {
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.profile-level {
  margin-top: 8rpx;
  font-size: 26rpx;
  color: rgba(217, 225, 255, 0.9);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.profile-meta {
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  font-size: 24rpx;
  color: rgba(220, 230, 255, 0.8);
}

.profile-meta text {
  display: block;
  white-space: nowrap;
}

.activity-panel {
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-end;
  align-items: center;
  gap: 12rpx;
}

.activity-item {
  padding: 12rpx 0;
  text-align: center;
  border-radius: 24rpx;
}

.activity-icon {
  font-size: 38rpx;
  margin-bottom: 8rpx;
}

.activity-label {
  font-size: 22rpx;
  color: rgba(224, 230, 255, 0.85);
}

.hero-section {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  margin-top: 72rpx;
  flex: 1;
}

.hero-copy {
  max-width: 420rpx;
}

.today {
  font-size: 24rpx;
  color: rgba(214, 224, 255, 0.68);
  letter-spacing: 4rpx;
}

.hero-title {
  margin-top: 16rpx;
  font-size: 48rpx;
  font-weight: 700;
  letter-spacing: 6rpx;
}

.hero-subtitle {
  margin-top: 16rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  color: rgba(224, 230, 255, 0.85);
}

.progress-info {
  margin-top: 36rpx;
}

.progress-track {
  width: 100%;
  height: 18rpx;
  border-radius: 20rpx;
  background: rgba(110, 126, 201, 0.35);
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  border-radius: 20rpx;
  background: linear-gradient(90deg, #7d93ff, #c18bff);
  transition: width 0.6s ease;
}

.progress-text {
  margin-top: 18rpx;
  font-size: 24rpx;
  color: rgba(210, 220, 255, 0.85);
}

.hero-figure {
  position: relative;
  width: 300rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.hero-image {
  width: 280rpx;
  animation: float 6s ease-in-out infinite;
  filter: drop-shadow(0 12rpx 24rpx rgba(38, 19, 76, 0.65));
}

@keyframes float {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-14rpx);
  }
  100% {
    transform: translateY(0);
  }
}

.aura {
  position: absolute;
  bottom: 10rpx;
  border-radius: 50%;
  filter: blur(0rpx);
}

.aura-1 {
  width: 260rpx;
  height: 80rpx;
  background: radial-gradient(circle at center, rgba(195, 176, 255, 0.4), rgba(70, 48, 166, 0));
  animation: pulse 4s ease-in-out infinite;
}

.aura-2 {
  width: 200rpx;
  height: 60rpx;
  background: radial-gradient(circle at center, rgba(252, 237, 211, 0.32), rgba(252, 237, 211, 0));
  animation: pulse 6s ease-in-out infinite;
}

@keyframes pulse {
  0% {
    transform: scale(0.95);
    opacity: 0.65;
  }
  50% {
    transform: scale(1.08);
    opacity: 0.9;
  }
  100% {
    transform: scale(0.95);
    opacity: 0.65;
  }
}

.bottom-nav {
  margin-top: auto;
  margin-bottom: 32rpx;
  padding: 18rpx 24rpx;
  border-radius: 36rpx;
  background: rgba(21, 32, 84, 0.85);
  border: 1rpx solid rgba(119, 138, 230, 0.35);
  display: flex;
  justify-content: space-between;
  box-shadow: 0 18rpx 36rpx rgba(16, 13, 55, 0.45);
}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  color: rgba(227, 233, 255, 0.95);
}

.nav-icon {
  font-size: 40rpx;
}

.nav-label {
  font-size: 24rpx;
}

.loading-state {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: rgba(225, 232, 255, 0.9);
  font-size: 28rpx;
  letter-spacing: 6rpx;
}

.profile-modal {
  position: absolute;
  inset: 0;
  z-index: 30;
}

.modal-mask {
  position: absolute;
  inset: 0;
  background: rgba(5, 10, 28, 0.78);
}

.modal-content {
  position: absolute;
  left: 50%;
  top: 50%;
  width: 560rpx;
  transform: translate(-50%, -50%);
  background: rgba(22, 30, 72, 0.92);
  border-radius: 32rpx;
  border: 1rpx solid rgba(137, 155, 255, 0.45);
  box-shadow: 0 28rpx 48rpx rgba(9, 12, 40, 0.6);
  color: #f6f4ff;
  padding: 36rpx;
  box-sizing: border-box;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.modal-title {
  font-size: 32rpx;
  letter-spacing: 4rpx;
}

.modal-close {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  background: rgba(255, 255, 255, 0.12);
  color: rgba(255, 255, 255, 0.8);
  font-size: 36rpx;
}

.modal-body {
  display: flex;
  flex-direction: column;
  gap: 18rpx;
}

.modal-row {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: rgba(232, 236, 255, 0.92);
}

.modal-label {
  color: rgba(200, 210, 255, 0.72);
}

.modal-divider {
  height: 1rpx;
  background: linear-gradient(90deg, rgba(143, 160, 255, 0), rgba(143, 160, 255, 0.6), rgba(143, 160, 255, 0));
  margin: 12rpx 0 4rpx;
}

.modal-section-title {
  font-size: 28rpx;
  color: rgba(235, 240, 255, 0.9);
  letter-spacing: 3rpx;
}

.modal-task-list {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.modal-task {
  padding: 16rpx 20rpx;
  border-radius: 24rpx;
  background: rgba(35, 48, 110, 0.72);
  border: 1rpx solid rgba(119, 138, 230, 0.28);
}

.task-name {
  font-size: 26rpx;
  margin-bottom: 6rpx;
}

.task-reward {
  font-size: 22rpx;
  color: rgba(210, 220, 255, 0.78);
}

.modal-empty {
  font-size: 24rpx;
  color: rgba(204, 212, 255, 0.7);
  text-align: center;
  padding: 24rpx 0;
}
