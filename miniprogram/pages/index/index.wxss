  height: 200rpx;
  display: block;
}

.appearance-background-option__overlay {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 20rpx 24rpx;
  background: linear-gradient(180deg, rgba(5, 9, 33, 0) 0%, rgba(5, 9, 33, 0.88) 100%);
