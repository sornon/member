}

.gender-option__label {
  font-size: 26rpx;
}

.avatar-grid {
  display: grid;
  grid-template-columns: repeat(3, minmax(0, 1fr));
  gap: 18rpx;
  margin: 18rpx 0;
  justify-items: center;
}

.avatar-option {
  position: relative;
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
