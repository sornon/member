  transition: transform 0.2s ease, border-color 0.2s ease, box-shadow 0.2s ease;
}

.avatar-frame-option--active .avatar-frame-option__preview {
  border-color: rgba(156, 178, 255, 0.85);
  transform: translateY(-4rpx);
  box-shadow: 0 0 0 8rpx rgba(156, 178, 255, 0.2);
}

.avatar-frame-option__avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.appearance-section {
  border-bottom: none;
  padding-bottom: 0;
}

.appearance-section--background {
  padding-bottom: 12rpx;
}

.appearance-background-grid {
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  gap: 24rpx;
  margin: 12rpx 0 24rpx;
}

.appearance-background-option {
  position: relative;
  border-radius: 24rpx;
  overflow: hidden;
  border: 4rpx solid transparent;
  min-height: 200rpx;
  box-sizing: border-box;
  transition: border-color 0.2s ease, box-shadow 0.2s ease, transform 0.2s ease;
