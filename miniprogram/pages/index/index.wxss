  max-height: 80vh;
  display: flex;
  flex-direction: column;
  padding: 32rpx 36rpx 28rpx;
}

.modal-content--avatar {
  width: 620rpx;
  max-height: 70vh;
  display: flex;
  flex-direction: column;
  padding: 32rpx 36rpx 28rpx;
}

.modal-header {
