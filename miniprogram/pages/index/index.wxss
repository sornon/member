}

.nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8rpx;
  color: rgba(227, 233, 255, 0.95);
}

.nav-icon-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-icon {
  font-size: 40rpx;
}

.nav-item__dot {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  width: 18rpx;
  height: 18rpx;
  border-radius: 50%;
