page {
  height: 100%;
  background: #050921;
}

.home-page {
  position: relative;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  color: #fdfcff;
  font-family: 'PingFang SC', 'Helvetica Neue', sans-serif;
}

.background {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
  object-fit: cover;
  pointer-events: none;
}


.background--fallback {
  overflow: hidden;
}

.background-fallback__image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: block;
  filter: saturate(110%);
}

.background--video {
  overflow: hidden;
}

.background-video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.background--overlay {
  background: linear-gradient(180deg, rgba(5, 9, 33, 0.65) 0%, rgba(27, 60, 104, 0.45) 45%, rgba(61, 12, 61, 0.6) 100%);
}

.mist-layer {
  position: absolute;
  left: -20%;
  width: 140%;
  height: 60vh;
  background: radial-gradient(circle at center, rgba(255, 255, 255, 0.18), rgba(255, 255, 255, 0));
  z-index: 1;
  animation: drift 18s linear infinite;
  opacity: 0.4;
}

.mist-layer--one {
  top: 18%;
}

.mist-layer--two {
  top: 48%;
  animation-duration: 24s;
  animation-direction: reverse;
}

@keyframes drift {
  0% {
    transform: translateX(0);
  }
  50% {
    transform: translateX(8%);
  }
  100% {
    transform: translateX(0);
  }
}

.content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  gap: 48rpx;
  flex: 1;
  padding: 48rpx 44rpx 40rpx;
  padding-bottom: calc(40rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
  box-sizing: border-box;
}

.top-bar {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
}

.profile-card {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-radius: 32rpx;
}

.profile-avatar-wrapper {
  position: relative;
  width: 120rpx;
  height: 120rpx;
}

.profile-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
  display: block;
}

.profile-avatar-frame {
  position: absolute;
  top: -15%;
  left: -15%;
  width: 130%;
  height: 130%;
  pointer-events: none;
}

.profile-info {
  margin-left: 24rpx;
  max-width: 360rpx;
}

.profile-name {
  font-size: 30rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.profile-meta {
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  font-size: 24rpx;
  color: rgba(220, 230, 255, 0.8);
}

.profile-meta__text {
  display: block;
  white-space: nowrap;
}

.activity-panel {
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-end;
  align-items: center;
  gap: 32rpx;
}

.activity-item {
  padding: 12rpx 0;
  text-align: center;
  border-radius: 24rpx;
}

.activity-icon {
  font-size: 38rpx;
  margin-bottom: 0rpx;
}

.activity-label {
  font-size: 22rpx;
  color: rgba(224, 230, 255, 0.85);
}

.hero-section {
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
  margin-top: 72rpx;
  flex: 1;
  min-height: 420rpx;
  padding-right: 320rpx;
}

.hero-copy {
  max-width: 420rpx;
}

.today {
  font-size: 24rpx;
  color: rgba(214, 224, 255, 0.68);
  letter-spacing: 4rpx;
}

.hero-title {
  margin-top: 16rpx;
  font-size: 48rpx;
  font-weight: 700;
  letter-spacing: 6rpx;
}

.hero-subtitle {
  margin-top: 16rpx;
  font-size: 26rpx;
  line-height: 40rpx;
  color: rgba(224, 230, 255, 0.85);
}

.progress-info {
  margin-top: 36rpx;
}

.progress-track {
  width: 100%;
  height: 18rpx;
  border-radius: 20rpx;
  background: rgba(110, 126, 201, 0.35);
  overflow: hidden;
}

.progress-inner {
  height: 100%;
  border-radius: 20rpx;
  background: linear-gradient(90deg, #7d93ff, #c18bff);
  transition: width 0.6s ease;
}

.progress-text {
  margin-top: 18rpx;
  font-size: 24rpx;
  color: rgba(210, 220, 255, 0.85);
}

.hero-figure {
  position: absolute;
  right: 0;
  bottom: 0;
  width: 320rpx;
  height: 420rpx;
  display: flex;
  justify-content: center;
  align-items: flex-end;
}

.hero-image {
  width: 100%;
  animation: float 6s ease-in-out infinite;
  filter: drop-shadow(0 12rpx 24rpx rgba(38, 19, 76, 0.65));
  margin-bottom: 10rpx;
}

@keyframes float {
  0% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-14rpx);
  }
  100% {
    transform: translateY(0);
  }
}

.aura {
  position: absolute;
  bottom: 0rpx;
  border-radius: 50%;
  filter: blur(0rpx);
  z-index: -1;
}

.aura-1 {
  width: 260rpx;
  height: 80rpx;
  background: radial-gradient(circle at center, rgba(195, 176, 255, 0.4), rgba(70, 48, 166, 0));
  animation: pulse 4s ease-in-out infinite;
}

.aura-2 {
  width: 200rpx;
  height: 60rpx;
  background: radial-gradient(circle at center, rgba(252, 237, 211, 0.32), rgba(252, 237, 211, 0));
  animation: pulse 6s ease-in-out infinite;
}

@keyframes pulse {
  0% {
    transform: scale(0.95);
    opacity: 0.65;
  }
  50% {
    transform: scale(1.08);
    opacity: 0.9;
  }
  100% {
    transform: scale(0.95);
    opacity: 0.65;
  }
}

.bottom-nav {
  margin-top: auto;
  margin-bottom: 32rpx;
  padding: 18rpx 24rpx;
  border-radius: 36rpx;
  background: rgba(21, 32, 84, 0.85);
