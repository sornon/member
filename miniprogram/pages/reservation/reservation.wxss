.filter-card .picker {
  background: #f1f5f9;
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
}

.room {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #eceff9;
}

.room:last-child {
  border-bottom: none;
}

.room-info {
  flex: 1;
  margin-right: 24rpx;
}

.room-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #0f244a;
}

.room-capacity,
.room-facilities,
.room-price {
  font-size: 24rpx;
  color: #6d758c;
  margin-top: 8rpx;
}

.room-price {
  color: #2563eb;
}
