.notice {
  margin-bottom: 20rpx;
  padding: 20rpx 24rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(114, 136, 220, 0.4);
  background: rgba(14, 24, 60, 0.9);
  color: #dce4ff;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.notice.success {
  border-color: rgba(102, 214, 158, 0.45);
  background: rgba(20, 64, 54, 0.8);
  color: #b5f7d3;
}

.notice.warning {
  border-color: rgba(255, 196, 122, 0.45);
  background: rgba(70, 50, 12, 0.8);
  color: #ffe0b2;
}

.notice.info {
  border-color: rgba(138, 160, 255, 0.45);
  background: rgba(28, 38, 82, 0.85);
  color: #dfe6ff;
}

.notice-text {
  flex: 1;
  font-size: 24rpx;
  line-height: 1.5;
  padding-right: 16rpx;
}

.notice-close {
  background: rgba(118, 142, 255, 0.15);
  color: #cfd8ff;
  border: 1rpx solid rgba(138, 160, 255, 0.5);
}

.reservations-card {
  margin-bottom: 20rpx;
}

.reservations-card .reservation-item {
  padding: 20rpx 0;
  border-bottom: 1rpx solid rgba(108, 128, 210, 0.18);
}

.reservations-card .reservation-item:last-child {
  border-bottom: none;
}

.reservation-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.reservation-room {
  font-size: 30rpx;
  font-weight: 600;
  color: #f6f8ff;
}

.reservation-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  background: rgba(40, 58, 120, 0.4);
  color: #d6deff;
  border: 1rpx solid rgba(116, 136, 226, 0.36);
}

.reservation-status.pendingApproval {
  background: rgba(128, 146, 255, 0.24);
  color: #dfe4ff;
}

.reservation-status.approved,
.reservation-status.reserved,
.reservation-status.confirmed {
  background: rgba(96, 196, 150, 0.24);
  color: #c7f3df;
}

.reservation-status.pendingPayment {
  background: rgba(255, 214, 153, 0.22);
  color: #ffe3b6;
}

.reservation-time,
.reservation-meta {
  font-size: 24rpx;
  color: rgba(204, 214, 255, 0.78);
  margin-bottom: 10rpx;
}

.reservations-card button {
  margin-top: 12rpx;
}

.reservations-card--empty {
  color: rgba(198, 206, 255, 0.7);
  text-align: center;
  padding: 28rpx 0;
}

.usage {
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: rgba(198, 208, 255, 0.85);
}

.filter-card .picker {
  background: rgba(14, 24, 60, 0.88);
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid rgba(119, 138, 230, 0.28);
  color: #e7edff;
}

.filter-card .picker--readonly {
  color: rgba(231, 237, 255, 0.8);
  border-style: dashed;
}

.time-error {
  margin-top: 8rpx;
  color: #ff9d8e;
  font-size: 24rpx;
}

.room {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(108, 128, 210, 0.24);
}

.room:last-child {
  border-bottom: none;
}

.room-info {
  flex: 1;
  margin-right: 24rpx;
}

.room-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #f6f8ff;
}

.room-capacity,
.room-facilities,
.room-price {
  font-size: 24rpx;
  color: rgba(204, 214, 255, 0.75);
  margin-top: 8rpx;
}

.room-price {
  color: #7dd9ff;
  font-weight: 600;
}
