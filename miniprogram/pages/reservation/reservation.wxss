.filter-card .picker {
  background: rgba(14, 24, 60, 0.88);
  padding: 20rpx 24rpx;
  border-radius: 12rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid rgba(119, 138, 230, 0.28);
  color: #e7edff;
}

.time-error {
  margin-top: 8rpx;
  color: #ff9d8e;
  font-size: 24rpx;
}

.room {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(108, 128, 210, 0.24);
}

.room:last-child {
  border-bottom: none;
}

.room-info {
  flex: 1;
  margin-right: 24rpx;
}

.room-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #f6f8ff;
}

.room-capacity,
.room-facilities,
.room-price {
  font-size: 24rpx;
  color: rgba(204, 214, 255, 0.75);
  margin-top: 8rpx;
}

.room-price {
  color: #7dd9ff;
  font-weight: 600;
}
