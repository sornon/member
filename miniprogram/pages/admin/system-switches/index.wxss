.system-switch-page {
  min-height: 100vh;
}

.loading-card {
  text-align: center;
  font-size: 28rpx;
  color: rgba(215, 223, 255, 0.86);
}

.intro-card {
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #f4f6ff;
}

.card-desc {
  font-size: 26rpx;
  color: rgba(206, 216, 255, 0.78);
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.intro-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: #f6f8ff;
}

.intro-desc {
  font-size: 26rpx;
  line-height: 1.6;
  color: rgba(206, 216, 255, 0.8);
}

.switch-card {
  margin-bottom: 24rpx;
}

.tournament-card {
  margin-bottom: 24rpx;
}

.switch-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
}

.switch-info {
  flex: 1;
  min-width: 0;
}

.switch-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #f8faff;
}

.switch-desc {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: rgba(198, 208, 255, 0.75);
  line-height: 1.6;
}

.switch-hint {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: rgba(206, 216, 255, 0.78);
}

.switch-hint.warning {
  color: #ffb17a;
}

.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300rpx, 1fr));
  gap: 20rpx 28rpx;
  margin-top: 28rpx;
}

.form-field {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-field.full-width {
  grid-column: 1 / -1;
  margin-top: 24rpx;
}

.field-label {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(239, 243, 255, 0.92);
}

.field-input,
.field-textarea {
  width: 100%;
  border-radius: 16rpx;
  padding: 18rpx 22rpx;
  font-size: 26rpx;
  color: #f6f8ff;
  background: rgba(40, 48, 86, 0.68);
  border: 1rpx solid rgba(118, 134, 214, 0.36);
}

.field-input:disabled,
.field-textarea:disabled {
  opacity: 0.7;
}

.field-input::placeholder,
.field-textarea::placeholder {
  color: rgba(186, 198, 255, 0.52);
}

.field-textarea {
  min-height: 180rpx;
  line-height: 1.6;
}

.field-hint {
  font-size: 24rpx;
  color: rgba(198, 208, 255, 0.68);
  line-height: 1.5;
}

.error-banner {
  margin-top: 12rpx;
  padding: 24rpx 28rpx;
  border-radius: 18rpx;
  border: 1rpx solid rgba(255, 122, 122, 0.38);
  background: rgba(92, 20, 26, 0.36);
  color: #ffe3e3;
  font-size: 26rpx;
  line-height: 1.6;
}
