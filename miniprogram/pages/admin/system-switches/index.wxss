.system-switch-page {
  min-height: 100vh;
}

.loading-card {
  text-align: center;
  font-size: 28rpx;
  color: rgba(215, 223, 255, 0.86);
}

.intro-card {
  margin-bottom: 24rpx;
}

.card-title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #f4f6ff;
}

.card-desc {
  font-size: 26rpx;
  color: rgba(206, 216, 255, 0.78);
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.intro-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: #f6f8ff;
}

.intro-desc {
  font-size: 26rpx;
  line-height: 1.6;
  color: rgba(206, 216, 255, 0.8);
}

.cache-card {
  margin-bottom: 24rpx;
}

.cache-row {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 0;
}

.cache-info {
  flex: 1;
  min-width: 0;
}

.cache-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #f8faff;
}

.cache-desc {
  margin-top: 10rpx;
  font-size: 26rpx;
  line-height: 1.6;
  color: rgba(198, 208, 255, 0.75);
}

.cache-version {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: rgba(206, 216, 255, 0.78);
}

.cache-card .ghost-button {
  flex-shrink: 0;
  min-width: 40rpx;
  width:180rpx;
}

.switch-card {
  margin-bottom: 24rpx;
}

.tournament-card {
  margin-bottom: 24rpx;
}

.rage-card {
  margin-bottom: 24rpx;
}

.rage-grid {
  margin-top: 24rpx;
}

.rage-field {
  gap: 8rpx;
}

.rage-grid .field-inline {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: nowrap;
}

.rage-grid .field-label {
  flex: 1;
  min-width: 0;
  white-space: nowrap;
}

.rage-grid .rage-input {
  flex: 0 0 168rpx;
  width: 168rpx;
  padding: 16rpx 20rpx;
  text-align: right;
}

.rage-actions {
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
}

.rage-actions .action-hint {
  flex-basis: 100%;
}

.switch-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
}

.switch-info {
  flex: 1;
  min-width: 0;
}

.switch-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #f8faff;
}

.switch-desc {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: rgba(198, 208, 255, 0.75);
  line-height: 1.6;
}

.switch-hint {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: rgba(206, 216, 255, 0.78);
}

.switch-hint.warning {
  color: #ffb17a;
}

.global-background-card {
  margin-bottom: 24rpx;
}

.global-background-preview {
  margin: 24rpx 0;
  display: flex;
  gap: 20rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  background: rgba(34, 42, 78, 0.6);
}

.global-background-preview__image {
  width: 180rpx;
  height: 120rpx;
  border-radius: 16rpx;
  object-fit: cover;
  background: rgba(16, 22, 45, 0.6);
}

.global-background-preview__meta {
  flex: 1;
  min-width: 0;
}

.global-background-preview__name {
  font-size: 30rpx;
  font-weight: 600;
  color: #f8faff;
}

.global-background-preview__desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  line-height: 1.5;
  color: rgba(206, 216, 255, 0.75);
}

.global-background-preview__tag {
  margin-top: 12rpx;
  display: inline-flex;
  align-items: center;
  padding: 8rpx 16rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #88e0ff;
  background: rgba(86, 170, 255, 0.18);
}

.global-background-preview__tag--muted {
  color: #ffb17a;
  background: rgba(255, 177, 122, 0.16);
}

.appearance-background-toggle {
  margin-top: 24rpx;
  padding: 20rpx 24rpx;
  border-radius: 18rpx;
  background: rgba(38, 46, 88, 0.62);
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
}

.appearance-background-toggle__info {
  flex: 1;
  min-width: 0;
}

.appearance-background-toggle__title {
  font-size: 28rpx;
  font-weight: 600;
  color: #f8faff;
}

.appearance-background-toggle__desc {
  margin-top: 8rpx;
  font-size: 24rpx;
  line-height: 1.5;
  color: rgba(206, 216, 255, 0.75);
}

.appearance-background-toggle__switch {
  flex-shrink: 0;
}

.appearance-background-grid {
  margin-top: 24rpx;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(200rpx, 1fr));
  gap: 20rpx;
}

.appearance-background-option {
  position: relative;
  border-radius: 18rpx;
  overflow: hidden;
  height: 160rpx;
  background: rgba(18, 24, 48, 0.82);
  border: 2rpx solid transparent;
}

.appearance-background-option--active {
  border-color: #5e7aff;
  box-shadow: 0 0 0 2rpx rgba(86, 106, 255, 0.35);
}

.appearance-background-option__image {
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

.appearance-background-option__overlay {
  position: absolute;
  inset: 0;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  padding: 16rpx;
  background: linear-gradient(180deg, rgba(10, 14, 30, 0.05) 0%, rgba(9, 12, 28, 0.88) 100%);
}

.appearance-background-option__name {
  font-size: 26rpx;
  font-weight: 600;
  color: #f8faff;
}

.appearance-background-option__desc {
  margin-top: 6rpx;
  font-size: 22rpx;
  line-height: 1.4;
  color: rgba(206, 216, 255, 0.75);
}

.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300rpx, 1fr));
  gap: 20rpx 28rpx;
  margin-top: 28rpx;
}

.form-field {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-field.full-width {
  grid-column: 1 / -1;
  margin-top: 24rpx;
}

.field-label {
  font-size: 26rpx;
  font-weight: 500;
  color: rgba(239, 243, 255, 0.92);
}

.field-input,
.field-textarea {
  border-radius: 16rpx;
  padding: 18rpx 22rpx;
  font-size: 26rpx;
  color: #f6f8ff;
  background: rgba(40, 48, 86, 0.68);
  border: 1rpx solid rgba(118, 134, 214, 0.36);
}

.field-input:disabled,
.field-textarea:disabled {
  opacity: 0.7;
}

.field-input::placeholder,
.field-textarea::placeholder {
  color: rgba(186, 198, 255, 0.52);
}

.field-textarea {
  min-height: 180rpx;
  line-height: 1.6;
}

.field-hint {
  font-size: 24rpx;
  color: rgba(198, 208, 255, 0.68);
  line-height: 1.5;
}

.action-row {
  margin-top: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  align-items: flex-start;
}

.primary-button {
  min-width: 240rpx;
  padding: 18rpx 40rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #586dff, #6f86ff);
  color: #f9fbff;
  font-size: 28rpx;
  font-weight: 600;
  border: none;
}

.primary-button:disabled {
  opacity: 0.7;
}

.action-hint {
  font-size: 24rpx;
  color: rgba(198, 208, 255, 0.68);
  line-height: 1.5;
}

.error-banner {
  margin-top: 12rpx;
  padding: 24rpx 28rpx;
  border-radius: 18rpx;
  border: 1rpx solid rgba(255, 122, 122, 0.38);
  background: rgba(92, 20, 26, 0.36);
  color: #ffe3e3;
  font-size: 26rpx;
  line-height: 1.6;
}

.secret-realm-card {
  margin-top: 28rpx;
}

.secret-realm-reset {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-top: 20rpx;
}

.secret-realm-hint {
  font-size: 24rpx;
  color: rgba(206, 216, 255, 0.72);
  line-height: 1.6;
}

.secret-realm-summary {
  margin-top: 16rpx;
  padding: 18rpx 24rpx;
  border-radius: 16rpx;
  background: rgba(56, 189, 248, 0.12);
  border: 1rpx solid rgba(56, 189, 248, 0.35);
  color: #bae6fd;
  font-size: 26rpx;
  line-height: 1.6;
}

.reset-section {
  margin-top: 36rpx;
  padding-top: 28rpx;
  border-top: 1rpx solid rgba(118, 134, 214, 0.28);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.reset-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #f4f6ff;
}

.reset-desc {
  font-size: 24rpx;
  color: rgba(206, 216, 255, 0.72);
  line-height: 1.6;
}

.reset-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.ghost-button,
.danger-button {
  min-width: 220rpx;
  padding: 16rpx 36rpx;
  border-radius: 999rpx;
  font-size: 26rpx;
  font-weight: 600;
}

.ghost-button {
  background: transparent;
  border: 1rpx solid rgba(118, 134, 214, 0.56);
  color: #d7e0ff;
}

.danger-button {
  background: rgba(255, 110, 110, 0.18);
  border: none;
  color: #ffbcbc;
}

.ghost-button:disabled,
.danger-button:disabled {
  opacity: 0.65;
}

.reset-hint {
  font-size: 24rpx;
  color: rgba(255, 204, 146, 0.82);
  line-height: 1.6;
}

.refresh-section {
  margin-top: 36rpx;
  padding-top: 28rpx;
  border-top: 1rpx solid rgba(118, 134, 214, 0.28);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.refresh-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #f4f6ff;
}

.refresh-desc {
  font-size: 24rpx;
  color: rgba(206, 216, 255, 0.72);
  line-height: 1.6;
}

.refresh-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  align-items: flex-start;
}

.refresh-hint {
  font-size: 24rpx;
  color: rgba(198, 208, 255, 0.68);
  line-height: 1.6;
}

.refresh-result {
  font-size: 24rpx;
  color: rgba(157, 214, 255, 0.85);
  line-height: 1.6;
}
