.system-switch-page {
  min-height: 100vh;
}

.loading-card {
  text-align: center;
  font-size: 28rpx;
  color: rgba(215, 223, 255, 0.86);
}

.intro-card {
  margin-bottom: 24rpx;
}

.intro-title {
  font-size: 34rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: #f6f8ff;
}

.intro-desc {
  font-size: 26rpx;
  line-height: 1.6;
  color: rgba(206, 216, 255, 0.8);
}

.switch-card {
  margin-bottom: 24rpx;
}

.switch-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 24rpx;
}

.switch-info {
  flex: 1;
  min-width: 0;
}

.switch-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #f8faff;
}

.switch-desc {
  margin-top: 12rpx;
  font-size: 26rpx;
  color: rgba(198, 208, 255, 0.75);
  line-height: 1.6;
}

.switch-hint {
  margin-top: 20rpx;
  font-size: 24rpx;
  color: rgba(206, 216, 255, 0.78);
}

.switch-hint.warning {
  color: #ffb17a;
}

.error-banner {
  margin-top: 12rpx;
  padding: 24rpx 28rpx;
  border-radius: 18rpx;
  border: 1rpx solid rgba(255, 122, 122, 0.38);
  background: rgba(92, 20, 26, 0.36);
  color: #ffe3e3;
  font-size: 26rpx;
  line-height: 1.6;
}
