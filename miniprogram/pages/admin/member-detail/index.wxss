page {
  background: #0b1120;
}

.member-detail {
  min-height: 100vh;
  min-height: calc(100vh - constant(safe-area-inset-top) - constant(safe-area-inset-bottom));
  min-height: calc(100vh - env(safe-area-inset-top) - env(safe-area-inset-bottom));
  padding: 32rpx;
  padding-bottom: calc(32rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
  background: #0b1120;
  color: #e2e8f0;
}

.section {
  background: rgba(15, 23, 42, 0.85);
  border-radius: 20rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  border: 1px solid rgba(148, 163, 184, 0.25);
  backdrop-filter: blur(12px);
}

.section--equipment {
  margin-top: 32rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
  color: #f8fafc;
}

.toolbar {
  display: flex;
  justify-content: flex-end;
  margin-bottom: 16rpx;
}

.toolbar .recharge {
  background: rgba(125, 200, 255, 0.16);
  color: #8bd5ff;
  border-radius: 32rpx;
  padding: 12rpx 24rpx;
  border: none;
}

.info-row {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  color: #94a3b8;
  margin-bottom: 12rpx;
}

.info-value {
  color: #e2e8f0;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 26rpx;
  color: #94a3b8;
  margin-bottom: 12rpx;
}

.rename-meta {
  display: flex;
  gap: 24rpx;
  margin-bottom: 20rpx;
  font-size: 24rpx;
  color: #cbd5f5;
}

.rename-history {
  margin-bottom: 28rpx;
  padding: 20rpx;
  border-radius: 16rpx;
  background: rgba(15, 23, 42, 0.6);
  border: 1px solid rgba(148, 163, 184, 0.25);
}

.rename-history__title {
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 12rpx;
  color: #f8fafc;
}

.rename-history__item + .rename-history__item {
  margin-top: 16rpx;
  border-top: 1px solid rgba(148, 163, 184, 0.2);
  padding-top: 16rpx;
}

.rename-history__names {
  font-size: 26rpx;
  color: #e2e8f0;
}

.rename-history__meta {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: rgba(148, 163, 184, 0.9);
}

.form-input {
  width: 100%;
  padding: 20rpx;
  border-radius: 16rpx;
  border: 1px solid rgba(148, 163, 184, 0.3);
  background: rgba(15, 23, 42, 0.8);
  color: #f8fafc;
}

.picker-value {
  padding: 20rpx;
  border-radius: 16rpx;
  border: 1px solid rgba(148, 163, 184, 0.3);
  background: rgba(15, 23, 42, 0.8);
  color: #f8fafc;
}

.readonly-value {
  padding: 20rpx;
  border-radius: 16rpx;
  border: 1px solid rgba(148, 163, 184, 0.4);
  background: rgba(15, 23, 42, 0.92);
  color: #f8fafc;
}

.role-group {
  display: flex;
  gap: 20rpx;
  flex-wrap: wrap;
}

.role-option {
  display: flex;
  align-items: center;
  padding: 12rpx 20rpx;
  background: rgba(30, 41, 59, 0.6);
  border-radius: 16rpx;
  border: 1px solid rgba(148, 163, 184, 0.2);
}

.role-option.checked {
  background: rgba(96, 165, 250, 0.16);
  border-color: rgba(96, 165, 250, 0.6);
}

.role-label {
  margin-left: 12rpx;
  font-size: 26rpx;
}

.avatar-permission-note {
  font-size: 22rpx;
  color: #94a3b8;
  margin-bottom: 12rpx;
}

.avatar-permission-grid {
  display: block;
}

.avatar-permission-group {
  margin-bottom: 12rpx;
}

.avatar-permission-group__title {
  font-size: 24rpx;
  color: #64748b;
  margin-bottom: 8rpx;
}

.avatar-permission-group__list {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.avatar-permission-item {
  display: inline-flex;
  align-items: center;
  padding: 6rpx 12rpx;
  border-radius: 16rpx;
  border: 1rpx solid rgba(148, 163, 184, 0.4);
  background: rgba(15, 23, 42, 0.6);
  color: #e2e8f0;
  font-size: 22rpx;
}

.avatar-permission-item checkbox {
  transform: scale(0.84);
  margin-right: 6rpx;
}

.avatar-permission-item--disabled {
  border-style: dashed;
  background: rgba(15, 23, 42, 0.3);
}

.avatar-permission-name--disabled {
  color: #9ca3af;
}

.avatar-permission-tag {
  margin-left: 6rpx;
  font-size: 20rpx;
  color: #cbd5f5;
}

.submit {
  margin-top: 12rpx;
  background: linear-gradient(135deg, #3b82f6, #8b5cf6);
  border: none;
  color: #fff;
  border-radius: 20rpx;
}

.loading {
  min-height: 60vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #0b1120;
  color: #94a3b8;
  font-size: 28rpx;
}

.dialog-mask {
  position: fixed;
  inset: 0;
  background: rgba(5, 9, 33, 0.85);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.dialog {
  width: 80%;
  background: #13183a;
  border-radius: 24rpx;
  padding: 32rpx;
  color: #f2f6ff;
  box-shadow: 0 24rpx 60rpx rgba(3, 8, 30, 0.45);
}

.dialog-title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.dialog-body {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.dialog-tip {
  font-size: 24rpx;
  opacity: 0.7;
}

.dialog-input {
  background: rgba(255, 255, 255, 0.08);
  border-radius: 12rpx;
  padding: 20rpx;
  color: #fff;
}

.dialog-actions {
  margin-top: 32rpx;
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
}

.dialog-btn {
  border: none;
  border-radius: 24rpx;
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.12);
  color: #d0deff;
}

.dialog-btn.primary {
  background: linear-gradient(90deg, #7cc4ff, #6a8bff);
  color: #0b1330;
  font-weight: 600;
}


.equipment-admin__header {
  display: flex;
  align-items: center;
  gap: 16rpx;
  flex-wrap: wrap;
  margin-bottom: 20rpx;
}

.equipment-admin__title {
  margin-bottom: 0;
}

.equipment-admin__header .equipment-admin__hint {
  margin-left: 4rpx;
}

.grant-equipment-btn {
  background: rgba(56, 189, 248, 0.2);
  border: none;
  color: #38bdf8;
  border-radius: 24rpx;
  padding: 0 32rpx;
  display: flex;
  align-items: center;
  height: 64rpx;
}

.equipment-dialog {
  width: 88%;
  max-width: 620rpx;
  max-height: 70vh;
  background: #141a3c;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 24rpx 60rpx rgba(3, 8, 30, 0.5);
  display: flex;
  flex-direction: column;
  color: #f2f6ff;
}

.equipment-dialog__title {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.equipment-dialog__list {
  max-height: 420rpx;
  border: 1px solid rgba(148, 163, 184, 0.24);
  border-radius: 18rpx;
  background: rgba(15, 23, 42, 0.7);
  padding: 12rpx;
}

.equipment-dialog__filters {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.equipment-dialog__filter {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  padding: 10rpx 16rpx;
  border-radius: 16rpx;
  border: 1px solid rgba(148, 163, 184, 0.25);
  background: rgba(24, 32, 68, 0.6);
}

.equipment-dialog__filter-label {
  font-size: 24rpx;
  color: #9fb5ff;
}

.equipment-dialog__filter-value {
  font-size: 24rpx;
  color: #e0e7ff;
  min-width: 120rpx;
}

.equipment-dialog__filter picker {
  color: inherit;
}

.equipment-dialog__group {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 16rpx;
}

.equipment-dialog__option {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx 12rpx;
  border-radius: 18rpx;
  border: 1px solid rgba(148, 163, 184, 0.25);
  background: rgba(30, 41, 71, 0.6);
  color: #cbd5f5;
  font-size: 24rpx;
  text-align: center;
  min-height: 88rpx;
}

.equipment-dialog__option radio {
  display: none;
}

.equipment-dialog__option--active {
  border-color: rgba(96, 165, 250, 0.85);
  background: rgba(59, 130, 246, 0.22);
  color: #f1f5ff;
  box-shadow: 0 0 0 2rpx rgba(96, 165, 250, 0.35);
}

.equipment-dialog__option-text {
  display: block;
  width: 100%;
  line-height: 1.4;
  word-break: break-all;
}

.equipment-dialog__actions {
  margin-top: 28rpx;
  display: flex;
  justify-content: flex-end;
  gap: 24rpx;
}

.equipment-dialog__empty {
  padding: 48rpx 0;
  text-align: center;
  font-size: 24rpx;
  color: #94a3b8;
}

.equipment-edit-dialog {
  width: 88%;
  max-width: 620rpx;
  background: #141a3c;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 24rpx 60rpx rgba(3, 8, 30, 0.5);
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  color: #f2f6ff;
}

.equipment-edit-dialog__title {
  font-size: 30rpx;
  font-weight: 600;
}

.equipment-edit-dialog__meta {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  font-size: 24rpx;
  color: #cbd5f5;
}

.equipment-edit-dialog__stats {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  max-height: 200rpx;
  overflow-y: auto;
  font-size: 24rpx;
  color: #e2e8f0;
}

.equipment-edit-dialog__stat {
  display: block;
}

.equipment-edit-dialog__field {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.equipment-edit-dialog__label {
  font-size: 26rpx;
  color: #f8fafc;
}

.equipment-edit-dialog__input {
  padding: 20rpx;
  border-radius: 16rpx;
  border: 1px solid rgba(148, 163, 184, 0.35);
  background: rgba(15, 23, 42, 0.82);
  color: #f8fafc;
}

.equipment-edit-dialog__hint {
  font-size: 22rpx;
  color: #94a3b8;
}

.equipment-edit-dialog__actions {
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
  margin-top: 8rpx;
}

.equipment-edit-dialog__btn {
  border: none;
  border-radius: 20rpx;
  padding: 16rpx 32rpx;
  background: rgba(255, 255, 255, 0.12);
  color: #d0deff;
}

.equipment-edit-dialog__btn--primary {
  background: linear-gradient(90deg, #7cc4ff, #6a8bff);
  color: #0b1330;
  font-weight: 600;
}

.equipment-admin__hint {
  font-size: 22rpx;
  color: #64748b;
}

.equipment-admin__content {
  display: grid;
  gap: 24rpx;
}

.equipment-admin__block {
  border: 1px solid rgba(148, 163, 184, 0.2);
  border-radius: 16rpx;
  padding: 20rpx;
  background: rgba(15, 23, 42, 0.6);
}

.equipment-admin__subtitle {
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
  color: #f8fafc;
}

.equipment-admin__slot-list {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220rpx, 1fr));
  gap: 16rpx;
}

.equipment-admin__slot {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  border: 1px solid rgba(148, 163, 184, 0.2);
  background: rgba(15, 23, 42, 0.8);
}

.equipment-admin__slot-label {
  font-size: 24rpx;
  color: #94a3b8;
}

.equipment-admin__slot-value {
  font-size: 26rpx;
  font-weight: 600;
  color: #e2e8f0;
}

.equipment-admin__empty {
  font-size: 24rpx;
  color: #64748b;
}

.equipment-admin__inventory {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.equipment-admin__inventory-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16rpx;
  border: 1px solid rgba(148, 163, 184, 0.2);
  border-radius: 14rpx;
  padding: 16rpx;
  background: rgba(15, 23, 42, 0.75);
}

.equipment-admin__inventory-info {
  flex: 1;
  min-width: 0;
}

.equipment-admin__inventory-name {
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 6rpx;
}

.equipment-admin__inventory-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  font-size: 22rpx;
  color: #94a3b8;
}

.equipment-admin__inventory-tag {
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  background: rgba(56, 189, 248, 0.15);
  color: #38bdf8;
}

.equipment-admin__inventory-remove {
  flex-shrink: 0;
  border: none;
  border-radius: 20rpx;
  padding: 8rpx 24rpx;
  font-size: 24rpx;
  line-height: 1.6;
}
