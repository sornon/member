page {
  background: #0b1120;
  color: #e2e8f0;
}

.entrance-admin {
  min-height: 100vh;
  min-height: calc(100vh - constant(safe-area-inset-top) - constant(safe-area-inset-bottom));
  min-height: calc(100vh - env(safe-area-inset-top) - env(safe-area-inset-bottom));
  padding: 32rpx;
  padding-bottom: calc(48rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(48rpx + env(safe-area-inset-bottom));
  background: #0b1120;
  color: #e2e8f0;
}

.entrance-admin__loading {
  text-align: center;
  padding: 120rpx 0;
  color: #94a3b8;
  font-size: 28rpx;
}

.entrance-admin__meta {
  margin-bottom: 24rpx;
  padding: 20rpx 24rpx;
  border-radius: 20rpx;
  background: rgba(15, 23, 42, 0.6);
  border: 1px solid rgba(148, 163, 184, 0.2);
}

.entrance-admin__meta-text {
  font-size: 26rpx;
  color: #94a3b8;
  line-height: 1.6;
}

.entrance-section {
  margin-bottom: 36rpx;
}

.entrance-section__title {
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.entrance-section__list {
  background: rgba(15, 23, 42, 0.85);
  border-radius: 24rpx;
  border: 1px solid rgba(148, 163, 184, 0.18);
  overflow: hidden;
  backdrop-filter: blur(12px);
}

.entrance-toggle {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  border-bottom: 1px solid rgba(148, 163, 184, 0.14);
}

.entrance-toggle:last-child {
  border-bottom: none;
}

.entrance-toggle__info {
  flex: 1;
  padding-right: 24rpx;
}

.entrance-toggle__label {
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 8rpx;
  color: #f8fafc;
}

.entrance-toggle__desc {
  font-size: 26rpx;
  color: #94a3b8;
  line-height: 1.5;
}

.entrance-toggle__switch {
  transform: scale(0.92);
}

.entrance-admin__hint {
  text-align: center;
  color: #fbbf24;
  font-size: 26rpx;
  margin-bottom: 24rpx;
}

.entrance-admin__actions {
  padding-top: 16rpx;
}

.entrance-admin__save {
  width: 100%;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #3b82f6, #8b5cf6);
  color: #ffffff;
  border: none;
  font-size: 30rpx;
  padding: 20rpx 0;
}

.entrance-admin__save:disabled {
  opacity: 0.6;
}
