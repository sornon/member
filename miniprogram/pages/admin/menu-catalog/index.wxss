.page {
  min-height: 100vh;
  background: #070a1a;
  padding: 16px;
  color: #f5f6ff;
  box-sizing: border-box;
}

.section-block {
  background: rgba(16, 20, 48, 0.85);
  border-radius: 18px;
  border: 1px solid rgba(255, 255, 255, 0.06);
  padding: 16px;
  margin-bottom: 18px;
}

.block-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12px;
}

.block-header-info {
  display: flex;
  flex-direction: column;
  gap: 4rpx;
}

.block-title {
  font-size: 30rpx;
  font-weight: 600;
}

.block-subtitle {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.65);
}

.block-actions {
  display: flex;
  align-items: center;
  gap: 8px;
}

.icon-btn {
  background: rgba(255, 255, 255, 0.08);
  color: rgba(255, 255, 255, 0.85);
  border: none;
}

.refresh-btn {
  background: rgba(255, 255, 255, 0.08);
  color: rgba(255, 255, 255, 0.85);
}

.section-list,
.category-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12px;
}

.section-item,
.category-item {
  min-width: 180rpx;
  padding: 14px 18px;
  border-radius: 14px;
  background: rgba(255, 255, 255, 0.04);
  border: 1px solid rgba(255, 255, 255, 0.05);
  color: rgba(255, 255, 255, 0.8);
  font-size: 26rpx;
}

.section-item.is-active,
.category-item.is-active {
  background: linear-gradient(135deg, #6a7cff, #4b5dff);
  color: #fff;
  border-color: rgba(255, 255, 255, 0.35);
}

.section-name,
.category-name {
  display: flex;
  align-items: baseline;
  flex-wrap: wrap;
  gap: 6rpx;
  font-weight: 600;
}

.section-name__title,
.category-name__title {
  color: rgba(255, 255, 255, 0.88);
}

.section-name__id,
.category-name__id,
.section-meta,
.category-meta {
  margin-top: 6rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.55);
}

.section-name__id,
.category-name__id {
  margin-top: 0;
}

.empty-hint {
  width: 100%;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  padding: 12px 0;
}

.form {
  margin-top: 16px;
  padding: 14px;
  border-radius: 14px;
  background: rgba(7, 10, 26, 0.7);
  border: 1px solid rgba(255, 255, 255, 0.05);
}

.form-title {
  font-size: 26rpx;
  font-weight: 600;
  margin-bottom: 12px;
}

.form-row {
  display: flex;
  align-items: center;
  gap: 12px;
  margin-bottom: 12px;
}

.form-row:last-of-type {
  margin-bottom: 0;
}

.form-row--inline {
  align-items: baseline;
}

.form-label {
  width: 120rpx;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.7);
}

.form-input {
  flex: 1;
  padding: 12rpx 16rpx;
  border-radius: 10px;
  background: rgba(255, 255, 255, 0.12);
  color: #fff;
  font-size: 26rpx;
}

.form-textarea {
  flex: 1;
  min-height: 120rpx;
  padding: 12rpx 16rpx;
  border-radius: 10px;
  background: rgba(255, 255, 255, 0.12);
  color: #fff;
  font-size: 26rpx;
}

.form-static {
  flex: 1;
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.75);
}

.form-hint {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.45);
  line-height: 1.5;
  margin: -6rpx 0 8px 120rpx;
}

.form-switch {
  margin-left: auto;
}

.submit-btn {
  width: 100%;
  margin-top: 12px;
  background: linear-gradient(135deg, #6a7cff, #4b5dff);
  border: none;
}

.item-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 16px;
}

.item-card {
  padding: 14px;
  border-radius: 14px;
  background: rgba(255, 255, 255, 0.04);
  border: 1px solid rgba(255, 255, 255, 0.06);
}

.item-card.is-active {
  border-color: rgba(227, 190, 119, 0.8);
  box-shadow: 0 0 0 1px rgba(227, 190, 119, 0.45);
}

.item-card.is-disabled {
  opacity: 0.65;
}

.item-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.item-title {
  font-size: 28rpx;
  font-weight: 600;
}

.item-id {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.55);
}

.item-meta {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.65);
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.item-variants {
  margin-top: 8px;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.variant {
  display: flex;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
}

.variant-label {
  color: rgba(255, 255, 255, 0.75);
}

.variant-unit {
  color: rgba(255, 255, 255, 0.55);
}

.variant-price {
  color: #e3be77;
  font-weight: 600;
}

.item-desc {
  margin-top: 8px;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}
