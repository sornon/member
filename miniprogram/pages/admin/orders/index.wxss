page {
  background: #0f172a;
}

.page {
  background: transparent;
  min-height: 100vh;
  padding: 24rpx 24rpx 120rpx;
  box-sizing: border-box;
}

.filters {
  background: rgba(15, 23, 42, 0.85);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  box-shadow: 0 12rpx 32rpx rgba(2, 6, 23, 0.45);
  border: 1px solid rgba(148, 163, 184, 0.2);
}

.filter-input .input {
  background: rgba(30, 41, 59, 0.65);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #e2e8f0;
}

.filter-actions {
  display: flex;
  gap: 16rpx;
}

.filter-actions .btn {
  flex: 1;
  font-size: 26rpx;
  border-radius: 12rpx;
  background: rgba(30, 41, 59, 0.7);
  color: #e2e8f0;
  border: 1px solid rgba(148, 163, 184, 0.25);
}

.filter-actions .btn::after {
  display: none;
}

.filter-actions .btn.primary {
  background: #2563eb;
  color: #ffffff;
  border-color: transparent;
}

.summary {
  margin: 32rpx 0 16rpx;
  font-size: 26rpx;
  color: rgba(203, 213, 225, 0.75);
}

.orders {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.order-card {
  background: rgba(15, 23, 42, 0.9);
  border-radius: 18rpx;
  padding: 28rpx;
  box-shadow: 0 18rpx 36rpx rgba(2, 6, 23, 0.6);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  border: 1px solid rgba(148, 163, 184, 0.18);
}

.order-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.order-id {
  font-weight: 600;
  font-size: 26rpx;
  color: #e2e8f0;
}

.status-wrap {
  margin-left: auto;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.status {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  padding: 6rpx 18rpx;
  border-radius: 32rpx;
  background: rgba(59, 130, 246, 0.12);
  color: #1d4ed8;
  white-space: nowrap;
}

.status.status-paid {
  background: rgba(16, 185, 129, 0.12);
  color: #059669;
}

.status.status-expired {
  background: rgba(148, 163, 184, 0.18);
  color: #475569;
}

.status.status-cancelled {
  background: rgba(248, 113, 113, 0.14);
  color: #dc2626;
}

.status.status-pending,
.status.status-created {
  background: rgba(59, 130, 246, 0.12);
  color: #93c5fd;
}

.status.status-clickable {
  position: relative;
}

.status.status-clickable::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: inherit;
  border: 1rpx dashed rgba(191, 219, 254, 0.4);
  pointer-events: none;
}

.order-meta,
.order-member {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx 24rpx;
  font-size: 24rpx;
  color: #cbd5f5;
}

.meta-text {
  color: rgba(226, 232, 240, 0.88);
}

.order-amount {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.order-amount .amount {
  font-size: 36rpx;
  font-weight: 600;
  color: #f8fafc;
}

.order-amount .reward {
  font-size: 24rpx;
  color: rgba(148, 163, 184, 0.8);
}

.order-items {
  border-top: 1rpx solid rgba(148, 163, 184, 0.18);
  padding-top: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.order-item {
  display: grid;
  grid-template-columns: 1fr auto auto auto;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  color: #e2e8f0;
}

.order-item .name {
  font-weight: 500;
}

.order-item .quantity,
.order-item .price,
.order-item .item-amount {
  color: rgba(148, 163, 184, 0.8);
}

.empty,
.loading,
.no-more {
  text-align: center;
  padding: 48rpx 0;
  font-size: 26rpx;
  color: rgba(148, 163, 184, 0.7);
}
