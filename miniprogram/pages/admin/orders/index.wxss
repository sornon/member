page {
  background: #0f172a;
}

.page {
  background: transparent;
  min-height: 100vh;
  padding: 24rpx 24rpx 120rpx;
  box-sizing: border-box;
}

.filters {
  background: rgba(15, 23, 42, 0.85);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  box-shadow: 0 12rpx 32rpx rgba(2, 6, 23, 0.45);
  border: 1px solid rgba(148, 163, 184, 0.2);
}

.filter-input .input {
  background: rgba(30, 41, 59, 0.65);
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #e2e8f0;
}

.filter-actions {
  display: flex;
  gap: 16rpx;
}

.filter-actions .btn {
  flex: 1;
  font-size: 26rpx;
  border-radius: 12rpx;
  background: rgba(30, 41, 59, 0.7);
  color: #e2e8f0;
  border: 1px solid rgba(148, 163, 184, 0.25);
}

.filter-actions .btn::after {
  display: none;
}

.filter-actions .btn.primary {
  background: #2563eb;
  color: #ffffff;
  border-color: transparent;
}

.summary {
  margin: 32rpx 0 16rpx;
  font-size: 26rpx;
  color: rgba(203, 213, 225, 0.75);
}

.orders {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.order-card {
  background: rgba(15, 23, 42, 0.9);
  border-radius: 18rpx;
  padding: 28rpx;
  box-shadow: 0 18rpx 36rpx rgba(2, 6, 23, 0.6);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  border: 1px solid rgba(148, 163, 184, 0.18);
}

.order-header {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.order-id {
  font-weight: 600;
  font-size: 26rpx;
  color: #e2e8f0;
}

.status-wrap {
  margin-left: auto;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.status {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  padding: 6rpx 18rpx;
  border-radius: 32rpx;
  background: rgba(59, 130, 246, 0.12);
  color: #1d4ed8;
  white-space: nowrap;
}

.status.status-paid {
  background: rgba(16, 185, 129, 0.12);
  color: #059669;
}

.status.status-expired {
  background: rgba(148, 163, 184, 0.18);
  color: #475569;
}

.status.status-cancelled {
  background: rgba(248, 113, 113, 0.14);
  color: #dc2626;
}

.status.status-pending,
.status.status-created {
  background: rgba(59, 130, 246, 0.12);
  color: #93c5fd;
}

.status.status-clickable {
  position: relative;
}

.status.status-clickable::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: inherit;
  border: 1rpx dashed rgba(191, 219, 254, 0.4);
  pointer-events: none;
}

.order-meta,
.order-member {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx 24rpx;
  font-size: 24rpx;
  color: #cbd5f5;
}

.meta-text {
  color: rgba(226, 232, 240, 0.88);
}

.order-amount {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.order-amount .amount {
  font-size: 36rpx;
  font-weight: 600;
  color: #f8fafc;
}

.order-amount .reward {
  font-size: 24rpx;
  color: rgba(148, 163, 184, 0.8);
}

.order-items {
  border-top: 1rpx solid rgba(148, 163, 184, 0.18);
  padding-top: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.order-item {
  display: grid;
  grid-template-columns: 1fr auto auto auto;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  color: #e2e8f0;
}

.order-item .name {
  font-weight: 500;
}

.order-item .quantity,
.order-item .price,
.order-item .item-amount {
  color: rgba(148, 163, 184, 0.8);
}

.empty,
.loading,
.no-more {
  text-align: center;
  padding: 48rpx 0;
  font-size: 26rpx;
  color: rgba(148, 163, 184, 0.7);
}

.order-actions {
  display: flex;
  justify-content: flex-end;
}

.force-btn {
  background: linear-gradient(135deg, #2563eb, #3b82f6);
  border: none;
  color: #fff;
  padding: 10rpx 32rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
}

.force-btn::after {
  display: none;
}

.force-dialog-mask {
  position: fixed;
  inset: 0;
  background: rgba(15, 23, 42, 0.75);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  box-sizing: border-box;
  z-index: 999;
}

.force-dialog {
  width: 100%;
  max-width: 640rpx;
  background: rgba(15, 23, 42, 0.95);
  border-radius: 24rpx;
  border: 1px solid rgba(148, 163, 184, 0.28);
  box-shadow: 0 24rpx 48rpx rgba(2, 6, 23, 0.65);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

.force-dialog__title {
  padding: 28rpx 32rpx 12rpx;
  font-size: 30rpx;
  font-weight: 600;
  color: #e2e8f0;
}

.force-dialog__body {
  padding: 0 32rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.force-dialog__search {
  display: flex;
  gap: 16rpx;
}

.force-dialog__input {
  flex: 1;
  background: rgba(30, 41, 59, 0.75);
  border-radius: 14rpx;
  padding: 20rpx 24rpx;
  color: #f1f5f9;
  font-size: 26rpx;
}

.force-dialog__search-btn {
  background: #3b82f6;
  color: #fff;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 24rpx;
}

.force-dialog__search-btn::after {
  display: none;
}

.force-dialog__error {
  color: #fca5a5;
  font-size: 24rpx;
}

.force-dialog__results {
  max-height: 460rpx;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.force-dialog__loading,
.force-dialog__empty {
  text-align: center;
  color: rgba(148, 163, 184, 0.8);
  font-size: 24rpx;
  padding: 24rpx 0;
}

.force-dialog__member {
  background: rgba(30, 41, 59, 0.65);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  border: 1px solid transparent;
}

.force-dialog__member.is-active {
  border-color: rgba(96, 165, 250, 0.9);
  background: rgba(37, 99, 235, 0.2);
}

.force-dialog__member .member-name {
  font-size: 26rpx;
  color: #f8fafc;
  font-weight: 500;
}

.force-dialog__member .member-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx 20rpx;
  font-size: 22rpx;
  color: rgba(203, 213, 225, 0.85);
}

.force-dialog__footer {
  padding: 20rpx 32rpx 28rpx;
  display: flex;
  justify-content: flex-end;
  gap: 20rpx;
}

.force-dialog__btn {
  padding: 0 32rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  background: rgba(30, 41, 59, 0.75);
  color: #e2e8f0;
}

.force-dialog__btn::after {
  display: none;
}

.force-dialog__btn.primary {
  background: linear-gradient(135deg, #2563eb, #3b82f6);
  color: #fff;
  border: none;
}
