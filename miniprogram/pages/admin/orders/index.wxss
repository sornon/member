.page {
  background: #f5f6fa;
  min-height: 100vh;
  padding: 24rpx 24rpx 120rpx;
  box-sizing: border-box;
}

.filters {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  box-shadow: 0 12rpx 32rpx rgba(15, 38, 96, 0.06);
}

.filter-input .input {
  background: #f7f8fc;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #1f2d3d;
}

.filter-actions {
  display: flex;
  gap: 16rpx;
}

.filter-actions .btn {
  flex: 1;
  font-size: 26rpx;
  border-radius: 12rpx;
}

.filter-actions .btn.primary {
  background: #1d4ed8;
  color: #ffffff;
}

.summary {
  margin: 32rpx 0 16rpx;
  font-size: 26rpx;
  color: #64748b;
}

.orders {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.order-card {
  background: #ffffff;
  border-radius: 18rpx;
  padding: 28rpx;
  box-shadow: 0 18rpx 36rpx rgba(15, 38, 96, 0.08);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-id {
  font-weight: 600;
  font-size: 30rpx;
  color: #1e293b;
}

.status {
  font-size: 26rpx;
  padding: 6rpx 18rpx;
  border-radius: 32rpx;
  background: rgba(59, 130, 246, 0.12);
  color: #1d4ed8;
}

.status.status-paid {
  background: rgba(16, 185, 129, 0.12);
  color: #059669;
}

.status.status-expired {
  background: rgba(148, 163, 184, 0.18);
  color: #475569;
}

.status.status-cancelled {
  background: rgba(248, 113, 113, 0.14);
  color: #dc2626;
}

.order-meta,
.order-member {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx 24rpx;
  font-size: 24rpx;
  color: #475569;
}

.meta-text {
  color: #475569;
}

.order-amount {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.order-amount .amount {
  font-size: 36rpx;
  font-weight: 600;
  color: #0f172a;
}

.order-amount .reward {
  font-size: 24rpx;
  color: #64748b;
}

.order-items {
  border-top: 1rpx solid #e2e8f0;
  padding-top: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.order-item {
  display: grid;
  grid-template-columns: 1fr auto auto auto;
  align-items: center;
  gap: 12rpx;
  font-size: 24rpx;
  color: #334155;
}

.order-item .name {
  font-weight: 500;
}

.order-item .quantity,
.order-item .price,
.order-item .item-amount {
  color: #64748b;
}

.empty,
.loading,
.no-more {
  text-align: center;
  padding: 48rpx 0;
  font-size: 26rpx;
  color: #94a3b8;
}
