.cleanup-page {
  padding: 24rpx;
  background: #0b122f;
  min-height: 100vh;
  box-sizing: border-box;
  color: #f5f7ff;
}

.intro-card,
.result-card {
  background: rgba(15, 24, 58, 0.85);
  border-radius: 20rpx;
  padding: 32rpx;
  box-shadow: 0 12rpx 40rpx rgba(5, 9, 33, 0.35);
  margin-bottom: 32rpx;
}

.intro-title {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 16rpx;
}

.intro-desc {
  font-size: 28rpx;
  line-height: 1.6;
  color: rgba(245, 247, 255, 0.88);
  margin-bottom: 12rpx;
}

.intro-note {
  font-size: 26rpx;
  line-height: 1.5;
  color: rgba(245, 247, 255, 0.6);
  margin-bottom: 32rpx;
}

.cleanup-button {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #3d6bff, #667cff);
  color: #ffffff;
  border-radius: 44rpx;
  font-size: 30rpx;
  font-weight: 600;
}

.cleanup-button[disabled] {
  opacity: 0.7;
}

.result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.result-title {
  font-size: 32rpx;
  font-weight: 600;
}

.result-time {
  font-size: 24rpx;
  color: rgba(245, 247, 255, 0.5);
}

.result-summary {
  font-size: 30rpx;
  font-weight: 500;
  margin-bottom: 12rpx;
}

.result-members {
  font-size: 26rpx;
  color: rgba(245, 247, 255, 0.75);
  margin-bottom: 24rpx;
}

.detail-list {
  border: 1rpx solid rgba(102, 124, 255, 0.25);
  border-radius: 16rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  font-size: 26rpx;
  background: rgba(12, 20, 48, 0.9);
}

.detail-item + .detail-item {
  border-top: 1rpx solid rgba(102, 124, 255, 0.15);
}

.detail-name {
  color: rgba(245, 247, 255, 0.82);
}

.detail-count {
  color: #7aa5ff;
  font-weight: 600;
}

.detail-empty {
  font-size: 26rpx;
  color: rgba(245, 247, 255, 0.6);
}

.error-block {
  border-radius: 16rpx;
  padding: 24rpx;
  background: rgba(255, 99, 132, 0.12);
  border: 1rpx solid rgba(255, 99, 132, 0.3);
}

.error-title {
  font-size: 26rpx;
  font-weight: 600;
  color: #ff6378;
  margin-bottom: 12rpx;
}

.error-item {
  font-size: 24rpx;
  line-height: 1.5;
  color: rgba(255, 178, 189, 0.9);
}
