page {
  background: #0f172a;
}

.page {
  min-height: 100vh;
  padding: 24rpx 24rpx 120rpx;
  box-sizing: border-box;
  background: transparent;
  color: #e2e8f0;
}

.section-block {
  background: rgba(15, 23, 42, 0.88);
  border-radius: 18rpx;
  border: 1px solid rgba(148, 163, 184, 0.2);
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 16rpx 32rpx rgba(2, 6, 23, 0.4);
}

.block-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.block-title {
  font-size: 32rpx;
  font-weight: 600;
}

.block-actions {
  display: flex;
  gap: 16rpx;
}

.icon-btn,
.refresh-btn,
.edit-btn,
.retry-btn,
.ghost-btn {
  background: rgba(30, 41, 59, 0.75);
  color: rgba(226, 232, 240, 0.92);
  border-radius: 12rpx;
  border: 1px solid rgba(148, 163, 184, 0.28);
}

.icon-btn::after,
.refresh-btn::after,
.edit-btn::after,
.retry-btn::after,
.ghost-btn::after,
.submit-btn::after {
  display: none;
}

.refresh-btn {
  min-width: 120rpx;
}

.state-hint {
  padding: 120rpx 24rpx 60rpx;
  text-align: center;
  color: rgba(203, 213, 225, 0.8);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  align-items: center;
}

.state-hint--error {
  color: #fca5a5;
}

.state-hint--empty {
  color: rgba(148, 163, 184, 0.75);
  padding-top: 48rpx;
}

.retry-btn {
  padding: 12rpx 28rpx;
}

.activity-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-card {
  background: rgba(15, 23, 42, 0.92);
  border-radius: 18rpx;
  padding: 24rpx;
  border: 1px solid rgba(148, 163, 184, 0.2);
  box-shadow: 0 14rpx 28rpx rgba(2, 6, 23, 0.45);
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.activity-card__header {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.activity-card__title {
  font-size: 30rpx;
  font-weight: 600;
  flex: 1;
}

.activity-card__status {
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: #fff;
}

.activity-card__status--ongoing {
  background: linear-gradient(120deg, #38bdf8, #34d399);
}

.activity-card__status--upcoming {
  background: linear-gradient(120deg, #f97316, #f43f5e);
}

.activity-card__status--ended,
.activity-card__status--archived {
  background: linear-gradient(120deg, #818cf8, #6366f1);
  opacity: 0.78;
}

.activity-card__status--draft {
  background: linear-gradient(120deg, #fbbf24, #f97316);
}

.activity-card__tagline {
  font-size: 26rpx;
  color: rgba(226, 232, 240, 0.88);
}

.activity-card__meta,
.activity-card__perk {
  font-size: 24rpx;
  color: rgba(203, 213, 225, 0.9);
}

.activity-card__section-title {
  font-size: 24rpx;
  font-weight: 600;
  color: rgba(226, 232, 240, 0.92);
  margin-top: 8rpx;
}

.activity-card__perk {
  padding-left: 8rpx;
}

.activity-card__tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.activity-card__tag {
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  background: rgba(59, 130, 246, 0.18);
  color: rgba(191, 219, 254, 0.95);
  border: 1px solid rgba(59, 130, 246, 0.35);
  font-size: 22rpx;
}

.activity-card__actions {
  margin-top: 12rpx;
  display: flex;
  justify-content: flex-end;
}

.edit-btn {
  padding: 12rpx 28rpx;
}

.form {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.form-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.form-row--split {
  display: flex;
  gap: 16rpx;
}

.form-row--split .form-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.form-row--full {
  align-items: flex-start;
}

.form-label {
  min-width: 150rpx;
  font-size: 26rpx;
  color: rgba(203, 213, 225, 0.9);
}

.form-row--full .form-label {
  padding-top: 10rpx;
}

.form-input,
.form-textarea,
.picker-value {
  flex: 1;
  background: rgba(30, 41, 59, 0.72);
  border-radius: 12rpx;
  border: 1px solid rgba(148, 163, 184, 0.3);
  color: #e2e8f0;
  font-size: 26rpx;
  padding: 18rpx 24rpx;
  box-sizing: border-box;
  font-family: inherit;
}

.form-input,
.picker-value {
  min-height: 76rpx;
  line-height: 1.5;
  white-space: normal;
  overflow: visible;
  display: block;
}

.form-input:focus {
  border-color: rgba(96, 165, 250, 0.75);
}

.form-textarea {
  min-height: 140rpx;
  line-height: 1.6;
}

.picker-value {
  display: flex;
  align-items: center;
}

.form-actions {
  display: flex;
  gap: 16rpx;
  justify-content: flex-end;
  margin-top: 8rpx;
}

.submit-btn {
  flex: none;
  padding: 14rpx 32rpx;
  border-radius: 12rpx;
  background: #2563eb;
  color: #fff;
}

.ghost-btn {
  padding: 14rpx 32rpx;
}

@media (min-width: 768px) {
  .page {
    padding-left: 48rpx;
    padding-right: 48rpx;
  }
}
