.activity-detail {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-bottom: calc(32rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.activity-detail--immersive-root {
  padding: 0;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.activity-detail__state {
  text-align: center;
  padding: 80rpx 24rpx;
  color: rgba(231, 236, 255, 0.82);
}

.activity-detail__state--error {
  color: #ffb7c5;
}

.activity-detail__state--empty {
  color: rgba(199, 209, 255, 0.78);
}

.activity-detail__state-text {
  display: block;
  margin-bottom: 24rpx;
}

.activity-detail__retry {
  margin-top: 12rpx;
}

.activity-detail__card {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-detail__header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
}

.activity-detail__title {
  font-size: 40rpx;
  font-weight: 600;
  line-height: 1.3;
}

.activity-detail__status {
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  font-size: 24rpx;
  font-weight: 500;
  color: #fff;
  white-space: nowrap;
}

.activity-detail__status--ongoing {
  background: linear-gradient(120deg, #47d1a6, #39aefb);
}

.activity-detail__status--upcoming {
  background: linear-gradient(120deg, #ffb347, #ff6f91);
}

.activity-detail__status--ended,
.activity-detail__status--archived {
  background: linear-gradient(120deg, #8c95b5, #5a6588);
}

.activity-detail__status--draft {
  background: linear-gradient(120deg, #f0d264, #f79533);
}

.activity-detail__tagline {
  font-size: 30rpx;
  color: rgba(255, 255, 255, 0.9);
}

.activity-detail__summary,
.activity-detail__highlight,
.activity-detail__meta,
.activity-detail__notes {
  font-size: 26rpx;
  line-height: 1.6;
  color: rgba(233, 236, 255, 0.86);
}

.activity-detail__summary {
  margin-top: 4rpx;
}

.activity-detail__cover {
  margin-top: 8rpx;
  border-radius: 24rpx;
  overflow: hidden;
  border: 1px solid rgba(108, 132, 255, 0.25);
}

.activity-detail__cover-image {
  width: 100%;
  height: 320rpx;
  display: block;
}

.activity-detail__section {
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1px dashed rgba(119, 138, 230, 0.35);
}

.activity-detail__section-title {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 12rpx;
}

.activity-detail__perk {
  display: flex;
  align-items: flex-start;
  font-size: 26rpx;
  line-height: 1.5;
  color: rgba(240, 244, 255, 0.86);
  margin-top: 8rpx;
}

.activity-detail__bullet {
  width: 28rpx;
  color: #7ea8ff;
}

.activity-detail__perk-text {
  flex: 1;
}

.activity-detail__tags {
  margin-top: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.activity-detail__tag {
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.88);
  background: rgba(92, 118, 255, 0.3);
  border: 1px solid rgba(92, 118, 255, 0.45);
}

.activity-detail__notes {
  white-space: pre-wrap;
}

.activity-detail__share {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  align-items: stretch;
}

.activity-detail__share-title {
  font-size: 30rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.9);
}

.activity-detail__share-actions {
  display: flex;
  gap: 24rpx;
  flex-wrap: wrap;
}

.activity-detail__share-button {
  flex: 1;
}

.activity-detail__share-button:first-child {
  min-width: 240rpx;
}

.activity-detail__immersive {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  color: #f8faff;
  overflow: hidden;
}

.activity-detail__immersive-background {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  display: block;
  z-index: 0;
}

.activity-detail__immersive::before {
  content: '';
  position: absolute;
  inset: 0;
  background: linear-gradient(180deg, rgba(5, 9, 33, 0.25) 0%, rgba(5, 9, 33, 0.78) 55%, rgba(5, 9, 33, 0.95) 100%);
}

.activity-detail__immersive-content {
  position: relative;
  z-index: 1;
  padding: 88rpx 48rpx 64rpx;
  padding-bottom: calc(64rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(64rpx + env(safe-area-inset-bottom));
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-detail__immersive-header {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.activity-detail__immersive-title {
  font-size: 56rpx;
  font-weight: 700;
  line-height: 1.2;
  text-shadow: 0 12rpx 24rpx rgba(2, 6, 20, 0.6);
}

.activity-detail__immersive-header .activity-detail__status {
  align-self: flex-start;
  box-shadow: 0 12rpx 24rpx rgba(8, 12, 36, 0.4);
}

.activity-detail__immersive-meta {
  font-size: 28rpx;
  line-height: 1.7;
  color: rgba(247, 249, 255, 0.96);
}

.activity-detail__immersive-highlight {
  font-size: 30rpx;
  line-height: 1.6;
  color: rgba(255, 222, 188, 0.95);
  margin-top: 8rpx;
}

.activity-detail__immersive-divider {
  margin: 20rpx 0;
  height: 1rpx;
  background: rgba(241, 244, 255, 0.3);
}

.activity-detail__immersive-subtitle {
  font-size: 32rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.95);
  letter-spacing: 3rpx;
}

.activity-detail__immersive-tickets {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.activity-detail__immersive-ticket {
  background: rgba(6, 12, 36, 0.55);
  border-radius: 28rpx;
  border: 1rpx solid rgba(205, 216, 255, 0.32);
  padding: 28rpx 32rpx;
  backdrop-filter: blur(24rpx);
  box-shadow: 0 18rpx 36rpx rgba(6, 10, 32, 0.45);
  color: rgba(244, 247, 255, 0.95);
}

.activity-detail__immersive-ticket-header {
  display: flex;
  align-items: baseline;
  justify-content: space-between;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.activity-detail__immersive-ticket-name {
  font-size: 32rpx;
  font-weight: 600;
  letter-spacing: 2rpx;
}

.activity-detail__immersive-ticket-price {
  font-size: 30rpx;
  font-weight: 600;
  color: #ffdf8c;
}

.activity-detail__immersive-ticket-desc {
  font-size: 26rpx;
  line-height: 1.6;
  color: rgba(230, 236, 255, 0.88);
}

.activity-detail__immersive-share {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 4rpx;
}

.activity-detail__share-button--immersive {
  border-radius: 999rpx;
  font-size: 30rpx;
  height: 92rpx;
  line-height: 92rpx;
}

.activity-detail__share-button--immersive::after {
  border: none;
}

.activity-detail__share-button--primary {
  background: linear-gradient(135deg, rgba(110, 130, 255, 0.98), rgba(172, 140, 255, 0.95));
  color: #ffffff;
  border: none;
  box-shadow: 0 18rpx 32rpx rgba(38, 26, 95, 0.45);
}

.activity-detail__share-button--secondary {
  background: rgba(10, 16, 40, 0.55);
  color: rgba(241, 244, 255, 0.92);
  border: 1rpx solid rgba(211, 223, 255, 0.35);
  backdrop-filter: blur(10rpx);
}
