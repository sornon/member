.activity-page {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-bottom: calc(32rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.activity-state {
  text-align: center;
  padding: 80rpx 24rpx;
  color: rgba(231, 236, 255, 0.82);
}

.activity-state--error {
  color: #ffb7c5;
}

.activity-state--empty {
  color: rgba(199, 209, 255, 0.78);
}

.activity-state__text {
  display: block;
  margin-bottom: 24rpx;
}

.activity-retry {
  margin-top: 12rpx;
}

.activity-card {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.activity-card__header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
}

.activity-card__title {
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1.3;
}

.activity-card__status {
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: #fff;
}

.activity-card__status--ongoing {
  background: linear-gradient(120deg, #47d1a6, #39aefb);
}

.activity-card__status--upcoming {
  background: linear-gradient(120deg, #ffb347, #ff6f91);
}

.activity-card__status--ended,
.activity-card__status--archived {
  background: linear-gradient(120deg, #8c95b5, #5a6588);
}

.activity-card__status--draft {
  background: linear-gradient(120deg, #f0d264, #f79533);
}

.activity-card__tagline {
  margin-top: 16rpx;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.85);
}

.activity-card__summary,
.activity-card__highlight,
.activity-card__meta,
.activity-card__notes {
  margin-top: 8rpx;
  font-size: 26rpx;
  line-height: 1.6;
  color: rgba(233, 236, 255, 0.86);
}

.activity-card__cover {
  margin-top: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  border: 1px solid rgba(108, 132, 255, 0.25);
}

.activity-card__cover-image {
  width: 100%;
  height: 280rpx;
  display: block;
}

.activity-card__section {
  margin-top: 20rpx;
  padding-top: 12rpx;
  border-top: 1px dashed rgba(119, 138, 230, 0.35);
}

.activity-card__section-title {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 12rpx;
}

.activity-card__perk {
  display: flex;
  align-items: flex-start;
  font-size: 26rpx;
  line-height: 1.5;
  color: rgba(240, 244, 255, 0.86);
  margin-top: 8rpx;
}

.activity-card__bullet {
  width: 28rpx;
  color: #7ea8ff;
}

.activity-card__perk-text {
  flex: 1;
}

.activity-card__tags {
  margin-top: 16rpx;
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.activity-card__tag {
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.88);
  background: rgba(92, 118, 255, 0.3);
  border: 1px solid rgba(92, 118, 255, 0.45);
}

.activity-card__notes {
  white-space: pre-wrap;
}
