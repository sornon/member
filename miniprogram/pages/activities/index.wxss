.activity-page {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  padding-bottom: calc(32rpx + constant(safe-area-inset-bottom));
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.activity-state {
  text-align: center;
  padding: 80rpx 24rpx;
  color: rgba(231, 236, 255, 0.82);
}

.activity-state--error {
  color: #ffb7c5;
}

.activity-state--empty {
  color: rgba(199, 209, 255, 0.78);
}

.activity-state__text {
  display: block;
  margin-bottom: 24rpx;
}

.activity-retry {
  margin-top: 12rpx;
}

.activity-card {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.activity-card__header {
  display: flex;
  align-items: flex-start;
  justify-content: space-between;
  gap: 16rpx;
}

.activity-card__title-wrap {
  display: inline-flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
  min-width: 0;
  color: inherit;
}

.activity-card__title {
  font-size: 36rpx;
  font-weight: 600;
  line-height: 1.3;
  color: #fff;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.activity-card__title-wrap--hover .activity-card__title {
  opacity: 0.8;
}


.activity-card__indicator {
  flex-shrink: 0;
  width: 48rpx;
  height: 48rpx;
  border-radius: 999rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, rgba(123, 144, 255, 0.58), rgba(87, 110, 255, 0.38));
  border: 1px solid rgba(174, 191, 255, 0.45);
  box-shadow: 0 6rpx 12rpx rgba(24, 33, 79, 0.28);
}

.activity-card__indicator-icon {
  font-size: 34rpx;
  line-height: 1;
  color: #fff;
}

.activity-card__title-wrap--hover .activity-card__indicator {
  background: linear-gradient(135deg, rgba(123, 144, 255, 0.88), rgba(87, 110, 255, 0.68));
  border-color: rgba(174, 191, 255, 0.75);
  box-shadow: 0 8rpx 16rpx rgba(24, 33, 79, 0.32);
}

.activity-card__status {
  padding: 8rpx 20rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: #fff;
}

.activity-card__status--ongoing {
  background: linear-gradient(120deg, #47d1a6, #39aefb);
}

.activity-card__status--upcoming {
  background: linear-gradient(120deg, #ffb347, #ff6f91);
}

.activity-card__status--ended,
.activity-card__status--archived {
  background: linear-gradient(120deg, #8c95b5, #5a6588);
}

.activity-card__status--draft {
  background: linear-gradient(120deg, #f0d264, #f79533);
}

.activity-card__tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.activity-card__tag {
  padding: 6rpx 18rpx;
  border-radius: 999rpx;
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.88);
  background: rgba(92, 118, 255, 0.3);
  border: 1px solid rgba(92, 118, 255, 0.45);
}

.activity-card__meta {
  font-size: 26rpx;
  line-height: 1.5;
  color: rgba(233, 236, 255, 0.86);
}

