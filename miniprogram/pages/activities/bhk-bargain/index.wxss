.bhk-hero {
  position: relative;
  width: 100%;
  height: 460rpx;
  overflow: hidden;
}

.bhk-hero__image {
  position: absolute;
  inset: 0;
  width: 100%;
  height: 100%;
  display: block;
  object-fit: cover;
}

.bhk-hero__mask {
  position: absolute;
  inset: 0;
  pointer-events: none;
  background: linear-gradient(180deg, rgba(5, 8, 20, 0) 0%, rgba(5, 8, 20, 0.76) 90%, #050814 100%);
}

.bhk-page {
  position: relative;
  z-index: 1;
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-top: -300rpx;
  padding: 24rpx;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
  min-height: 100vh;
}

.bhk-card {
  background: rgba(13, 18, 35, 0.9);
  border: 1rpx solid rgba(255, 211, 149, 0.25);
  border-radius: 24rpx;
  padding: 24rpx;
  color: #f8f5ff;
  box-shadow: 0 18rpx 48rpx rgba(0, 0, 0, 0.45);
}

.bhk-state {
  text-align: center;
  padding: 80rpx 24rpx;
  color: rgba(240, 230, 201, 0.9);
}

.bhk-state--error {
  color: #ffb8b8;
}

.bhk-banner {
  position: relative;
  border-radius: 28rpx;
  overflow: hidden;
  background-size: cover;
  background-position: center;
  border: 1rpx solid rgba(255, 222, 180, 0.35);
}

.bhk-banner__mask {
  position: absolute;
  inset: 0;
  background: linear-gradient(135deg, rgba(5, 8, 20, 0.7), rgba(5, 8, 20, 0.35));
}

.bhk-banner__content {
  position: relative;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  color: #fdf7ed;
}

.bhk-banner__badge {
  position: absolute;
  top: 28rpx;
  right: -24rpx;
  padding: 12rpx 36rpx;
  background: linear-gradient(135deg, #ffdb4d, #ff7a00);
  color: #1f0f00;
  font-weight: 800;
  font-size: 28rpx;
  transform: rotate(18deg);
  box-shadow: 0 12rpx 24rpx rgba(255, 140, 0, 0.35);
  letter-spacing: 2rpx;
}

.bhk-banner__title {
  font-size: 40rpx;
  font-weight: 700;
}

.bhk-banner__subtitle {
  font-size: 28rpx;
  color: rgba(255, 240, 220, 0.9);
}

.bhk-banner__pill-row {
  display: flex;
  gap: 12rpx;
  flex-wrap: wrap;
  margin-top: 6rpx;
}

.bhk-banner__pill {
  padding: 10rpx 16rpx;
  background: rgba(255, 220, 170, 0.12);
  border: 1rpx solid rgba(255, 220, 170, 0.3);
  border-radius: 999rpx;
  font-size: 24rpx;
  color: #ffe9c7;
}

.bhk-banner__pill--accent {
  background: linear-gradient(135deg, rgba(255, 202, 120, 0.38), rgba(255, 140, 80, 0.4));
  color: #2a1200;
  border-color: rgba(255, 213, 140, 0.8);
  font-weight: 700;
}

.bhk-banner__pill--link {
  text-decoration: underline;
  border-color: rgba(255, 213, 140, 0.55);
}

.bhk-banner__pill--link:active {
  opacity: 0.8;
}

.bhk-banner__pill--notice {
  background: rgba(82, 255, 201, 0.16);
  border-color: rgba(82, 255, 201, 0.4);
  color: #c5fff1;
  font-weight: 600;
}

.bhk-banner__link {
  color: #4dffff;
  font-weight: 700;
  text-decoration: underline;
  padding: 0 6rpx;
}

.bhk-banner__member {
  margin-top: 0;
  padding: 0;
  background: transparent;
  border: none;
  border-radius: 0;
  display: flex;
  align-items: center;
  gap: 14rpx;
  box-shadow: none;
}

.bhk-banner__avatar-wrapper {
  position: relative;
  width: 110rpx;
  height: 110rpx;
  flex-shrink: 0;
}

.bhk-banner__avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: block;
  border: 1rpx solid rgba(255, 231, 198, 0.55);
}

.bhk-banner__avatar-frame {
  position: absolute;
  top: -12%;
  left: -12%;
  width: 124%;
  height: 124%;
  pointer-events: none;
}

.bhk-banner__member-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  min-width: 0;
}

.bhk-banner__member-name {
  font-size: 32rpx;
  font-weight: 700;
  color: #fff2da;
  text-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.35);
  max-width: 360rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  text-align: center;
}

.bhk-banner__member-tags {
  display: flex;
  align-items: center;
  gap: 10rpx;
  flex-wrap: wrap;
}

.bhk-banner__member-title {
  height: 52rpx;
  width: auto;
  max-width: 260rpx;
  display: block;
}

.bhk-banner__member-title-text {
  padding: 6rpx 12rpx;
  border-radius: 14rpx;
  background: rgba(255, 222, 180, 0.18);
  color: #ffe6c7;
  font-size: 24rpx;
}

.bhk-banner__member-tag {
  padding: 6rpx 12rpx;
  border-radius: 14rpx;
  background: rgba(255, 231, 198, 0.14);
  border: 1rpx solid rgba(255, 212, 128, 0.3);
  color: #ffe8c5;
  font-size: 24rpx;
  text-shadow: 0 1rpx 3rpx rgba(0, 0, 0, 0.35);
}

.bhk-banner__member-tag--image {
  padding: 0;
  border: none;
  background: none;
  height: 52rpx;
  width: auto;
  display: block;
}

.bhk-price-card__row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 12rpx;
}

.bhk-price-card__original {
  text-decoration: line-through;
  color: rgba(255, 230, 200, 0.8);
  font-size: 26rpx;
}

.bhk-price-card__current {
  font-size: 44rpx;
  font-weight: 700;
  color: #ffd480;
}

.bhk-price-card__current--floor {
  color: #ff5959;
}

.bhk-price-card__hint {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 8rpx;
  color: rgba(255, 236, 210, 0.9);
}

.bhk-price-card__icon {
  height: 56rpx;
  width: 56rpx!important;
  line-height: 56rpx;
  border-radius: 50%;
  border-color: rgba(255, 210, 150, 0.6);
  color: #ffd48c;
  font-size: 28rpx!important;
  padding: 0!important;
}

.bhk-price-card__progress {
  margin-top: 10rpx;
  font-size: 26rpx;
  color: rgba(255, 236, 210, 0.85);
}

.bhk-price-card__perks {
  margin-top: 12rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.bhk-price-card__perk {
  padding: 12rpx 14rpx;
  background: rgba(255, 211, 149, 0.08);
  border-radius: 16rpx;
  border: 1rpx dashed rgba(255, 211, 149, 0.4);
  color: #fcead1;
}

.bhk-turntable__header {
  display: flex;
  justify-content: space-between;
  gap: 18rpx;
  font-size: 26rpx;
  color: #ffe8c5;
}

.bhk-turntable__header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
  min-width: 0;
}

.bhk-turntable__header-right {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  align-items: flex-end;
  flex: 1;
}

.bhk-turntable__summary {
  display: flex;
  align-items: baseline;
  gap: 10rpx;
}

.bhk-turntable__label {
  opacity: 0.86;
}

.bhk-turntable__value {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffd480;
}

.bhk-turntable__reward {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 10rpx;
  flex: 1;
  text-align: right;
}

.bhk-turntable__reward-text {
  color: #ffd480;
  font-weight: 600;
}

.bhk-turntable__reward-pill {
  position: relative;
  display: inline-flex;
  align-items: center;
  padding: 12rpx 20rpx;
  border-radius: 999rpx;
  color: #ffe8c5;
  font-weight: 600;
  overflow: hidden;
}

.bhk-turntable__reward-pill--glow {
  border-color: rgba(255, 223, 173, 0.9);
  color: #2b1400;
  background: linear-gradient(120deg, #f5d98a 0%, #ffd77b 30%, #fff5d6 50%, #ffd77b 70%, #f5d98a 100%);
  background-size: 220% 220%;
  box-shadow: 0 0 18rpx rgba(255, 215, 141, 0.6), 0 0 0 2rpx rgba(255, 229, 190, 0.56);
  animation: bhk-golden-sheen 2s ease-in-out infinite, bhk-golden-pulse 2s ease-in-out infinite;
}

.bhk-turntable__reward-pill--glow::before {
  content: "";
  position: absolute;
  inset: -20%;
  background: radial-gradient(circle at 20% 20%, rgba(255, 248, 220, 0.7), transparent 45%),
    radial-gradient(circle at 80% 40%, rgba(255, 227, 168, 0.6), transparent 40%),
    radial-gradient(circle at 50% 80%, rgba(255, 209, 120, 0.5), transparent 45%);
  opacity: 0.85;
  filter: blur(6rpx);
  z-index: 0;
  animation: bhk-golden-pulse 2s ease-in-out infinite;
}

.bhk-turntable__reward-pill text {
  position: relative;
  z-index: 1;
}

@keyframes bhk-golden-sheen {
  0% {
    background-position: 0% 50%;
  }

  50% {
    background-position: 100% 50%;
  }

  100% {
    background-position: 0% 50%;
  }
}

@keyframes bhk-golden-pulse {
  0% {
    box-shadow: 0 0 12rpx rgba(255, 215, 141, 0.4), 0 0 0 2rpx rgba(255, 229, 190, 0.45);
  }

  50% {
    box-shadow: 0 0 22rpx rgba(255, 227, 168, 0.8), 0 0 0 4rpx rgba(255, 243, 210, 0.7);
  }

  100% {
    box-shadow: 0 0 12rpx rgba(255, 215, 141, 0.4), 0 0 0 2rpx rgba(255, 229, 190, 0.45);
  }
}

.bhk-turntable__wheel {
  margin-top: 18rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.bhk-turntable__segments {
  display: grid;
  grid-template-columns: repeat(4, minmax(0, 1fr));
  gap: 12rpx;
}

.bhk-turntable__segment {
  background: radial-gradient(circle at 30% 30%, rgba(255, 227, 180, 0.25), rgba(255, 210, 140, 0.05));
  border: 1rpx solid rgba(255, 211, 149, 0.35);
  border-radius: 16rpx;
  text-align: center;
  padding: 16rpx 0;
  color: #ffe8c5;
  font-weight: 600;
}

.bhk-turntable__segment--active {
  border-color: #ffd480;
  box-shadow: 0 0 0 2rpx rgba(255, 212, 128, 0.6), 0 10rpx 18rpx rgba(0, 0, 0, 0.35);
  background: radial-gradient(circle at 30% 30%, rgba(255, 240, 200, 0.45), rgba(255, 210, 140, 0.12));
}

@keyframes bhk-divine-glow {
  0% {
    box-shadow: 0 14rpx 30rpx rgba(255, 128, 38, 0.35), 0 0 0 0 rgba(255, 179, 71, 0.45);
  }

  50% {
    box-shadow: 0 20rpx 48rpx rgba(255, 144, 42, 0.65), 0 0 0 14rpx rgba(255, 189, 92, 0.26);
  }

  100% {
    box-shadow: 0 14rpx 30rpx rgba(255, 128, 38, 0.35), 0 0 0 0 rgba(255, 179, 71, 0.45);
  }
}

@keyframes bhk-divine-shimmer {
  0% {
    background-position: 0% 50%;
  }

  50% {
    background-position: 100% 50%;
  }

  100% {
    background-position: 0% 50%;
  }
}

@keyframes bhk-divine-halo {
  0% {
    transform: scale(0.96);
    opacity: 0.65;
  }

  50% {
    transform: scale(1.08);
    opacity: 0.9;
  }

  100% {
    transform: scale(0.96);
    opacity: 0.65;
  }
}

.bhk-turntable__button {
  background: linear-gradient(135deg, #ffb14a, #ff7a1f);
  color: #2b1400;
  border: none;
  border-radius: 999rpx;
  height: 78rpx;
  font-size: 32rpx;
  box-shadow: 0 12rpx 28rpx rgba(255, 120, 24, 0.42), 0 0 0 1rpx rgba(255, 205, 140, 0.55);
  transition: transform 0.15s ease, box-shadow 0.15s ease;
}

.bhk-turntable__button:active {
  transform: translateY(2rpx) scale(0.99);
  box-shadow: 0 8rpx 16rpx rgba(255, 120, 24, 0.38), 0 0 0 1rpx rgba(255, 205, 140, 0.55);
}

.bhk-turntable__button::after {
  border: none;
}

.bhk-turntable__button--divine {
  position: relative;
  overflow: visible;
  background: linear-gradient(135deg, #ffcb66, #ff8f33, #ffb14a);
  background-size: 200% 200%;
  color: #2c1200;
  box-shadow: 0 20rpx 52rpx rgba(255, 136, 36, 0.68), 0 0 0 2rpx rgba(255, 210, 140, 0.85);
  animation: bhk-divine-glow 1.4s ease-in-out infinite, bhk-divine-shimmer 3.2s linear infinite;
}

.bhk-turntable__button--divine::before {
  content: '';
  position: absolute;
  inset: -14rpx;
  border-radius: inherit;
  background: radial-gradient(circle at 50% 50%, rgba(255, 221, 164, 0.6), rgba(255, 153, 51, 0));
  filter: blur(6rpx);
  z-index: -1;
  animation: bhk-divine-halo 1.8s ease-in-out infinite;
}

.bhk-turntable__status,
.bhk-turntable__assist {
  margin-top: 8rpx;
  color: rgba(255, 236, 210, 0.86);
  font-size: 26rpx;
}

.bhk-share__desc {
  color: rgba(255, 236, 210, 0.85);
  margin-bottom: 12rpx;
}

.bhk-share__actions {
  display: flex;
  gap: 16rpx;
}

.bhk-share__button {
  flex: 1;
}

.bhk-share__hint {
  margin-top: 12rpx;
  color: rgba(255, 236, 210, 0.78);
  font-size: 24rpx;
}

.bhk-share__helpers {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 16rpx;
}

.bhk-share__helper {
  display: grid;
  grid-template-columns: 80rpx 1fr 160rpx;
  align-items: center;
  padding: 12rpx 14rpx;
  background: rgba(22, 16, 8, 0.35);
  border: 1rpx solid rgba(255, 211, 149, 0.15);
  border-radius: 16rpx;
  gap: 12rpx;
}

.bhk-share__role {
  color: #ffd480;
  font-weight: 700;
  font-size: 26rpx;
}

.bhk-share__member {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.bhk-share__avatar-wrapper {
  position: relative;
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  overflow: hidden;
}

.bhk-share__avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.bhk-share__avatar-frame {
  position: absolute;
  inset: 0;
  top: -12%;
  left: -12%;
  width: 124%;
  height: 124%;
  pointer-events: none;
}

.bhk-share__member-info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.bhk-share__member-name {
  color: #ffe8c5;
  font-weight: 700;
  text-align: center;
}

.bhk-share__member-tags {
  display: flex;
  align-items: center;
  gap: 8rpx;
  flex-wrap: wrap;
}

.bhk-share__member-tag {
  padding: 6rpx 10rpx;
  border-radius: 12rpx;
  background: rgba(255, 231, 198, 0.12);
  border: 1rpx solid rgba(255, 212, 128, 0.24);
  color: rgba(255, 236, 210, 0.88);
  font-size: 22rpx;
  text-shadow: 0 1rpx 2rpx rgba(0, 0, 0, 0.35);
}

.bhk-share__member-tag--image {
  padding: 0;
  border: none;
  background: none;
  height: 44rpx;
  width: auto;
  display: block;
}

.bhk-share__action {
  display: flex;
  justify-content: flex-end;
}

.bhk-share__assist-button {
  min-width: 140rpx;
  background: linear-gradient(135deg, #f8d17a, #f4a54b);
  color: #2b1400;
  border: none;
}

.bhk-share__assist-button::after {
  border: none;
}

.bhk-share__assist-text {
  color: rgba(255, 236, 210, 0.86);
  font-weight: 600;
}

.bhk-info__list {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  color: rgba(255, 236, 210, 0.86);
}

.bhk-info__item {
  line-height: 1.6;
}

.bhk-section-title {
  font-size: 32rpx;
  font-weight: 700;
  margin-bottom: 12rpx;
  color: #ffd480;
}

.bhk-footer {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 36rpx 20rpx;
  background: rgba(5, 8, 20, 0.92);
  border-top: 1rpx solid rgba(255, 211, 149, 0.25);
  display: flex;
  align-items: center;
  gap: 16rpx;
  box-sizing: border-box;
  z-index: 6;
}

.bhk-footer__price {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffd480;
}

.bhk-footer__note {
  flex: 1;
  color: rgba(255, 236, 210, 0.78);
}

.bhk-footer__button {
  min-width: 220rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #f8d17a, #f4a54b);
  color: #2b1400;
  border: none;
}

.bhk-footer__button::after {
  border: none;
}

.bhk-overlay {
  position: fixed;
  inset: 0;
  background: rgba(0, 0, 0, 0.75);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
}

.bhk-overlay__card {
  width: 80%;
  background: rgba(13, 18, 35, 0.98);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  text-align: center;
  border: 1rpx solid rgba(255, 211, 149, 0.45);
  box-shadow: 0 18rpx 48rpx rgba(0, 0, 0, 0.6);
  color: #ffeedd;
}

.bhk-overlay__card--wide {
  width: 88%;
}

.bhk-overlay__title {
  font-size: 32rpx;
  font-weight: 700;
  color: #ffd480;
}

.bhk-overlay__amount {
  margin-top: 12rpx;
  font-size: 56rpx;
  font-weight: 800;
  color: #ffda89;
}

.bhk-overlay__button {
  margin-top: 20rpx;
  border-radius: 999rpx;
  background: linear-gradient(135deg, #f9d17a, #f0a64c);
  color: #2b1400;
  border: none;
}

.bhk-overlay__button::after {
  border: none;
}

.bhk-overlay__rules {
  margin-top: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 8rpx;
  text-align: left;
  color: rgba(255, 236, 210, 0.9);
  line-height: 1.6;
}

.bhk-overlay__rule {
  padding: 8rpx 0;
}
