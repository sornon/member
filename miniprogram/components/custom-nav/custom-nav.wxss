.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 999;
  box-sizing: border-box;
  background: rgba(5, 9, 33, 0.92);
  color: #eff2ff;
  backdrop-filter: blur(18rpx);
  border-bottom: 1rpx solid rgba(119, 138, 230, 0.25);
}

.custom-nav .nav-content {
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
  width: 100%;
  color: inherit;
}

.custom-nav .nav-title {
  font-size: 32rpx;
  font-weight: 600;
  color: inherit;
  text-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.35);
  letter-spacing: 4rpx;
}

.custom-nav .back-button {
  position: absolute;
  left: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(239, 242, 255, 0.12);
  border: 1rpx solid rgba(157, 175, 255, 0.25);
}

.custom-nav .back-icon {
  font-size: 44rpx;
  color: inherit;
}

.custom-nav .nav-extra {
  position: absolute;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  display: flex;
  align-items: center;
  gap: 16rpx;
  color: inherit;
}

.custom-nav.light,
.custom-nav.dark {
  background: rgba(5, 9, 33, 0.92);
  color: #eff2ff;
}

.custom-nav.light .back-button,
.custom-nav.dark .back-button {
  background: rgba(239, 242, 255, 0.12);
  border-color: rgba(157, 175, 255, 0.25);
}

.custom-nav.light .back-icon,
.custom-nav.dark .back-icon {
  color: inherit;
}

.nav-placeholder {
  width: 100%;
  background: transparent;
}
