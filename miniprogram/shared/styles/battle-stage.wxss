page {
  background: #050921;
}

.battle-stage {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  color: #f2f6ff;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.battle-video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.battle-fallback {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: none;
  z-index: 1;
}

@keyframes backgroundPulse {
  0% {
    transform: scale(1);
    opacity: 0.9;
  }
  50% {
    transform: scale(1.05);
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 0.9;
  }
}

.battle-content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  padding: 180rpx 20rpx 60rpx;
  box-sizing: border-box;
}

.battle-scoreboard {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 24rpx;
}

.actor-card.attacker-card {
  order: 0;
}

.actor-card.defender-card {
  order: 1;
}

.actor-card {
  width: 300rpx;
  padding: 28rpx;
  background: rgba(8, 18, 48, 0.65);
  border: 1rpx solid rgba(126, 175, 255, 0.25);
  border-radius: 24rpx;
  backdrop-filter: blur(6rpx);
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  align-items: flex-start;
}

.actor-card.actor-player {
  text-align: right;
  align-items: flex-end;
}

.actor-card.attacker-card.actor-player {
  text-align: left;
  align-items: flex-start;
}

.actor-card.attacker-card.actor-player .actor-meta,
.actor-card.attacker-card.actor-player .hp-text {
  align-self: flex-start;
}

.actor-card.defender-card.actor-opponent {
  text-align: right;
  align-items: flex-end;
}

.actor-card.defender-card.actor-opponent .actor-meta,
.actor-card.defender-card.actor-opponent .hp-text {
  align-self: flex-end;
}

.actor-card .actor-name {
  font-size: 32rpx;
  font-weight: 600;
  max-width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.actor-card .actor-meta {
  margin-top: 0;
  font-size: 24rpx;
  color: rgba(226, 235, 255, 0.7);
}

.hp-track {
  position: relative;
  height: 14rpx;
  margin: 24rpx 0 12rpx;
  background: rgba(255, 255, 255, 0.15);
  border-radius: 10rpx;
  overflow: hidden;
  width: 100%;
  align-self: stretch;
}

.hp-progress {
  height: 100%;
  border-radius: 10rpx;
  transition: width 0.4s ease;
}

.hp-player {
  background: linear-gradient(90deg, #4fe8a4, #38d2ff);
}

.hp-opponent {
  background: linear-gradient(90deg, #ff8a85, #ffb347);
}

.hp-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.85);
}

.actor-card__header {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 16rpx;
}

.actor-card.actor-player .actor-card__header {
  flex-direction: row-reverse;
}

.actor-card.attacker-card.actor-player .actor-card__header {
  flex-direction: row;
}

.actor-card.defender-card.actor-opponent .actor-card__header {
  flex-direction: row-reverse;
}

.actor-card__avatar {
  position: relative;
  width: 88rpx;
  height: 88rpx;
  flex-shrink: 0;
}

.actor-card__avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  display: block;
}

.actor-card__avatar-frame {
  position: absolute;
  top: -20%;
  left: -20%;
  width: 140%;
  height: 140%;
  pointer-events: none;
}

.actor-card__info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  flex: 1;
  min-width: 0;
}

.actor-card.actor-player .actor-card__info {
  align-items: flex-end;
  text-align: right;
}

.actor-card.attacker-card.actor-player .actor-card__info {
  align-items: flex-start;
  text-align: left;
}

.actor-card.defender-card.actor-opponent .actor-card__info {
  align-items: flex-end;
  text-align: right;
}

.actor-title {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  max-width: 100%;
}

.actor-card.actor-player .actor-title {
  justify-content: flex-end;
}

.actor-card.attacker-card.actor-player .actor-title {
  justify-content: flex-start;
}

.actor-card.defender-card.actor-opponent .actor-title {
  justify-content: flex-end;
}

.actor-title__image {
  height: 36rpx;
  max-width: 180rpx;
  width: auto;
  display: block;
}

.actor-title__text {
  font-size: 22rpx;
  color: rgba(226, 235, 255, 0.7);
  max-width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.actor-card.actor-player .actor-meta,
.actor-card.actor-player .hp-text {
  align-self: flex-end;
}

.battle-avatars {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 0 140rpx;
  gap: 64rpx;
}

.avatar-wrapper {
  position: relative;
  width: 280rpx;
  height: 360rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 12rpx;
  z-index: 1;
}

.avatar-wrapper.attacker {
  order: 0;
}

.avatar-wrapper.defender {
  order: 1;
}

.floating-text-layer {
  position: absolute;
  bottom: calc(100% - 32rpx);
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  pointer-events: none;
  min-width: 120rpx;
  z-index: 2;
}

.floating-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #f9fbff;
  text-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.6);
  white-space: nowrap;
  animation: floatingTextRise 1.2s ease-out forwards;
  opacity: 0;
}

.floating-text.floating-skill {
  font-size: 30rpx;
  letter-spacing: 2rpx;
}

.floating-text.floating-damage {
  color: #ff7070;
}

.floating-text.floating-heal {
  color: #70ffb4;
}

.floating-text.floating-dodge {
  color: #f2f6ff;
}

.floating-text.floating-crit {
  color: #ffd46d;
  font-size: 56rpx;
  animation-name: floatingCritBurst;
  animation-duration: 0.75s;
}

.floating-text.floating-basic-attack-skill {
  font-size: 34rpx;
  letter-spacing: 6rpx;
  animation: basicAttackSkillPulse 1.05s cubic-bezier(0.28, 1.4, 0.32, 1) forwards;
  transform-origin: center;
}

@keyframes floatingTextRise {
  0% {
    opacity: 0;
    transform: translateY(24rpx) scale(0.92);
  }
  20% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
  80% {
    opacity: 1;
    transform: translateY(-42rpx) scale(1.05);
  }
  100% {
    opacity: 0;
    transform: translateY(-60rpx) scale(0.95);
  }
}

@keyframes floatingCritBurst {
  0% {
    opacity: 0;
    transform: translateY(20rpx) scale(0.6);
  }
  15% {
    opacity: 1;
    transform: translateY(-4rpx) scale(1.25);
  }
  55% {
    opacity: 1;
    transform: translateY(-46rpx) scale(1.1);
  }
  100% {
    opacity: 0;
    transform: translateY(-78rpx) scale(0.85);
  }
}

@keyframes basicAttackSkillPulse {
  0% {
    opacity: 0;
    transform: scale(0.4);
  }
  22% {
    opacity: 1;
    transform: scale(1.08);
  }
  60% {
    opacity: 1;
    transform: scale(1);
  }
  100% {
    opacity: 0;
    transform: scale(0.94);
  }
}

.avatar-inner {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  transform-origin: bottom center;
}

.actor-portrait {
  width: 100%;
  height: 100%;
  object-fit: contain;
}

.avatar-wrapper.is-attacking .avatar-inner {
  animation: attackPulse 0.7s ease;
}

.avatar-wrapper.is-hit .avatar-inner {
  animation: hitShake 0.6s ease;
}

.avatar-wrapper.motion-basic-attack.is-attacking {
  z-index: 6;
}

.avatar-wrapper.motion-basic-attack.is-attacking .avatar-inner {
  animation: none;
}

.avatar-wrapper.attacker.motion-basic-attack.is-attacking .avatar-inner {
  animation: basicAttackDashRight 0.7s cubic-bezier(0.28, 1.45, 0.6, 1);
}

.avatar-wrapper.defender.motion-basic-attack.is-attacking .avatar-inner {
  animation: basicAttackDashLeft 0.7s cubic-bezier(0.28, 1.45, 0.6, 1);
}

.avatar-wrapper.attacker.motion-basic-attack.motion-critical.is-attacking .avatar-inner {
  animation: basicAttackCritDashRight 0.82s cubic-bezier(0.3, 1.1, 0.58, 1);
}

.avatar-wrapper.defender.motion-basic-attack.motion-critical.is-attacking .avatar-inner {
  animation: basicAttackCritDashLeft 0.82s cubic-bezier(0.3, 1.1, 0.58, 1);
}

.avatar-wrapper.motion-hit.is-hit .avatar-inner,
.avatar-wrapper.motion-dodged.is-hit .avatar-inner {
  animation: none;
}

.avatar-wrapper.attacker.motion-hit.is-hit .avatar-inner {
  animation: basicAttackHitLeft 0.6s cubic-bezier(0.36, 1.3, 0.5, 1);
}

.avatar-wrapper.defender.motion-hit.is-hit .avatar-inner {
  animation: basicAttackHitRight 0.6s cubic-bezier(0.36, 1.3, 0.5, 1);
}

.avatar-wrapper.motion-hit.is-hit .actor-portrait {
  animation: basicAttackHitTint 0.6s cubic-bezier(0.36, 1.3, 0.5, 1);
}

.avatar-wrapper.attacker.motion-dodged.is-hit .avatar-inner {
  animation: dodgeStepLeft 0.6s cubic-bezier(0.18, 0.9, 0.25, 1);
}

.avatar-wrapper.defender.motion-dodged.is-hit .avatar-inner {
  animation: dodgeStepRight 0.6s cubic-bezier(0.18, 0.9, 0.25, 1);
}

.avatar-wrapper.motion-dodged.is-hit .actor-portrait {
  animation: dodgeFade 0.6s cubic-bezier(0.18, 0.9, 0.25, 1);
}

.avatar-wrapper.attacker .actor-portrait {
  transform: scaleX(-1);
}

.avatar-wrapper.defender .actor-portrait {
  transform: scaleX(1);
}

@keyframes attackPulse {
  0% {
    transform: scale(1);
  }
  40% {
    transform: scale(1.08) translateY(-10rpx);
  }
  100% {
    transform: scale(1);
  }
}

@keyframes hitShake {
  0%,
  100% {
    transform: translateX(0);
  }
  20% {
    transform: translateX(-12rpx);
  }
  40% {
    transform: translateX(10rpx);
  }
  60% {
    transform: translateX(-6rpx);
  }
  80% {
    transform: translateX(4rpx);
  }
}

@keyframes basicAttackDashRight {
  0% {
    transform: translateX(0);
    animation-timing-function: cubic-bezier(0.16, 0.84, 0.44, 1.2);
  }
  34% {
    transform: translateX(250rpx);
    animation-timing-function: cubic-bezier(0.78, 0.02, 0.86, 0.2);
  }
  36% {
    transform: translateX(250rpx);
    animation-timing-function: cubic-bezier(0.16, 0.84, 0.44, 1.2);
  }
  38% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(0);
  }
}

@keyframes basicAttackDashLeft {
  0% {
    transform: translateX(0);
    animation-timing-function: cubic-bezier(0.16, 0.84, 0.44, 1.2);
  }
  34% {
    transform: translateX(-250rpx);
    animation-timing-function: cubic-bezier(0.78, 0.02, 0.86, 0.2);
  }
  36% {
    transform: translateX(-250rpx);
    animation-timing-function: cubic-bezier(0.16, 0.84, 0.44, 1.2);
  }
  38% {
    transform: translateX(0);
  }
  100% {
    transform: translateX(0);
  }
}

@keyframes basicAttackCritDashRight {
  0% {
    transform: translateX(0);
    animation-timing-function: cubic-bezier(0.36, 0, 0.4, 1);
  }
  32% {
    transform: translateX(-50rpx);
    animation-timing-function: cubic-bezier(0.88, -0.28, 0.94, 0.22);
  }
  52% {
    transform: translateX(350rpx);
    animation-timing-function: cubic-bezier(0.24, 1.1, 0.5, 1);
  }
  56% {
    transform: translateX(0);
    animation-timing-function: cubic-bezier(0.16, 0.84, 0.44, 1.2);
  }
  100% {
    transform: translateX(0);
  }
}

@keyframes basicAttackCritDashLeft {
  0% {
    transform: translateX(0);
    animation-timing-function: cubic-bezier(0.36, 0, 0.4, 1);
  }
  32% {
    transform: translateX(50rpx);
    animation-timing-function: cubic-bezier(0.88, -0.28, 0.94, 0.22);
  }
  52% {
    transform: translateX(-350rpx);
    animation-timing-function: cubic-bezier(0.24, 1.1, 0.5, 1);
  }
  56% {
    transform: translateX(0);
    animation-timing-function: cubic-bezier(0.16, 0.84, 0.44, 1.2);
  }
  100% {
    transform: translateX(0);
  }
}

@keyframes basicAttackHitRight {
  0% {
    transform: translateX(0);
  }
  20% {
    transform: translateX(42rpx);
  }
  38% {
    transform: translateX(-20rpx);
  }
  56% {
    transform: translateX(24rpx);
  }
  74% {
    transform: translateX(-10rpx);
  }
  100% {
    transform: translateX(0);
  }
}

@keyframes basicAttackHitLeft {
  0% {
    transform: translateX(0);
  }
  20% {
    transform: translateX(-42rpx);
  }
  38% {
    transform: translateX(20rpx);
  }
  56% {
    transform: translateX(-24rpx);
  }
  74% {
    transform: translateX(10rpx);
  }
  100% {
    transform: translateX(0);
  }
}

@keyframes basicAttackHitTint {
  0% {
    filter: none;
  }
  18% {
    filter: saturate(165%) brightness(0.85) hue-rotate(-15deg);
  }
  48% {
    filter: saturate(140%) brightness(0.92);
  }
  100% {
    filter: none;
  }
}

@keyframes dodgeStepRight {
  0% {
    transform: translateX(0) scale(1);
  }
  28% {
    transform: translateX(70rpx) scale(0.97);
  }
  54% {
    transform: translateX(110rpx) scale(1.03);
  }
  78% {
    transform: translateX(60rpx) scale(1);
  }
  100% {
    transform: translateX(0) scale(1);
  }
}

@keyframes dodgeStepLeft {
  0% {
    transform: translateX(0) scale(1);
  }
  28% {
    transform: translateX(-70rpx) scale(0.97);
  }
  54% {
    transform: translateX(-110rpx) scale(1.03);
  }
  78% {
    transform: translateX(-60rpx) scale(1);
  }
  100% {
    transform: translateX(0) scale(1);
  }
}

@keyframes dodgeFade {
  0% {
    filter: none;
    opacity: 1;
  }
  30% {
    filter: brightness(1.18) saturate(120%);
    opacity: 0.9;
  }
  60% {
    filter: brightness(1.08);
    opacity: 1;
  }
  100% {
    filter: none;
    opacity: 1;
  }
}

.battle-controls {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-top: 28rpx;
}

.control-button {
  padding: 0 28rpx;
  border-radius: 999rpx;
  background: rgba(12, 22, 52, 0.6);
  color: #f2f6ff;
  border: 1rpx solid rgba(158, 203, 255, 0.4);
}

.control-button[disabled] {
  opacity: 0.6;
}

.battle-loading {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: rgba(230, 238, 255, 0.9);
  z-index: 3;
  background: rgba(5, 9, 33, 0.82);
}

.battle-result-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 4;
  pointer-events: none;
}

.result-card {
  width: 520rpx;
  padding: 48rpx 36rpx;
  border-radius: 32rpx;
  text-align: center;
  box-shadow: 0 20rpx 48rpx rgba(0, 0, 0, 0.45);
  background: linear-gradient(135deg, rgba(16, 28, 68, 0.95), rgba(4, 10, 30, 0.92));
  border: 1rpx solid rgba(158, 203, 255, 0.35);
}

.result-card.victory {
  border-color: rgba(125, 255, 199, 0.6);
  box-shadow: 0 24rpx 64rpx rgba(74, 255, 199, 0.25);
}

.result-card.defeat {
  border-color: rgba(255, 140, 140, 0.6);
  box-shadow: 0 24rpx 64rpx rgba(255, 96, 112, 0.25);
}

.result-card.draw {
  border-color: rgba(255, 211, 135, 0.6);
  box-shadow: 0 24rpx 64rpx rgba(255, 211, 135, 0.25);
}

.result-title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}

.result-subtitle {
  font-size: 26rpx;
  margin-bottom: 16rpx;
  color: rgba(226, 235, 255, 0.85);
}

.result-summary {
  font-size: 24rpx;
  color: rgba(226, 235, 255, 0.7);
}
