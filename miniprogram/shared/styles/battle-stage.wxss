page {
  background: #050921;
}

.battle-stage {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
  color: #f2f6ff;
  font-family: 'PingFang SC', 'Microsoft YaHei', sans-serif;
}

.battle-video {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 0;
}

.battle-fallback {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: none;
  z-index: 1;
}

@keyframes backgroundPulse {
  0% {
    transform: scale(1);
    opacity: 0.9;
  }
  50% {
    transform: scale(1.05);
    opacity: 1;
  }
  100% {
    transform: scale(1);
    opacity: 0.9;
  }
}

.battle-content {
  position: relative;
  z-index: 2;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100%;
  padding: 180rpx 20rpx 60rpx;
  box-sizing: border-box;
}

.battle-scoreboard {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 24rpx;
  backdrop-filter: blur(6rpx);
  background: rgba(8, 18, 48, 0.65);
  border: 1rpx solid rgba(126, 175, 255, 0.25);
  border-radius: 24rpx;
}

.battle-round-display {
  text-align: center;
  font-size: 32rpx;
  font-weight: 600;
  color: #f4f8ff;
  letter-spacing: 4rpx;
  text-shadow: 0 0 14rpx rgba(82, 178, 255, 0.45);
  white-space: nowrap;
  align-self: center;
  position: absolute;
  left: 50%;
  top: 460rpx;
  margin-left: -110rpx;
  width: 110px;
  background: #00000091;
  border-radius: 999rpx;
  padding: 10rpx 0;
}

.actor-card.attacker-card {
  order: 0;
}

.actor-card.defender-card {
  order: 1;
}

.actor-card {
  width: 300rpx;
  padding: 28rpx;
  border-radius: 24rpx;
  display: flex;
  flex-direction: column;
  gap: 12rpx;
  align-items: flex-start;
}

.actor-card.actor-player {
  text-align: right;
  align-items: flex-end;
}

.actor-card.attacker-card.actor-player {
  text-align: left;
  align-items: flex-start;
}

.actor-card.attacker-card.actor-player .actor-meta {
  align-self: flex-start;
}

.actor-card.defender-card.actor-opponent {
  text-align: right;
  align-items: flex-end;
}

.actor-card.defender-card.actor-opponent .actor-meta {
  align-self: flex-end;
}

.actor-card .actor-name {
  font-size: 32rpx;
  font-weight: 600;
  max-width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.actor-card .actor-meta {
  margin-top: 0;
  font-size: 24rpx;
  color: rgba(226, 235, 255, 0.7);
}

.track-row {
  width: 100%;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.track-title {
  font-size: 20rpx;
  color: rgba(226, 235, 255, 0.7);
  min-width: 28rpx;
  white-space: nowrap;
  text-align: left;
}

.hp-track {
  position: relative;
  flex: 1;
  height: 22rpx;
  background: rgba(255, 94, 94, 0.24);
  border-radius: 999rpx;
  overflow: hidden;
}

.hp-progress {
  height: 100%;
  transition: width 0.4s ease;
}

.hp-player,
.hp-opponent {
  background: linear-gradient(180deg, #F44336 0%, #ff484a 100%)
}

.resource-track {
  position: relative;
  flex: 1;
  height: 22rpx;
  background: rgba(72, 144, 255, 0.24);
  border-radius: 999rpx;
  overflow: hidden;
}

.resource-progress {
  height: 100%;
  border-radius: 999rpx;
  transition: width 0.4s ease;
}

.resource-player,
.resource-opponent {
  background: linear-gradient(180deg, #03A9F4 0%, #2f7dff 100%);
}

.track-label {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 100%;
  text-align: center;
  font-size: 20rpx;
  color: #ffffff;
  text-shadow: 0 0 10rpx rgba(0, 0, 0, 0.35);
  pointer-events: none;
  white-space: nowrap;
}

.hp-label {
  font-size: 20rpx;
}

.resource-label {
  font-size: 20rpx;
}


.actor-card__header {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 16rpx;
}

.actor-card.actor-player .actor-card__header {
  flex-direction: row-reverse;
}

.actor-card.attacker-card.actor-player .actor-card__header {
  flex-direction: row;
}

.actor-card.defender-card.actor-opponent .actor-card__header {
  flex-direction: row-reverse;
}

.actor-card__avatar {
  position: relative;
  width: 88rpx;
  height: 88rpx;
  flex-shrink: 0;
}

.actor-card__avatar-inner {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}

.actor-card__avatar-image {
  width: 100%;
  height: 100%;
  display: block;
}

.actor-card__avatar-frame {
  position: absolute;
  top: -15%;
  left: -15%;
  width: 130%;
  height: 130%;
  pointer-events: none;
}

.actor-card__info {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  flex: 1;
  min-width: 0;
}

.actor-card.actor-player .actor-card__info {
  align-items: flex-end;
  text-align: right;
}

.actor-card.attacker-card.actor-player .actor-card__info {
  align-items: flex-start;
  text-align: left;
}

.actor-card.defender-card.actor-opponent .actor-card__info {
  align-items: flex-end;
  text-align: right;
}

.actor-card__title {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  gap: 8rpx;
  max-width: 100%;
  min-height: 48rpx;
}

.actor-card.actor-player .actor-card__title {
  justify-content: flex-end;
}

.actor-card.attacker-card.actor-player .actor-card__title {
  justify-content: flex-start;
}

.actor-card.defender-card.actor-opponent .actor-card__title {
  justify-content: flex-end;
}

.actor-card__title-image {
  height: 48rpx;
  max-width: 180rpx;
  width: auto;
  display: block;
}

.actor-card__title-text {
  font-size: 24rpx;
  color: rgba(226, 235, 255, 0.75);
  max-width: 100%;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.actor-card.actor-player .actor-meta {
  align-self: flex-end;
}

.battle-avatars {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0 0 140rpx;
  gap: 64rpx;
}

.avatar-wrapper {
  position: relative;
  width: 280rpx;
  height: 360rpx;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  padding-bottom: 12rpx;
  z-index: 1;
}

.avatar-wrapper.attacker {
  order: 0;
}

.avatar-wrapper.defender {
  order: 1;
}

.floating-text-layer {
  position: absolute;
  bottom: calc(100% - 32rpx);
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  pointer-events: none;
  min-width: 120rpx;
  z-index: 2;
}

.floating-text {
  font-size: 28rpx;
  font-weight: 600;
  color: #f9fbff;
  text-shadow: 0 6rpx 18rpx rgba(0, 0, 0, 0.6);
  white-space: nowrap;
  animation: floatingTextRise 1.2s ease-out forwards;
  opacity: 0;
}

.floating-text.floating-skill {
  font-size: inherit;
  letter-spacing: 0;
}

.floating-text.floating-damage {
  color: #ff7070;
}

.floating-text.floating-heal {
  color: #70ffb4;
}

.floating-text.floating-dodge {
  color: #f2f6ff;
}

.floating-text.floating-crit {
  color: #ffd46d;
  font-size: 56rpx;
  animation-name: floatingCritBurst;
  animation-duration: 0.75s;
}

.floating-text.floating-resource {
  color: #042c44;
  background: rgba(113, 213, 255, 0.9);
  padding: 6rpx 20rpx;
  border-radius: 18rpx;
  border: 1rpx solid rgba(169, 232, 255, 0.45);
  box-shadow: 0 6rpx 18rpx rgba(64, 196, 255, 0.35);
}

@keyframes floatingTextRise {
  0% {
    opacity: 0;
    transform: translateY(24rpx) scale(0.92);
  }
  20% {
    opacity: 1;
    transform: translateY(0) scale(1);
  }
  80% {
    opacity: 1;
    transform: translateY(-42rpx) scale(1.05);
  }
  100% {
    opacity: 0;
    transform: translateY(-60rpx) scale(0.95);
  }
}

@keyframes floatingCritBurst {
  0% {
    opacity: 0;
    transform: translateY(20rpx) scale(0.6);
  }
  15% {
    opacity: 1;
    transform: translateY(-4rpx) scale(1.25);
  }
  55% {
    opacity: 1;
    transform: translateY(-46rpx) scale(1.1);
  }
  100% {
    opacity: 0;
    transform: translateY(-78rpx) scale(0.85);
  }
}

.avatar-inner {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: flex-end;
  justify-content: center;
  transform-origin: bottom center;
  transform: translateX(0) translateY(0);
  transition: transform 0.24s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.actor-portrait {
  width: 100%;
  height: 100%;
  object-fit: contain;
}


.avatar-wrapper.attack-active {
  z-index: 5;
}

.avatar-wrapper.attacker.target-under-attack {
  z-index: 4;
}

.avatar-wrapper.defender.target-under-attack {
  z-index: 4;
}

.avatar-wrapper.attacker.attack-phase-windup .avatar-inner {
  transform: translateX(-140rpx) translateY(18rpx);
  transition-duration: 0.2s;
  transition-timing-function: cubic-bezier(0.55, 0.02, 0.75, 0.4);
}

.avatar-wrapper.attacker.attack-phase-prelaunch .avatar-inner {
  transform: translateX(-140rpx) translateY(18rpx);
  transition-duration: 0.12s;
  transition-timing-function: cubic-bezier(0.25, 0.15, 0.25, 1);
}

.avatar-wrapper.attacker.attack-phase-charging .avatar-inner {
  transform: translateX(260rpx) translateY(0);
  transition-duration: 0.34s;
  transition-timing-function: cubic-bezier(0.28, 0.16, 0.46, 0.98);
}

.avatar-wrapper.attacker.attack-motion-crit.attack-phase-windup .avatar-inner {
  transform: translateX(-80rpx) translateY(0);
  transition-duration: 0.24s;
  transition-timing-function: cubic-bezier(0.1, 0.9, 0.32, 1);
}

.avatar-wrapper.attacker.attack-motion-crit.attack-phase-windup .actor-portrait,
.avatar-wrapper.defender.attack-motion-crit.attack-phase-windup .actor-portrait,
.avatar-wrapper.attacker.attack-motion-crit.attack-phase-prelaunch .actor-portrait,
.avatar-wrapper.defender.attack-motion-crit.attack-phase-prelaunch .actor-portrait {
  animation: critWindupFlash 0.3s ease-in-out infinite;
}

.avatar-wrapper.attacker.attack-motion-crit.attack-phase-prelaunch .avatar-inner {
  transform: translateX(-80rpx) translateY(0);
  transition-duration: 0.12s;
  transition-timing-function: cubic-bezier(0.1, 0.9, 0.32, 1);
}

.avatar-wrapper.attacker.attack-motion-crit.attack-phase-charging .avatar-inner {
  animation: attackerCritCharge 0.24s linear forwards;
  transition: none;
}

@keyframes attackerCritCharge {
  0% {
    transform: translateX(-80rpx) translateY(0);
  }
  10% {
    transform: translateX(-64rpx) translateY(-32rpx);
  }
  20% {
    transform: translateX(-22rpx) translateY(-92rpx);
  }
  30% {
    transform: translateX(28rpx) translateY(-144rpx);
  }
  40% {
    transform: translateX(70rpx) translateY(-182rpx);
  }
  50% {
    transform: translateX(120rpx) translateY(-200rpx);
  }
  60% {
    transform: translateX(178rpx) translateY(-182rpx);
  }
  70% {
    transform: translateX(238rpx) translateY(-144rpx);
  }
  80% {
    transform: translateX(288rpx) translateY(-92rpx);
  }
  90% {
    transform: translateX(312rpx) translateY(-32rpx);
  }
  100% {
    transform: translateX(320rpx) translateY(0);
  }
}

@keyframes critWindupFlash {
  0% {
    filter: saturate(1.05) brightness(1.02) sepia(0.18) hue-rotate(-12deg);
  }
  45% {
    filter: saturate(1.45) brightness(1.22) sepia(0.35) hue-rotate(-6deg);
  }
  70% {
    filter: saturate(1.25) brightness(1.12) sepia(0.26) hue-rotate(-10deg);
  }
  100% {
    filter: saturate(1.05) brightness(1.02) sepia(0.18) hue-rotate(-12deg);
  }
}

.avatar-wrapper.attacker.attack-phase-impact .avatar-inner {
  transform: translateX(260rpx) translateY(0);
  transition-duration: 0.14s;
  transition-timing-function: cubic-bezier(0.11, 0.6, 0.3, 1);
}

.avatar-wrapper.attacker.attack-motion-crit.attack-phase-impact .avatar-inner {
  transform: translateX(300rpx) translateY(30rpx);
  transition-duration: 0.18s;
  transition-timing-function: cubic-bezier(0.16, 0.5, 0.3, 1);
}

.avatar-wrapper.attacker.attack-phase-recovery .avatar-inner {
  transform: translateX(0) translateY(0);
  transition-duration: 0.36s;
  transition-timing-function: cubic-bezier(0.45, 0, 0.2, 1);
}

.avatar-wrapper.attacker.attack-motion-crit.attack-phase-recovery .avatar-inner {
  transform: translateX(0) translateY(0);
  transition-duration: 0.38s;
  transition-timing-function: cubic-bezier(0.52, 0, 0.24, 1);
}

.avatar-wrapper.defender.attack-phase-windup .avatar-inner {
  transform: translateX(140rpx) translateY(18rpx);
  transition-duration: 0.2s;
  transition-timing-function: cubic-bezier(0.55, 0.02, 0.75, 0.4);
}

.avatar-wrapper.defender.attack-phase-prelaunch .avatar-inner {
  transform: translateX(140rpx) translateY(18rpx);
  transition-duration: 0.12s;
  transition-timing-function: cubic-bezier(0.25, 0.15, 0.25, 1);
}

.avatar-wrapper.defender.attack-phase-charging .avatar-inner {
  transform: translateX(-260rpx) translateY(0);
  transition-duration: 0.34s;
  transition-timing-function: cubic-bezier(0.28, 0.16, 0.46, 0.98);
}

.avatar-wrapper.defender.attack-motion-crit.attack-phase-windup .avatar-inner {
  transform: translateX(80rpx) translateY(0);
  transition-duration: 0.24s;
  transition-timing-function: cubic-bezier(0.1, 0.9, 0.32, 1);
}

.avatar-wrapper.defender.attack-motion-crit.attack-phase-prelaunch .avatar-inner {
  transform: translateX(80rpx) translateY(0);
  transition-duration: 0.12s;
  transition-timing-function: cubic-bezier(0.1, 0.9, 0.32, 1);
}

.avatar-wrapper.defender.attack-motion-crit.attack-phase-charging .avatar-inner {
  animation: defenderCritCharge 0.24s linear forwards;
  transition: none;
}

@keyframes defenderCritCharge {
  0% {
    transform: translateX(80rpx) translateY(0);
  }
  10% {
    transform: translateX(64rpx) translateY(-32rpx);
  }
  20% {
    transform: translateX(22rpx) translateY(-92rpx);
  }
  30% {
    transform: translateX(-28rpx) translateY(-144rpx);
  }
  40% {
    transform: translateX(-70rpx) translateY(-182rpx);
  }
  50% {
    transform: translateX(-120rpx) translateY(-200rpx);
  }
  60% {
    transform: translateX(-178rpx) translateY(-182rpx);
  }
  70% {
    transform: translateX(-238rpx) translateY(-144rpx);
  }
  80% {
    transform: translateX(-288rpx) translateY(-92rpx);
  }
  90% {
    transform: translateX(-312rpx) translateY(-32rpx);
  }
  100% {
    transform: translateX(-320rpx) translateY(0);
  }
}

.avatar-wrapper.defender.attack-phase-impact .avatar-inner {
  transform: translateX(-260rpx) translateY(0);
  transition-duration: 0.14s;
  transition-timing-function: cubic-bezier(0.11, 0.6, 0.3, 1);
}

.avatar-wrapper.defender.attack-motion-crit.attack-phase-impact .avatar-inner {
  transform: translateX(-300rpx) translateY(30rpx);
  transition-duration: 0.18s;
  transition-timing-function: cubic-bezier(0.16, 0.5, 0.3, 1);
}

.avatar-wrapper.defender.attack-phase-recovery .avatar-inner {
  transform: translateX(0) translateY(0);
  transition-duration: 0.36s;
  transition-timing-function: cubic-bezier(0.45, 0, 0.2, 1);
}

.avatar-wrapper.defender.attack-motion-crit.attack-phase-recovery .avatar-inner {
  transform: translateX(0) translateY(0);
  transition-duration: 0.38s;
  transition-timing-function: cubic-bezier(0.52, 0, 0.24, 1);
}

.avatar-wrapper.attacker.is-dodging .avatar-inner {
  transform: translateX(-160rpx);
  transition: transform 0.24s cubic-bezier(0.3, 0.02, 0.6, 0.94);
}

.avatar-wrapper.defender.is-dodging .avatar-inner {
  transform: translateX(160rpx);
  transition: transform 0.24s cubic-bezier(0.3, 0.02, 0.6, 0.94);
}

.avatar-wrapper.attacker.is-hit .actor-portrait {
  animation: targetHitShakeReverse 0.42s ease;
  filter: saturate(1.35) brightness(0.9) sepia(0.15) hue-rotate(-10deg);
}

.avatar-wrapper.defender.is-hit .actor-portrait {
  animation: targetHitShake 0.42s ease;
  filter: saturate(1.35) brightness(0.9) sepia(0.15) hue-rotate(-10deg);
}

.attack-indicator {
  font-size: 40rpx;
  font-weight: 700;
  color: #ffffff;
  text-shadow: 1rpx 1rpx 0 rgba(0, 0, 0, 1);
  opacity: 0;
  transform: scale(0.7);
  transform-origin: center;
  position: relative;
  bottom: 90rpx;
  white-space: nowrap;
}

.attack-indicator--quality-linggan {
  color: #6c8cff;
}

.attack-indicator--quality-kaipi {
  color: #45c0a8;
}

.attack-indicator--quality-tongxuan {
  color: #b281ff;
}

.attack-indicator--quality-wudao {
  color: #f2a546;
}

.attack-indicator--show {
  animation: attackIndicatorPop 0.22s cubic-bezier(0.21, 0.73, 0.29, 1) forwards;
}

.attack-indicator--leaving {
  animation: attackIndicatorFade 0.18s ease-in forwards;
}

.avatar-wrapper.attacker .actor-portrait {
  transform: scaleX(-1);
}

.avatar-wrapper.defender .actor-portrait {
  transform: scaleX(1);
}

@keyframes targetHitShake {
  0% {
    transform: scaleX(1) translateX(0);
  }
  20% {
    transform: scaleX(1) translateX(-24rpx);
  }
  40% {
    transform: scaleX(1) translateX(18rpx);
  }
  60% {
    transform: scaleX(1) translateX(-12rpx);
  }
  80% {
    transform: scaleX(1) translateX(6rpx);
  }
  100% {
    transform: scaleX(1) translateX(0);
  }
}

@keyframes targetHitShakeReverse {
  0% {
    transform: scaleX(-1) translateX(0);
  }
  20% {
    transform: scaleX(-1) translateX(24rpx);
  }
  40% {
    transform: scaleX(-1) translateX(-18rpx);
  }
  60% {
    transform: scaleX(-1) translateX(12rpx);
  }
  80% {
    transform: scaleX(-1) translateX(-6rpx);
  }
  100% {
    transform: scaleX(-1) translateX(0);
  }
}

@keyframes attackIndicatorPop {
  0% {
    opacity: 0;
    transform: scale(0.6);
  }
  60% {
    opacity: 1;
    transform: scale(1.08);
  }
  100% {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes attackIndicatorFade {
  0% {
    opacity: 1;
    transform: scale(1);
  }
  100% {
    opacity: 0;
    transform: scale(1);
  }
}

.battle-controls {
  display: flex;
  justify-content: center;
  gap: 24rpx;
  margin-top: 28rpx;
}

.control-button {
  padding: 0 28rpx;
  border-radius: 999rpx;
  background: rgba(12, 22, 52, 0.6);
  color: #f2f6ff;
  border: 1rpx solid rgba(158, 203, 255, 0.4);
}

.control-button[disabled] {
  opacity: 0.6;
}

.battle-loading {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: rgba(230, 238, 255, 0.9);
  z-index: 3;
  background: rgba(5, 9, 33, 0.82);
}

.battle-result-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 4;
  pointer-events: none;
}

.result-card {
  width: 520rpx;
  padding: 48rpx 36rpx;
  border-radius: 32rpx;
  text-align: center;
  box-shadow: 0 20rpx 48rpx rgba(0, 0, 0, 0.45);
  background: linear-gradient(135deg, rgba(16, 28, 68, 0.95), rgba(4, 10, 30, 0.92));
  border: 1rpx solid rgba(158, 203, 255, 0.35);
}

.result-card.victory {
  border-color: rgba(125, 255, 199, 0.6);
  box-shadow: 0 24rpx 64rpx rgba(74, 255, 199, 0.25);
}

.result-card.defeat {
  border-color: rgba(255, 140, 140, 0.6);
  box-shadow: 0 24rpx 64rpx rgba(255, 96, 112, 0.25);
}

.result-card.draw {
  border-color: rgba(255, 211, 135, 0.6);
  box-shadow: 0 24rpx 64rpx rgba(255, 211, 135, 0.25);
}

.result-title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}

.result-subtitle {
  font-size: 26rpx;
  margin-bottom: 16rpx;
  color: rgba(226, 235, 255, 0.85);
}

.result-summary {
  font-size: 24rpx;
  color: rgba(226, 235, 255, 0.7);
}
